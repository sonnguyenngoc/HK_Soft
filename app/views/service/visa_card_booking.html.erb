<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Dịch Vụ Làm Thẻ Visa</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li><%= link_to "Dịch Vụ Làm Thẻ Visa", plane_ticket_path %></li>
                <li class="active">Đăng Ký</li>
            </ul>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sms-6 col-sm-8 col-md-9">
                    <div class="booking-section travelo-box">
                        <%= form_for @booking_visa, html: {class: "booking-form", id: "booking_visa_validate"} do |f| %>  
                            <div class="person-information">
                                <h2>Thông Tin Khách Hàng</h2>
                                <div class="form-group row">
                                    <div class="col-sm-12 col-md-10">
                                        <label>Tên Khách Hàng *</label>
                                        <%= f.text_field :full_name, class: "input-text full-width required" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12 col-md-10">
                                        <label>Địa Chỉ *</label>
                                        <%= f.text_field :address, class: "input-text full-width required" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>Số Điện Thoại *</label>
                                        <%= f.text_field :phone, class: "input-text full-width required" %>
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Địa Chỉ Email *</label>
                                        <%= f.text_field :email, class: "input-text full-width required email" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>ID/Passport</label>
                                        <%= f.text_field :passport, class: "input-text full-width" %>
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Loại thẻ *</label>
                                        <div class="selector">
                                            <%= f.select(:visa_type, ['Visa Ngoại giao/Công vụ', 'Visa Lao động',  "Visa lưu trú ngắn hạn và hoạt động phi lợi nhuận", "Visa lưu trú dài hạn"], {}, { :class => 'full-width required' })%>
                                        </div>
                                    </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>Quốc gia đến *</label>
                                        <%= f.text_field :country_to, class: "input-text full-width required" %>
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Số CMND *</label>
                                        <%= f.text_field :cmnd_number, class: "input-text full-width required" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>Ngày cấp *</label>
                                        <div class="datepicker-wrap">
                                            <input type="text" name="booking_visa[date_of_issue]" id="booking_visa_date_of_issue" class="input-text full-width required" placeholder="yy/mm/dd" data-min-date="1900-01-01" data-change-year="1" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Nơi cấp *</label>
                                        <%= f.text_field :place_of_issue, class: "input-text full-width required" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <label>Lời Nhắn</label>
                                        <%= f.text_area :message, rows: '8', class: "input-text full-width" %>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" class="full-width btn-large">ĐẶT VÉ</button>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
                <div class="sidebar col-sms-6 col-sm-4 col-md-3">
                    
                    <%= render "/service/right_sidebar_plane_ticket" %>
                    
                    <%= render "/home/need_help" %>
                    
                    <%= render "/tour_handbook/right_sidebar" %>
                
                </div>
            </div>
        </div>
    </section>
    
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>

<script>
    jQuery(document).ready(function($){
        $("#booking_visa_validate").validate();
    });
</script>