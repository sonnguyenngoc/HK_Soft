<aside class="col-md-3 has_mega_menu">

    <section class="animated transparent" data-animation="fadeInDown" data-animation-delay="200">

        <h3>Danh má»¥c</h3>

        <ul class="theme_menu cats">
            
            <% @categories.each do |category| %>
            
                <% if category.children.count == 0 %>
                    
                    <% if category.level == 1 %>
                    
                        <li class="top"><a href="" class=""><%= category.name %></a></li>
                    
                    <% end %>
                    
                <% else %>

                    <li class="has_megamenu">
                        
                        <% if category.level == 1 %>
        
                            <a href="#"><%= category.name %></a>
                        
                        <% end %>
        
                        <!-- - - - - - - - - - - - - - Mega menu - - - - - - - - - - - - - - - - -->
        
                        <div class="mega_menu type_2 clearfix">
                            
                            <% category.children.each do |child_1| %>
        
                                <!-- - - - - - - - - - - - - - Mega menu item - - - - - - - - - - - - - - - - -->
            
                                <div class="mega_menu_item">
                                
                                    <h6><a href="#"><b><%= child_1.name %></b></a></h6>
                                
                                    <ul class="list_of_links">
                                        
                                        <% child_1.children.each do |child_2| %>
            
                                            <li><a href="#"><%= child_2.name %></a></li>
                                            
                                        <% end %>
            
                                    </ul>
            
                                </div><!--/ .mega_menu_item-->
            
                                <!-- - - - - - - - - - - - - - End of mega menu item - - - - - - - - - - - - - - - - -->
                            
                            <% end %>
        
                        </div><!--/ .mega_menu-->
        
                        <!-- - - - - - - - - - - - - - End of mega menu - - - - - - - - - - - - - - - - -->
        
                    </li>
                
                <% end %>
                
            <% end %>

        </ul>

    </section><!--/ .animated.transparent-->

</aside><!--/ [col]-->