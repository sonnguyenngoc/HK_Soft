<body class="<%= @class_body %>">

	<!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

	<div class="wide_layout">

		<!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

		<%= render "header" %>
		
		<!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

		<!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

		<div class="page_wrapper">

			<div class="container">

				<div class="section_offset">

					<div class="row">

						<!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->
						
						<%= render "categories" %>
						
						<!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

						<!-- - - - - - - - - - - - - - Main slider - - - - - - - - - - - - - - - - -->

						<%= render "main_slider" %>

						<!-- - - - - - - - - - - - - - End of main slider - - - - - - - - - - - - - - - - -->

					</div><!--/ .row-->

				</div><!--/ .section_offset-->

				<!-- - - - - - - - - - - - - - Infoblocks - - - - - - - - - - - - - - - - -->

				<%= render "infoblocks" %>

				<!-- - - - - - - - - - - - - - End of infoblocks - - - - - - - - - - - - - - - - -->

				<!-- - - - - - - - - - - - - - Today's deals - - - - - - - - - - - - - - - - -->

				<%= render "today_deals" %>

				<!-- - - - - - - - - - - - - - End of taday's deals - - - - - - - - - - - - - - - - -->

				<!-- - - - - - - - - - - - - - New arrivals - - - - - - - - - - - - - - - - -->

				<%= render "arrivals" %>

				<!-- - - - - - - - - - - - - - End of new arrivals - - - - - - - - - - - - - - - - -->

				<!-- - - - - - - - - - - - - - Featured products - - - - - - - - - - - - - - - - -->

				<%= render "featured_products" %>

				<!-- - - - - - - - - - - - - - End of featured products - - - - - - - - - - - - - - - - -->

				<!-- - - - - - - - - - - - - - Banners - - - - - - - - - - - - - - - - -->

				<%= render "banners" %>

				<!-- - - - - - - - - - - - - - End of banners - - - - - - - - - - - - - - - - -->

				<!-- - - - - - - - - - - - - - Bestsellers - - - - - - - - - - - - - - - - -->

				<%= render "bestsellers" %>

				<!-- - - - - - - - - - - - - - End of bestsellers - - - - - - - - - - - - - - - - -->

			</div><!--/ .container-->

		</div><!--/ .page_wrapper-->
		
		<!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

		<!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

		<%= render "footer" %>
		
		<!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

	</div><!--/ [layout]-->
	
	<!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

	<!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

	<%= render "social_feeds" %>

	<!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
	
	<!-- Include Libs & Plugins
	============================================ -->
	<script src="/frontend/js/jquery-2.1.1.min.js"></script>
	<script src="/frontend/js/queryloader2.min.js"></script>
	<script src="/frontend/js/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
	<script src="/frontend/js/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>
	<script src="/frontend/js/jquery.appear.js"></script>
	<script src="/frontend/js/owlcarousel/owl.carousel.min.js"></script>
	<script src="/frontend/js/royalslider/jquery.easing-1.3.js"></script>
	<script src="/frontend/js/jquery.countdown.plugin.min.js"></script>
	<script src="/frontend/js/jquery.countdown.min.js"></script>
	<script src="/frontend/js/arcticmodal/jquery.arcticmodal.js"></script>
	<script src="/frontend/twitter/jquery.tweet.min.js"></script>
	<script src="/frontend/js/colorpicker/colorpicker.js"></script>
	<script src="/frontend/js/retina.min.js"></script>
	<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js"></script>

	<!-- Theme files
	============================================ -->
	<script src="/frontend/js/theme.plugins.js"></script>
	<script src="/frontend/js/theme.core.js"></script>
	
</body>