<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div id="slideshow">
        <div class="fullwidthbanner-container">
            <div class="revolution-slider rev_slider" style="height: 0; overflow: hidden;">
                <ul>
                    <% @slides.each_with_index do |item,index| %>
                        <% if index == 0 %>
                        <!-- SLIDE  -->                        
                        <li <% if item.link.present? %>class="slide-pointer" onclick="window.location='<%= item.link %>'"<% end %> data-index="rs-19" data-transition="incube" data-slotamount="7" data-hideafterloop="0" data-hideslideonmobile="off" data-easein="default" data-easeout="default" data-masterspeed="800" data-thumb="/frontend/images/bg_4-11.png" data-rotate="0" data-saveperformance="off" data-title="Slide" data-param1="" data-param2="" data-param3="" data-param4="" data-param5="" data-param6="" data-param7="" data-param8="" data-param9="" data-param10="" data-description="">
                            <!-- MAIN IMAGE -->
                            <img src="<%= item.image_url %>" alt="" title="Slider1" data-bgposition="0% 0%" data-bgfit="100% 100%" data-bgrepeat="repeat-y" class="rev-slidebg" data-no-retina>
                            <!-- LAYERS -->                            
                        </a>
                        </li>                        
                        <% end %>
                        <% if index == 1 %>
                        <!-- SLIDE  -->
                        <li <% if item.link.present? %>class="slide-pointer" onclick="window.location='<%= item.link %>'"<% end %> data-index="rs-20" data-transition="boxslide" data-slotamount="7" data-hideafterloop="0" data-hideslideonmobile="off" data-easein="default" data-easeout="default" data-masterspeed="800" data-thumb="/frontend/images/bg.jpg" data-rotate="0" data-saveperformance="off" data-title="Slide" data-param1="" data-param2="" data-param3="" data-param4="" data-param5="" data-param6="" data-param7="" data-param8="" data-param9="" data-param10="" data-description="">
                            <!-- MAIN IMAGE -->
                            <img src="<%= item.image_url %>" alt="" title="Slider1" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat" class="rev-slidebg" data-no-retina>                            
                        </li>
                        <% end %>
                        <% if index == 2 %>
                        <!-- SLIDE  -->
                        <li <% if item.link.present? %>class="slide-pointer" onclick="window.location='<%= item.link %>'"<% end %> data-index="rs-21" data-transition="cube" data-slotamount="7" data-hideafterloop="0" data-hideslideonmobile="off" data-easein="default" data-easeout="default" data-masterspeed="800" data-thumb="/frontend/images/bg1.jpg" data-rotate="0" data-saveperformance="off" data-title="Slide" data-param1="" data-param2="" data-param3="" data-param4="" data-param5="" data-param6="" data-param7="" data-param8="" data-param9="" data-param10="" data-description="">
                            <!-- MAIN IMAGE -->
                            <img src="<%= item.image_url %>" alt="" title="Slider1" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat" class="rev-slidebg" data-no-retina>
                            <!-- LAYERS -->                            
                        </li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <section id="content">
        <div class="search-box-wrapper">
            <div class="search-box container">
                <ul class="search-tabs clearfix">
                    <li class="active"><a href="#booking_tour" data-toggle="tab">TOUR DU LỊCH</a></li>
                    <li><a href="#booking_room" data-toggle="tab">KHÁCH SẠN</a></li>
                    <li><a href="#booking_car" data-toggle="tab">THUÊ XE</a></li>
                </ul>
                
                <div class="visible-mobile">
                    <ul id="mobile-search-tabs" class="search-tabs clearfix">
                        <li class="active"><a href="#booking_tour">TOUR DU LỊCH</a></li>
                        <li><a href="#booking_room">KHÁCH SẠN</a></li>
                        <li><a href="#booking_car">THUÊ XE</a></li>
                    </ul>
                </div>

                <div class="search-tab-content">
                    
                    <%= render "/home/tour_search" %>
                    <%= render "/home/hotel_search" %>
                    <%= render "/home/car_search" %>
                    
                </div>
            </div>
        </div>
        
        <% if @tour_events.count > 0 %>
        <div class="container section section-custom">
            <% @tour_events.each do |item| %>
            <h2><%= item.title %></h2>
            <div class="row image-box discount-label style10">
                <% item.tour_event_details.each do |tour_event| %>
                    <div class="col-sms-6 col-sm-6 col-md-3">
                        <article class="box">
                            <% if tour_event.tour.is_sale == true %>
                                <span class="discount">
                                    <span class="discount-text">
                                        Giảm giá <%= tour_event.tour.discount_percent %>%
                                    </span>
                                </span>
                            <% else %>
                                <% if tour_event.tour.label.present? %>
                                    <span class="discount">
                                        <span class="discount-text">
                                            <%= tour_event.tour.label %>
                                        </span>
                                    </span>
                                <% end %>
                            <% end %>
                            <figure class="animated fadeInDown" data-animation-type="fadeInDown" data-animation-duration="2" style="animation-duration: 2s; visibility: visible;">
                                <%= link_to image_tag(tour_event.tour.image_url.large_image, width: "270", height: "160"), tour_detail_path(tour_id: tour_event.tour_id, tour_name: tour_event.tour.url_friendly), class: "hover-effect" %>
                            </figure>
                            <div class="details">
                                <%= link_to "Xem Tour", tour_detail_path(tour_id: tour_event.tour_id, tour_name: tour_event.tour.url_friendly), class: "button btn-mini sky-blue1" %>
                                <h4 class="box-title tour-event-link"><%= link_to truncate(strip_tags(tour_event.tour.name), length: 35), tour_detail_path(tour_id: tour_event.tour_id, tour_name: tour_event.tour.url_friendly), title: tour_event.tour.name, class: "transform-capitalize" %>
                                    <small class="font-tour-event">
                                        <strong>Giá:</strong>
                                        <% if tour_event.tour.is_sale == true %><del><% if tour_event.tour.old_price == 0 %>Liên hệ<% else %><%= format_number(tour_event.tour.old_price) %> VNĐ<% end %></del> -
                                        <% end %><% if tour_event.tour.new_price == 0 %>Liên hệ<% else %><span class="color-price"><%= format_number(tour_event.tour.new_price) %> VNĐ<% end %></span>
                                    </small>
                                </h4>
                            </div>
                        </article>
                    </div>
                <% end %>
            </div>
            <% end %>
        </div>
        <% end %>
        
        <% if Tour.get_discount_tours.count > 0 %>
            <div class="global-map-area section parallax" data-stellar-background-ratio="0.5" style="background-position: 50% 110.5px;">
                <div class="container">
                    <div class="tour_sale_color description text-center">
                        <h1><%= link_to "Tour Đang Khuyến Mãi", deal_tours_path %></h1>
                    </div>
                    <div class="image-carousel style3 flex-slider" data-item-width="170" data-item-margin="30">
                        
                    <div class="flex-viewport" style="overflow: hidden; position: relative;">
                        <ul class="slides image-box style9" style="width: 1400%; transition-duration: 0s; transform: translate3d(-200px, 0px, 0px);">
                            <% Tour.get_discount_tours.each do |item| %>    
                                <li style="width: 170px; float: left; display: block;">
                                    <article class="box">
                                        <span class="discount"><span class="discount-text">Giảm giá <%= item.discount_percent.to_i %>%</span></span>
                                        <figure>
                                            <a href="<%= tour_detail_path(tour_id: item, tour_name: item.url_friendly) %>" title="" class="hover-effect yellow"><img src="<%= item.image_url.medium_image %>" alt="" width="170" height="161" draggable="false"></a>
                                        </figure>
                                        <div class="details">
                                            <h4 class="box-title">
                                                <%= link_to item.name, tour_detail_path(tour_id: item, tour_name: item.url_friendly), title: item.name, class: "transform-capitalize" %>
                                                <del><small><% if item.old_price == 0 %>Liên Hệ<% else %><%= format_number(item.old_price) %> VNĐ<% end %></small></del>
                                                <small><% if item.new_price == 0 %>Liên Hệ<% else %><span class="color-price"><%= format_number(item.new_price) %> VNĐ</span><% end %></small>
                                            </h4>
                                            <%= link_to "XEM TOUR", tour_detail_path(tour_id: item, tour_name: item.url_friendly), class: "button sky-blue1" %>
                                        </div>
                                    </article>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                    <ol class="flex-control-nav flex-control-paging"><li><a class="">1</a></li><li><a class="flex-active">7</a></li></ol><ul class="flex-direction-nav"><li><a class="flex-prev" href="#">Previous</a></li><li><a class="flex-next" href="#">Next</a></li></ul></div>
                </div>
            </div>
        <% end %>

        <div class="container section section-custom">
            <% if @cars.count > 0 %>
                <h2>Bảng Giá Xe Mới Nhất</h2>
                <div class="block image-carousel style2 flexslider" data-animation="slide" data-item-width="270" data-item-margin="30">
                    <ul class="slides image-box style1">
                        <% @cars.each do |item| %>
                            <li>
                                <article class="box">
                                    <figure>
                                        <%= link_to image_tag(item.image_url.medium_image, width: "270", height: "160"), car_detail_path(car_id: item, name: item.url_friendly), class: "hover-effect" %>
                                    </figure>
                                    <div class="details">
                                        <h4 class="box-title">
                                            <%= link_to item.name, car_detail_path(car_id: item, name: item.url_friendly), title: item.name, class: "transform-capitalize" %>
                                            <small><strong>Giá:</strong> <% if item.price == 0 %>Liên Hệ<% else %><%= format_number(item.price) %> VNĐ<% end %></small>
                                        </h4>
                                    </div>
                                </article>
                            </li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        </div>

        <div class="global-map-area section parallax" data-stellar-background-ratio="0.5" style="background-position: 50% 78.5px;">
            <div class="container description">
                <h1 class="text-center box mobile-color">Vì Sao Chọn Thương Hiệu "Du Lịch Khám Phá Mới"</h1>
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="0" style="animation-duration: 1s; visibility: visible;">
                            <i class="soap-icon-recommend"></i>
                            <h4 class="box-title">Cam kết uy tín, chất lượng dịch vụ</h4>
                            <p class="description">
                                Mang lại những dịch vụ tốt nhất cho khách hàng và đối tác.
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="0.6" style="animation-duration: 1s; animation-delay: 0.6s; visibility: visible;">
                            <i class="soap-icon-myspace"></i>
                            <h4 class="box-title">Nguồn lực dồi dào, đội ngũ chuyên nghiệp</h4>
                            <p class="description">
                                Nhiều năm kinh nghiệm và đầy sáng tạo.<br/>
                                Luôn được đào tạo nâng cao trình độ nghiệp vụ.<br/>
                                Lắng nghe & am hiểu khách hàng.<br/>
                                Tinh thần trách nhiệm và sự tận tâm phục vụ.
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="0.9" style="animation-duration: 1s; animation-delay: 0.9s; visibility: visible;">
                            <i class="soap-icon-conference"></i>
                            <h4 class="box-title">Có đối tác tin cậy</h4>
                            <p class="description">
                                Mở rộng nhiều quan hệ đối tác chặt chẽ các công ty, dịch vụ du lịch trên toàn quốc.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="1.2" style="animation-duration: 1s; animation-delay: 1.2s; visibility: visible;">
                            <i class="soap-icon-envato"></i>
                            <h4 class="box-title">Sản phẩm độc đáo, mới lạ</h4>
                            <p class="description">
                                Luôn sáng tạo, đổi mới sản phẩm, thân thiện với cộng đồng & môi trường.<br/>
                                Nhiều loại hình tour đa dạng với chất lượng và chi phí dịch vụ tốt nhất.<br/>
                                Đa dạng, từ tiết kiệm đến cao cấp.
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="0" style="animation-duration: 1s; visibility: visible;">
                            <i class="soap-icon-check"></i>
                            <h4 class="box-title">Uy tín thương hiệu</h4>
                            <p class="description">
                                Hơn 10 năm, liên tục phát triển.<br/>
                                Là "Thương hiệu xuất sắc & nhà lãnh đạo tiêu biểu thời hội nhập năm 2016"
                            </p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="icon-box style8 animated slideInUp" data-animation-type="slideInUp" data-animation-delay="0.6" style="animation-duration: 1s; animation-delay: 0.6s; visibility: visible;">
                            <i class="soap-icon-wishlist"></i>
                            <h4 class="box-title">Sự yêu quý của khách hàng</h4>
                            <p class="description">
                                Là một phần sức mạnh để  Khám Phá Mới phục vụ tốt hơn và ngày càng vươn xa.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container section no-padding-bottom section-custom">
            <h2>Trang Liên Kết Cùng Đơn Vị</h2>
            <div class="row image-box style10">
                <div class="col-md-4">
                    <article class="box animated" data-animation-type="fadeInLeft" data-animation-delay="0">
                        <figure>
                            <%= link_to image_tag("/frontend/images/cungmuadulich.jpg", width: "370", height: "132", alt: "cungmuadulich.net"), "http://cungmuadulich.net/", class: "hover-effect", target: "_blank" %>
                        </figure>
                        <div class="details">
                            <%= link_to "Xem trang", "http://cungmuadulich.net/", target: "_blank", class: "button" %>
                            <h4 class="box-title">Cùng Mua Du Lịch<br><small><%= link_to "cungmuadulich.net", "http://cungmuadulich.net/", target: "_blank" %></small></h4>
                        </div>
                    </article>
                </div>
                <div class="col-md-4">
                    <article class="box animated" data-animation-type="fadeInLeft" data-animation-delay="0">
                        <figure>
                            <%= link_to image_tag("/frontend/images/thuexemiennam.jpg", width: "370", height: "132", alt: "www.thuexemiennam.com"), "http://www.thuexemiennam.com/", class: "hover-effect", target: "_blank" %>
                        </figure>
                        <div class="details">
                            <%= link_to "Xem trang", "http://www.thuexemiennam.com/", target: "_blank", class: "button" %>
                            <h4 class="box-title">Thuê Xe Miền Nam<br><small><%= link_to "www.thuexemiennam.com", "http://www.thuexemiennam.com/", target: "_blank" %></small></h4>
                        </div>
                    </article>
                </div>
                <div class="col-md-4">
                    <article class="box animated" data-animation-type="fadeInLeft" data-animation-delay="0">
                        <figure>
                            <%= link_to image_tag("/frontend/images/newdiscovery.jpg", width: "370", height: "132", alt: "newdiscovery.vn"), root_path, class: "hover-effect", target: "_blank" %>
                        </figure>
                        <div class="details">
                            <%= link_to "Xem trang", root_path, target: "_blank", class: "button" %>
                            <h4 class="box-title">New Discovery<br><small><%= link_to "newdiscovery.vn", root_path, target: "_blank" %></small></h4>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
    

    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>

<script type="text/javascript">
    tjq(document).ready(function() {
        tjq('.revolution-slider').revolution({
            sliderType: "standard",
            sliderLayout: "auto",
            dottedOverlay: "none",
            delay: 7000,
            navigation: {
                keyboardNavigation: "off",
                keyboard_direction: "horizontal",
                mouseScrollNavigation: "off",
                mouseScrollReverse: "default",
                onHoverStop: "on",
                touch: {
                    touchenabled: "on",
                    swipe_threshold: 75,
                    swipe_min_touches: 1,
                    swipe_direction: "horizontal",
                    drag_block_vertical: false
                },
                arrows: {
                    style: "default",
                    enable: true,
                    hide_onmobile: false,
                    hide_onleave: false,
                    tmp: '',
                    left: {
                        h_align: "left",
                        v_align: "center",
                        h_offset: 20,
                        v_offset: 0
                    },
                    right: {
                        h_align: "right",
                        v_align: "center",
                        h_offset: 20,
                        v_offset: 0
                    }
                }
            },
            visibilityLevels: [1240, 1024, 778, 480],
            gridwidth: 1200,
            gridheight: 646,
            lazyType: "none",
            shadow: 0,
            spinner: "spinner4",
            stopLoop: "off",
            stopAfterLoops: -1,
            stopAtSlide: -1,
            shuffle: "off",
            autoHeight: "off",
            hideThumbsOnMobile: "off",
            hideSliderAtLimit: 0,
            hideCaptionAtLimit: 0,
            hideAllCaptionAtLilmit: 0,
            debugMode: false,
            fallbacks: {
                simplifyAll: "off",
                nextSlideOnWindowFocus: "off",
                disableFocusListener: false,
            }
        });
    });
</script>