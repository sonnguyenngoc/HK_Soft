            thisfield.value = "";
            if (!color) {
                color = "6D6F71";
            }
            thisfield.style.color = "#" + color;
      }
}
function clickrecall(thisfield, defaulttext, color) {
      if (thisfield.value == "") {
            thisfield.value = defaulttext;
            if (!color) {
                color = "6D6F71";
            }
            thisfield.style.color = "#" + color;
      }
}
</script>
