<div class="site_wrapper">

    <%= render "/home/top_navigation" %>
    <!-- end top navigation links -->


    <div class="clearfix"></div>


    <%= render "/home/header" %>
    <!-- end header -->


    <div class="clearfix"></div>


    <div class="page_title1 sty13">
        <div class="container">

            <h1>Web-based Software Development</h1>
            <div class="pagenation">&nbsp;<%= link_to "Home", root_path %> <i>/</i> <%= link_to "Services", services_path %> <i>/</i> Web-based Software Development</div>

        </div>
    </div>
    <!-- end page title -->


    <div class="clearfix"></div>


    <div class="content_fullwidth less2">
        <div class="container">

            <div class="content_left">

                <div class="blog_post">
                    <% @web_based_software_development.each do |item| %>
                    <div class="blog_postcontent">
                        <div class="image_frame">
                            <%= image_tag item.image_url.hksoft_large_image %>
                        </div>
                        <h3><%= item.title %></h3>
                        <ul class="post_meta_links">
                            <li><a href="#created_at" class="date"><%= item.created_at.strftime("%d %B %Y") %></a></li>
                            <li class="post_by"><i>by:</i> <a href="#global_naturesoft">Global Naturesoft</a></li>
                            <li class="post_categoty"><i>in:</i> <a href="#web_based_software_development">Web-based Software Development</a></li>
                        </ul>
                        <div class="clearfix"></div>
                        <div class="margin_top1"></div>
                        <div class="text-justify"><%= item.content.html_safe %></div>
                    </div>
                    <% end %>
                </div>
                <!-- /# end post -->

                <div class="clearfix divider_line9 lessm"></div>

            </div>
            <!-- end content left side -->


            <!-- right sidebar starts -->
            <div class="right_sidebar">

                <%= render "/services/right_sidebar" %>

            </div>
            <!-- end right sidebar -->

        </div>
        
    </div>


    <div class="clearfix"></div>


    <%= render "/home/footer" %>
    <!-- end footer -->


    <div class="clearfix"></div>


    <a href="#" class="scrollup">Scroll</a>
    <!-- end scroll to top of the page-->

</div>


