<% content_for :title, "Sitemap" %>

<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render 'module/header' %>

        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                <ul class="breadcrumbs">

                    <li><%= link_to "Trang chủ", root_path %></li>
                    <li><%= @title_head %></li>

                </ul>

                <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->

                <h1><%= @title_head %></h1>

                <div class="theme_box clearfix">

                    <div class="row">

                        <div class="col-sm-3">

                            <section class="section_offset">

                                <h4>Trang chủ</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'new', url: "san-pham-moi"}) %>">Sản phẩm mới</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'deal', url: "hang-khuyen-mai"}) %>">Khuyển mãi</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'prominent', url: "san-pham-noi-bat"}) %>">Sản phẩm nổi bật</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'bestseller', url: "san-pham-ban-chay"}) %>">Sản phẩm bán chạy nhất</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                            <section class="section_offset">

                                <h4>Trang thông tin</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= url_for({ controller: "information", action: "about_us" }) %>">Về chúng tôi</a></li>
                                    <li><a href="<%= url_for({ controller: "information", action: "delivery" }) %>">Thông tin giao hàng</a></li>
                                    <li><a href="<%= url_for({ controller: "information", action: "privacy_policy" }) %>">Chính sách bảo mật</a></li>
                                    <li><a href="<%= url_for({ controller: "information", action: "terms_conditions" }) %>">Điều khoản sử dụng dịch vụ</a></li>
                                    <li><a href="<%= url_for({ controller: "information", action: "faq" }) %>">Câu hỏi thường gặp</a></li>
                                    <li><a href="<%= url_for({ controller: "information", action: "contact_us" }) %>">Liên hệ</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                        </div><!--/ [col]-->

                        <div class="col-sm-3">

                            <section class="section_offset">

                                <h4>Trang sản phẩm</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= go_home_path %>">Chuyên mục sản phẩm</a></li>
                                    <li><a href="<%= wishlist_path %>">Sản phẩm yêu thích</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "comparison" }) %>">Sản phẩm so sánh</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'new', url: "san-pham-moi"}) %>">Sản phẩm mới</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'deal', url: "hang-khuyen-mai"}) %>">Khuyển mãi</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'prominent', url: "san-pham-noi-bat"}) %>">Sản phẩm nổi bật</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "view_all_product_by_status", st: 'bestseller', url: "san-pham-ban-chay"}) %>">Sản phẩm bán chạy nhất</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                            <section class="section_offset">

                                <h4>Trang thương hiệu cung cấp</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= url_for({ controller: "manufacturer", action: "list" }) %>">Danh sách thương hiệu cung cấp</a></li>
                                    <li><a href="<%= go_home_path %>">Danh sách sản phẩm</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                        </div><!--/ [col]-->

                        <div class="col-sm-3">

                            <section class="section_offset">

                                <h4>Đặt hàng</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= url_for({ controller: "checkout", action: "shopping_cart" }) %>">Trang giỏ hàng</a></li>
                                    <li><a href="<%= url_for({ controller: "product", action: "comparison" }) %>">So sánh sản phẩm</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                            <section class="section_offset">

                                <h4>Tài khoản</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= url_for({ controller: 'account', action: 'register' }) %>">Đăng ký</a></li>
                                    <li><a href="<%= login_path %>">Đăng nhập</a></li>
                                    <li><a href="<%= forgotten_path %>">Quên mật khẩu</a></li>
                                    <li><a href="<%= my_account_path %>">Tài khoản của tôi</a></li>
                                    <li><a href="<%= account_order_path %>">Lịch sử đặt hàng</a></li>
                                    <li><a href="<%= wishlist_path %>">Danh sách sản phẩm yêu thích</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                        </div><!--/ [col] -->

                        <div class="col-sm-3">

                            <section class="section_offset">

                                <h4>Trang chi nhánh</h4>

                                <ul class="list_type_5 links">
                                    <li><a href="<%= list_branch_path %>">Trang danh sách các chi nhánh</a></li>
                                </ul>

                            </section><!--/ .section_offset -->

                        </div><!--/ [col]-->

                    </div><!--/ .row-->

                </div><!--/ .theme_box-->

            </div><!--/ .container-->

        </div><!--/ .page_wrapper-->

        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <%= render 'module/footer' %>

        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div><!--/ [layout]-->

    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

    <%= render 'module/social_feeds' %>

    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->

    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>

    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>

</body>
