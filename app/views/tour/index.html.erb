<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title">
                <h2 class="entry-title"><%= @page_name.name %></h2>
            </div>
            <ul class="breadcrumbs">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li class="active"><%= @page_name.name %></li>
            </ul>
        </div>
    </div>

    <section id="content" class="tour">
        <div id="slideshow" class="slideshow-bg full-screen">
            <div class="flexslider">
                <ul class="slides">
                    <li>
                        <div class="slidebg" style="background-image: url(/frontend/images/tour/home/slider/1.jpg);"></div>
                    </li>
                    <li>
                        <div class="slidebg" style="background-image: url(/frontend/images/tour/home/slider/2.jpg);"></div>
                    </li>
                    <li>
                        <div class="slidebg" style="background-image: url(/frontend/images/tour/home/slider/3.jpg);"></div>
                    </li>
                    <li>
                        <div class="slidebg" style="background-image: url(/frontend/images/tour/home/slider/4.jpg);"></div>
                    </li>
                    <li>
                        <div class="slidebg" style="background-image: url(/frontend/images/tour/home/slider/5.jpg);"></div>
                    </li>
                </ul>
            </div>
            <div class="container">
                <div class="table-wrapper full-width">
                    <div class="table-cell">
                        <div class="box">
                            <img src="/frontend/images/logo_new_discovery_tour.png" alt="">
                        </div>
                        <div class="heading box">
                            <h1 class="title">Tìm Kiếm Tour Du Lịch Yêu Thích Tại Đây</h1>
                        </div>
                        <div class="search-box">
                            <%= form_tag(tour_path, method: "get") do %>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-3 form-group">
                                        <div class="selector">
                                            <select class="full-width" name="type_name">
                                                <option value="">Loại tour cần tìm</option>
                                                <option value="Tour Trong Nước">Tour Trong Nước</option>
                                                <option value="Tour Nước Ngoài">Tour Nước Ngoài</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-4 form-group">
                                        <input type="text" name="name" class="input-text full-width" placeholder="Nhập địa điểm du lịch cần tìm...">
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-2 form-group">
                                        <div class="datepicker-wrap">
                                            <input type="text" name="from_date" class="input-text full-width" placeholder="Ngày khởi hành" />
                                        </div>
                                    </div>
                                    <div class="col-sm-2 col-md-3 form-group">
                                        <button class="button btn-medium full-width uppercase sky-blue1">Tìm Tour</button>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <div class="text-center">
                            <a href="#hotline" class="button btn-medium sky-blue1 uppercase">HOTLINE: (84) 3 85 333 18 - (84) 3 85 333 21</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section white-bg">
            <div class="container">
                
                <div class="text-center description block">
                    <h1>DANH SÁCH TOUR DU LỊCH</h1>
                </div>
                
                <div id="main">
                    <div class="row add-clearfix image-box style1 tour-locations">
                        <% @tours.each do |item| %>
                            <div class="col-sm-6 col-md-4">
                                <article class="box">
                                    <figure>
                                        <%= link_to image_tag("/frontend/images/tour/simple-packages/3-col/1.jpg"), tour_detail_path(tour_id: item, tour_name: item.url_friendly), class: "hover-effect" %>
                                    </figure>
                                    <div class="details">
                                        <h4 class="box-title"><%= item.name %></h4>
                                        <span class="price"><% if item.new_price == 0 %>Liên hệ<% else %><%= format_number(item.new_price) %> VND<% end %></span>
                                        <hr>
                                        <div class="text-justify"><%= truncate(strip_tags(item.description), length: 150) %></div>
                                        <hr>
                                        <div class="text-center">
                                            <div class="selector">
                                                <select class="full-width">
                                                    <option value="">Lịch khởi hành - [<%= item.get_count_tour_schedules %>]</option>
                                                    <% item.tour_schedules.get_tour_schedules.each do |schedule| %>
                                                        <option value=""><%= schedule.from_date.strftime("%d/%m/%Y") %> - <%= schedule.to_date.strftime("%d/%m/%Y") %></option>
                                                    <% end %>
                                                </select>
                                            </div>
                                            <div class="time">
                                                <i class="soap-icon-clock yellow-color"></i>
                                                <span>Tour sớm nhất: <% if item.tour_schedules.count > 0 %><%= item.get_lastest_tour_from_date %> - <%= item.get_lastest_tour_to_date %><% else %>Chưa có lịch cho tour<% end %></span>
                                            </div>
                                        </div>
                                        <%= link_to "XEM TOUR", tour_detail_path(tour_id: item, tour_name: item.url_friendly), class: "button btn-small full-width" %>
                                    </div>
                                </article>
                            </div>
                        <% end %>
                    </div>
                    <%= will_paginate @tours, previous_label: 'TRANG TRƯỚC', next_label: 'TRANG SAU', renderer: BootstrapPagination::Rails %>
                </div>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>

<script type="text/javascript">
    tjq("#slideshow .flexslider").flexslider({
        animation: "fade",
        controlNav: false,
        animationLoop: true,
        directionNav: false,
        slideshow: true,
        slideshowSpeed: 5000
    });
</script>