<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Đặt Tour</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li><%= link_to "Tour Du Lịch", tour_path %></li>
                <li>
                    <% if @tour.article_category.parent.first.description == "domestic_tour" %>
                        <%= link_to @tour.article_category.parent.first.name, domestic_tour_path %>
                    <% else %>
                        <%= link_to @tour.article_category.parent.first.name, foreign_tour_path %>
                    <% end %>
                </li>
                <li><%= link_to @tour.article_category.name, tour_packages_path(tour_packages_id: @tour.article_category) %></li>
                <li><%= link_to @tour.name, tour_detail_path(tour_id: @tour) %></li>
                <li class="active">Đặt Tour</li>
            </ul>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sms-6 col-sm-8 col-md-9">
                    <div class="booking-section travelo-box">
                        
                        <form class="booking-form" method="post" action="booking-handler.php">
                            <div class="person-information">
                                <h2>Thông Tin Khách Hàng</h2>
                                <div class="form-group row">
                                    <div class="col-sm-12 col-md-10">
                                        <label>Tên Khách Hàng *</label>
                                        <input type="text" name="first_name" class="input-text full-width" value="" placeholder="" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12 col-md-10">
                                        <label>Địa Chỉ *</label>
                                        <input type="text" name="r_email_address" class="input-text full-width" value="" placeholder="" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>Số Điện Thoại *</label>
                                        <input type="text" name="email_address" class="input-text full-width" value="" placeholder="" />
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Địa Chỉ Email *</label>
                                        <input type="text" name="r_email_address" class="input-text full-width" value="" placeholder="" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>ID/Passport *</label>
                                        <input type="text" name="email_address" class="input-text full-width" value="" placeholder="" />
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Ngày đặt tour</label>
                                        <div class="selector">
                                            <select class="full-width">
                                                <option value="">Lịch khởi hành - [<%= @tour.get_count_tour_schedules %>]</option>
                                                <% @tour.tour_schedules.each do |schedule| %>
                                                    <option value="<%= schedule.id %>"><%= schedule.from_date.strftime("%d/%m/%Y") %> - <%= schedule.to_date.strftime("%d/%m/%Y") %></option>
                                                <% end %>
                                            </select>
                                        </div>
                                    </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <label>Số Người Lớn *</label>
                                        <input type="text" name="email_address" class="input-text full-width" value="" placeholder="Mặc định số  người lớn: 1" />
                                    </div>
                                    <div class="col-sm-6 col-md-5">
                                        <label>Số Trẻ Em *</label>
                                        <input type="text" name="r_email_address" class="input-text full-width" value="" placeholder="Mặc định số trẻ em: 0" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <label>Lời Nhắn</label>
                                        <textarea rows="8" class="input-text full-width required" name="message" id="contact_message" aria-required="true"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" class="full-width btn-large">ĐẶT TOUR</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="sidebar col-sms-6 col-sm-4 col-md-3">
                    <div class="booking-details travelo-box">
                        <h4><%= @tour.name %></h4>
                        <article class="tour-detail">
                            <figure class="clearfix">
                                <small class="uppercase"><strong>Loại: </strong> <%= @tour.type_name %></small><br/>
                                <small class="uppercase"><strong>Chuyên mục: </strong> <%= @tour.article_category.name %></small><br/>
                                <small class="uppercase"><strong>Khởi hành: </strong> <%= @tour.duration %></small><br/>
                                <small class="uppercase"><strong>Thời gian chuyến tour: </strong> 3 ngày 2 đêm</small><br/>
                                <small class="uppercase"><strong>Loại khách sạn: </strong> <%= @tour.hotel %></small><br/></br>
                                <%= link_to "Xem Tour", tour_detail_path(tour_id: @tour), class: "button green" %>
                            </figure>
                            <div class="details">
                            </div>
                        </article>
                        
                        <h4>Phương Tiện & Dịch Vụ</h4>
                        <dl class="other-details">
                            <dt class="feature">Phương Tiện:</dt><% Tour.transportation_listing.each do |item| %><% if @tour.get_transportations.include?(item) %><dd class="value"><%= t(item) %></dd><% end %><% end %>
                            <dt class="feature">Dịch Vụ:</dt><% Tour.service_listing.each do |item| %><% if @tour.get_services.include?(item) %><dd class="value"><%= t(item) %></dd><% end %><% end %>
                        </dl>
                        <dl class="other-details">
                            <dt class="total-price">Giá: </dt><dd class="total-price-value"><% if @tour.new_price == 0 %>Liên hệ<% else %><%= format_number(@tour.new_price) %> VND<% end %></dd>
                        </dl>
                    </div>
                    
                    <%= render "/home/need_help" %>
                
                </div>
            </div>
        </div>
    </section>
    
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>