<p id="notice"><%= notice %></p>
<!-- Main navbar -->
<%= render "/admin/main/main_navbar" %>
<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                <%= render "/admin/main/user_menu" %>
                <!-- /user menu -->

                <!-- Main navigation -->
                <%= render "/admin/main/main_menu" %>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->

        <!-- Main content -->
        <div class="content-wrapper">
        
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><span class="text-semibold">Orders</span></h4>
                    </div>
                </div>
            
                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to '<i class="icon-home2 position-left"></i>'.html_safe + t(:home), { controller: "main", action: "index" } %></li>
                        <li><a href="<%= admin_orders_path %>">Order</a></li>
                        <li><a href="<%= admin_orders_path %>">Orders</a></li>
                        <li class="active">Order Detail</li>
                    </ul>
                </div>
            </div>
            <!-- /page header -->
            
            <!-- Content area -->
            <div class="content">
            
                <!-- Basic datatable -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Order Detail</h5>
                    </div>
                    <div class="panel-body col-md-12">
                        <div class="col-md-6">
                            <h6><b>Thông tin khách hàng</b></h6>
                            <p>Họ tên: <%= @order.customer.name %></p>
                            <p>Công ty: <%= @order.customer.company %></p>
                            <p>Địa chỉ: <%= @order.customer.display_address %></p>
                            <p>Điện thoại: <%= @order.customer.phone %></p>
                            <p>E-mail: <%= @order.customer.email %></p>
                        </div>
                        <div class="col-md-6">
                            <h6><b>Thông tin giao hàng</b></h6>
                            <p>Họ tên: <%= @order.order_delivery.name %></p>
                            <p>Công ty: </p>
                            <p>Địa chỉ: <%= @order.order_delivery.display_address %></p>
                            <p>Ngày đặt hàng: 18/04/2016</p>
                            <p>Ngày giao hàng: 25/04/2016</p>
                        </div>
                    </div>
                    <div class="panel-body col-md-12">
                        <div class="col-md-6">
                            <h6><b>Hình thức vận chuyển</b></h6>
                            <p>Chưa có dữ liệu </p>
                        </div>
                        <div class="col-md-6">
                            <h6><b>Hình thức thanh toán</b></h6>
                            <p>Chưa có dữ liệu </p>
                        </div>
                    </div>
                    
                    <table class="table datatable-basic table-bordered table-striped table-hover">
                        <thead>
                            <tr class="bg-teal-800">
                                <th>STT</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá (VNĐ)</th>
                                <th>Thành tiền (VNĐ)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- @order_details.each do |item| -->
                                <tr>
                                    <td>1</td>
                                    <td>Item</td>
                                    <td>2</td>
                                    <td>120.000</td>
                                    <td>240.000</td>
                                </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2"><b>Tổng tiền hàng</b></td>
                                <td colspan="1"><b>372.000</b></td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2"><b>Phí vận chuyển</b></td>
                                <td colspan="1"><b>372.000</b></td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2"><b>Giảm giá</b></td>
                                <td colspan="1"><b>372.000</b></td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2"><b style="color: #018bcb">Tổng tiền thanh toán</b></td>
                                <td colspan="1"><b style="color: #018bcb">372.000</b></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /basic datatable -->
            
                <!-- Footer -->
                <%= render '/admin/main/footer' %>
                <!-- /footer -->
            
            </div>
            <!-- /content area -->
        
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

