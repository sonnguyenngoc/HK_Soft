<p id="notice"><%= notice %></p>

<h1>Listing Booking Tours</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Passport</th>
      <th>Tour schedule</th>
      <th>Adult</th>
      <th>Child</th>
      <th>Message</th>
      <th>Tour</th>
      <th>Tour name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_tours.each do |booking_tour| %>
      <tr>
        <td><%= booking_tour.full_name %></td>
        <td><%= booking_tour.address %></td>
        <td><%= booking_tour.phone %></td>
        <td><%= booking_tour.email %></td>
        <td><%= booking_tour.passport %></td>
        <td><%= booking_tour.tour_schedule_id %></td>
        <td><%= booking_tour.adult %></td>
        <td><%= booking_tour.child %></td>
        <td><%= booking_tour.message %></td>
        <td><%= booking_tour.tour_id %></td>
        <td><%= booking_tour.tour_name %></td>
        <td><%= booking_tour.price %></td>
        <td><%= link_to 'Show', booking_tour %></td>
        <td><%= link_to 'Edit', edit_booking_tour_path(booking_tour) %></td>
        <td><%= link_to 'Destroy', booking_tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

