<% if @slideshow.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
            <% @slideshow.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @slideshow], html: {class: "form-horizontal", id: "validate_checking"} do |f| %>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:logo) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <div class="uploader bg-teal-400">
                <%= f.file_field :image_url, class: "file-styled", accept: ".png, .jpg, .jpeg, .gif" %>
                <span class="action" style="-webkit-user-select: none;"><i class="icon-googleplus5"></i></span>
            </div>
            <span class="help-block">Accepted formats: gif, png, jpg.</span>
            <%= image_tag(@slideshow.image_url.image, size: "202x128", class: "img-rouded") %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title_1) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :title_1, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title_2) %> </label>
        <div class="col-lg-10">
            <%= f.text_field :title_2, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title_3) %> </label>
        <div class="col-lg-10">
            <%= f.text_field :title_3, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" >Dùng hình ảnh nhỏ <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <div class="row-fluid">
                <div class="checkbox">
                    <%= check_box 'slideshow', 'use_images', {}, 'true', 'false' %>
                    <label for="slideshow_use_images">Có dùng những hình ảnh nhỏ không?</label>
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" >Vị trí slide <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :position, class: "form-control required", placeholder: "Nhập vị trí số 1,2,3,..." %>
        </div>
    </div>
      
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:button_name) %> </label>
        <div class="col-lg-10">
            <%= f.text_field :name_button, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:link) %> </label>
        <div class="col-lg-10">
            <%= f.text_field :link, class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_slideshows_path, class: "btn btn-danger"%>
    </div>
    
<% end %>