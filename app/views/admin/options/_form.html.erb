<% if @option.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @option.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @option], html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :title, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:tag) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :tag, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:value) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_area :value, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:note) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_area :note, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:check_show_email) %></label>
        <div class="col-lg-10">
            <p>
                <div class="row-fluid">
                    <div class="checkbox">
                        <%= check_box 'option', 'accept_email', {}, 'true', 'false' %>
                        <label for="option_accept_email">Check Show Email</label>
                    </div>
                </div>
            </p>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_options_path, class: "btn btn-danger"%>
    </div>
    
<% end %>