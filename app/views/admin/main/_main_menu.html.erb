<div class="sidebar-category sidebar-category-visible">
    <div class="category-content no-padding">
        <ul class="navigation navigation-main navigation-accordion">

            <!-- Main -->
            <li class="navigation-header"><span></span> <i class="icon-menu"></i></li>
            <li class="<%= "active" if ["admin/main"].include?(params[:controller]) %>"><%= link_to '<i class="icon-home4"></i> <span>'.html_safe + t(:dashboard) +'</span>'.html_safe, { controller: "main", action: "index" } %></li>
            
            <% if can?(:read, Product) or can?(:read, Category) or can?(:read, Manufacturer) or can?(:read, Area) %>
                <li>
                    <a href="#"><i class="icon-stack2"></i> <span><%= t(:product) %></span></a>
                    <ul>
                        <% if can? :read, Product %>
                            <li class="<%= "active" if ["admin/products"].include?(params[:controller]) %>">
                                <%= link_to t(:products), admin_products_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Category %>
                            <li class="<%= "active" if ["admin/categories"].include?(params[:controller]) %>">
                                <%= link_to t(:categories), admin_categories_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Manufacturer %>
                            <li class="<%= "active" if ["admin/manufacturers"].include?(params[:controller]) %>">
                                <%= link_to t(:manufacturers), admin_manufacturers_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Area %>
                            <li class="<%= "active" if ["admin/areas"].include?(params[:controller]) %>">
                                <%= link_to t(:areas), admin_areas_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <li>
                <a href="#"><i class="icon-files-empty2"></i> <span><%= t(:projects) %></span></a>
                <ul>
                    <li class="<%= "active" if ["admin/projects"].include?(params[:controller]) %>">
                        <%= link_to t(:projects), admin_projects_path %>
                    </li>
                    <li class="<%= "active" if ["admin/project_categories"].include?(params[:controller]) %>">
                        <%= link_to t(:project_categories), admin_project_categories_path %>
                    </li>
                    <li class="<%= "active" if ["admin/program_languages"].include?(params[:controller]) %>">
                        <%= link_to t(:program_languages), admin_program_languages_path %>
                    </li>
                </ul>
            </li>
            
            <% if can?(:read, Article) or can?(:read, Slideshow) or can?(:read, ArticleCategory) or can?(:read, CodeStatus) %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-pencil"></i> <span><%= t(:article) %></span></a>
                    <ul>
                        <% if can? :read, Article %>
                            <li class="<%= "active" if ["admin/articles"].include?(params[:controller]) %>">
                                <%= link_to t(:articles), admin_articles_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Slideshow %>
                            <li class="<%= "active" if ["admin/slideshows"].include?(params[:controller]) %>">
                                <%= link_to t(:slideshows), admin_slideshows_path %>
                            </li>
                        <% end %>
                        <% if can? :read, ArticleCategory %>
                            <li class="<%= "active" if ["admin/article_categories"].include?(params[:controller]) %>">
                                <%= link_to t(:article_categories), admin_article_categories_path %>
                            </li>
                        <% end %>
                        <% if can? :read, CodeStatus %>
                            <li class="<%= "active" if ["admin/code_statuses"].include?(params[:controller]) %>">
                                <%= link_to t(:code_statuses), admin_code_statuses_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can? :read, Order %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-shopping-cart"></i> <span><%= t(:orders) %></span></a>
                    <ul>
                        <% if can? :read, Order %>
                            <li class="<%= "active" if ["admin/orders"].include?(params[:controller]) %>">
                                <%= link_to t(:orders), admin_orders_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, Comment) or can?(:read, CommentArticle) or can?(:read, Question) or can?(:read, Testimonial) %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-comment"></i> <span><%= truncate("#{t(:comment_question)}", length: 25) %></span></a>
                    <ul>
                        <% if can? :read, Comment %>
                            <li class="<%= "active" if ["admin/comments"].include?(params[:controller]) %>">
                                <%= link_to t(:comments), admin_comments_path %>
                            </li>
                        <% end %>
                        <% if can? :read, CommentArticle %>
                            <li class="<%= "active" if ["admin/comment_articles"].include?(params[:controller]) %>">
                                <%= link_to t(:comment_articles), admin_comment_articles_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Question %>
                            <li class="<%= "active" if ["admin/questions"].include?(params[:controller]) %>">
                                <%= link_to t(:questions), admin_questions_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Testimonial %>
                            <li class="<%= "active" if ["admin/testimonials"].include?(params[:controller]) %>">
                                <%= link_to t(:testimonials), admin_testimonials_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, DeliveryMethod) %>
                <li>
                    <a href="#"><i class="icon-truck"></i> <span><%= t(:delivery_method) %></span></a>
                    <ul>
                        <% if can? :read, DeliveryMethod %>
                            <li class="<%= "active" if ["admin/delivery_methods"].include?(params[:controller]) %>">
                                <%= link_to t(:delivery_methods), admin_delivery_methods_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, PaymentMethod) %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-usd"></i> <span><%= t(:payment_method) %></span></a>
                    <ul>
                        <% if can? :read, PaymentMethod %>
                            <li class="<%= "active" if ["admin/payment_methods"].include?(params[:controller]) %>">
                                <%= link_to t(:payment_methods), admin_payment_methods_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, Voucher) or can?(:read, Coupon) %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-gift"></i> <span><%= t(:voucher_coupon) %></span></a>
                    <ul>
                        <% if can? :read, Voucher %>
                            <li class="<%= "active" if ["admin/vouchers"].include?(params[:controller]) %>">
                                <%= link_to t(:vouchers), admin_vouchers_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Coupon %>
                            <li class="<%= "active" if ["admin/coupons"].include?(params[:controller]) %>">
                                <%= link_to t(:coupons), admin_coupons_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, Customer) or can?(:read, Contact) or can?(:read, Newsletter) %>
                <li>
                    <a href="#"><i class="icon-people"></i> <span><%= t(:customer) %></span></a>
                    <ul>
                        <% if can? :read, Customer %>
                            <li class="<%= "active" if ["admin/customers"].include?(params[:controller]) %>">
                                <%= link_to t(:customers), admin_customers_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Contact %>
                            <li class="<%= "active" if ["admin/contacts"].include?(params[:controller]) %>">
                                <%= link_to t(:contact), admin_contacts_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Newsletter %>
                            <li class="<%= "active" if ["admin/newsletters"].include?(params[:controller]) %>">
                                <%= link_to t(:newsletter), admin_newsletters_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, User) or can?(:read, UserGroup) %>
                
                <li>
                    <a href="#"><i class="icon-users"></i> <span><%= t(:user) %></span></a>
                    <ul>
                        <% if can? :read, User %>
                            <li class="<%= "active" if ["admin/users"].include?(params[:controller]) %>">
                                <%= link_to t(:users), admin_users_path %>
                            </li>
                        <% end %>
                        <% if can? :read, UserGroup %>
                            <li class="<%= "active" if ["admin/user_groups"].include?(params[:controller]) %>">
                                <%= link_to t(:user_groups), admin_user_groups_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            
            <% end %>
            
            <% if can?(:read, Company) %>
                <li>
                    <a href="#"><i class="icon-office"></i> <span><%= t(:company) %></span></a>
                    <ul>
                        <% if can? :read, Company %>
                            <li class="<%= "active" if ["admin/companies"].include?(params[:controller]) %>">
                                <%= link_to t(:branch_office), admin_companies_path %>
                            </li>
                        <% end %>
                        <% if can? :read, Company %>
                            <li>
                                <%= link_to t(:head_office), admin_head_office_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
            
            <% if can?(:read, Option) %>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-cog"></i> <span><%= t(:settings) %></span></a>
                    <ul>
                        <% if can? :read, Option %>
                            <li class="<%= "active" if ["admin/options"].include?(params[:controller]) %>">
                                <%= link_to t(:options), admin_options_path %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
        </ul>
    </div>
</div>