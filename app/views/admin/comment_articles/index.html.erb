<p id="notice"><%= notice %></p>

<h1>Listing Comment Articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Content</th>
      <th>User</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_articles.each do |comment_article| %>
      <tr>
        <td><%= comment_article.name %></td>
        <td><%= comment_article.email %></td>
        <td><%= comment_article.content %></td>
        <td><%= comment_article.user_id %></td>
        <td><%= comment_article.article_id %></td>
        <td><%= link_to 'Show', comment_article %></td>
        <td><%= link_to 'Edit', edit_comment_article_path(comment_article) %></td>
        <td><%= link_to 'Destroy', comment_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

