<% if @article_category.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @article_category.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @article_category], html: {class: "form-horizontal", id: "validate_checking"} do |f| %>

    <div class="tabbable tab-content-bordered">
        
        <ul class="nav nav-tabs bg-primary">
            <li class="active"><a href="#control-tab1" data-toggle="tab"><%= t(:en_info) %></a></li>
            <li><a href="#control-tab2" data-toggle="tab"><%= t(:vi_info) %> </a></li>
        </ul>
        
        <div class="tab-content">
            <div class="tab-pane has-padding active" id="control-tab1">
    
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:list_categories_article_name) %> <span class='text-danger'>*</span></label>
                    <div class="col-lg-9">
                        <%= f.text_field :name, class: "form-control required" %>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
                    <div class="col-lg-9">
                        <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:meta_keywords) %> </label>
                    <div class="col-lg-9">
                        <%= f.text_field :meta_keywords, class: "form-control" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:meta_description) %> </label>
                    <div class="col-lg-9">
                        <%= f.text_area :meta_description, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= f.label t(:related_categories), class: "col-lg-3 control-label" %>
                    <div class="col-lg-9">
                        <div class="row-fluid">
                            <div class="radio">
                                <%= radio_button_tag 'parent_id', "", @article_category.parent.empty?, :id => "article_category_none", class: "styled-level-1" %>
                                <label for="article_category_none"><%= t(:none) %></label>
                            </div>
                        </div>
                        <% ArticleCategory.all.each do |article_category| %>
                            <% if @article_category.id != article_category.id %>
                              <% if article_category.level == 1 %>
                                <% if @article_category.id != article_category.id %>
                                    <div class="row-fluid">
                                        <div class="radio">
                                            <%= radio_button_tag 'parent_id', article_category.id, @article_category.parent.include?(article_category), id: "article_category", class: "styled-level-1" %>
                                            <label for="article_category_<%= article_category.id %>"><%= article_category.name %></label>
                                        </div>
                                    </div>
                                <% end %>
                              <% end %>
                            <% end %>
                        <% end %>
                    </div>
                </div>
                <div class="text-right">
                    <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
                    <%= link_to "#{t(:cancel)} <i class=\"icon-cross3 position-right\"></i>".html_safe, admin_article_categories_path, class: "btn btn-danger"%>
                </div>
            </div>
                    
            <div class="tab-pane has-padding" id="control-tab2">
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:categories_article_name_vi) %> <span class='text-danger'>*</span></label>
                    <div class="col-lg-9">
                        <%= f.text_field :name_vi, class: "form-control required" %>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-lg-3 control-label" ><%= t(:description_vi) %> <!--<span class='text-danger'>*</span>--></label>
                    <div class="col-lg-9">
                        <%= f.text_area :description_vi, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>
                <div class="text-right">
                    <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
                    <%= link_to "#{t(:cancel)} <i class=\"icon-cross3 position-right\"></i>".html_safe, admin_article_categories_path, class: "btn btn-danger"%>
                </div>
            </div>
        </div>
                
    </div>
    
<% end %>