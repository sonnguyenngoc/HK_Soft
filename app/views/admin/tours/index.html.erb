<!-- Main navbar -->
<%= render "/admin/main/main_navbar" %>
<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                <%= render "/admin/main/user_menu" %>
                <!-- /user menu -->

                <!-- Main navigation -->
                <%= render "/admin/main/main_menu" %>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->

        <!-- Main content -->
        <div class="content-wrapper">
        
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><span class="text-semibold">Danh sách tour du lịch</span></h4>
                    </div>
                    
                </div>
                
                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to '<i class="icon-home2 position-left"></i>'.html_safe + t(:home), { controller: "main", action: "index" } %></li>
                        <li><a href="<%= admin_tours_path %>">Quản lý tour du lịch</a></li>
                        <li class="active">Danh sách tour du lịch</li>
                    </ul>
                    
                </div>
            </div>
            <!-- /page header -->
            
            <!-- Content area -->
            <div class="content">
                <!-- Basic datatable -->
                <div class="panel panel-flat">
                    
                    <div class="panel-heading col-md-12">
                        <h5 class="panel-title col-md-6"><span class="text-semibold">Danh sách tour du lịch</span></h5>
                        <%= link_to "Tạo tour du lịch", new_admin_tour_path, class: 'btn btn-primary pull-right' %>
                    </div>
                    
                    <table class="table">
                        <thead>
                            <tr class="bg-teal-800">
                                <th><%= t(:list_image) %></th>
                                <th class="text-nowrap"><%= t(:name) %></th>
                                <th><%= t(:price) %></th>
                                <th><%= t(:created_at) %></th>
                                <th class="text-nowrap"><%= t(:actions) %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @tours.each do |item| %>
                                <tr>
                                    <td>
                                      <%= link_to image_tag(item.image_url.smaller_image), edit_admin_tour_path(item), title: item.name %>
                                    </td>
                                    <td>
                                        <strong><%= raw truncate(strip_tags(item.name), length: 20) %></strong>
                                    </td>
                                    <td><%= format_number(item.new_price) %></td>
                                    <td>
                                        <%= item.created_at.strftime("%d/%m/%Y") %>
                                    </td>
                                    <td class="text-center">
                                        <ul class="icons-list">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                    <i class="icon-menu9"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li>
                                                        <%= link_to '<i class="glyphicon glyphicon-ok"></i> '.html_safe + t(:approve), {controller: "admin/tours", action: "approve", id: item.id} %>
                                                    </li>
                                                    <li>
                                                        <%= link_to '<i class="glyphicon glyphicon-edit"></i> '.html_safe + t(:edit), edit_admin_tour_path(item) %>
                                                    </li>
                                                    <li>
                                                        <%= link_to '<i class="icon-cross2"></i>'.html_safe + t(:delete), "#delete_tour", url: admin_tour_path(item), class: "backend_delete_item" %>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <div class="dataTables_wrapper no-footer">
                        <div class="datatable-footer showed">
                            <div class="dataTables_info" ><%= page_entries_info @tours %></div>
                            <div class="dataTables_paginate paging_simple_numbers">
                                <%= will_paginate @tours, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /basic datatable -->
            
                <!-- Footer -->
                <%= render '/admin/main/footer' %>
                <!-- /footer -->
            
            </div>
            <!-- /content area -->
        
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<%= javascript_include_tag '/backend/assets/javascripts/datatables_products.js' %>
<!-- /theme JS files -->