<% if @car.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
            <% @car.errors.full_messages.each do |message| %>
                - <%= message %>.<br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @car], html: {class: "form-horizontal", id: "validate_checking"} do |f| %>
    <div class="form-group">
        <label class="col-lg-3 control-label" >Hình đại diện cho xe<span class='text-danger'>*</span></label>
        <div class="col-lg-9">
            <div class="uploader bg-teal-400">
                <%= f.file_field :image_url, class: "file-styled ", accept: ".png, .jpg, .jpeg, .gif" %>
                <span class="action" style="-webkit-user-select: none;"><i class="icon-googleplus5"></i></span>
            </div>
            <span class="help-block">Accepted formats: gif, png, jpg.</span>
            <%= image_tag(@car.image_url, size: "202x128", class: "img-rouded") %>
        </div>
    </div>
       
    <div class="form-group">
        <label class="col-lg-3 control-label" >Tên xe<span class='text-danger'>*</span></label>
        <div class="col-lg-9">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-3 control-label" >Giá <span class='text-danger'>*</span></label>
        <div class="col-lg-9">
            <%= f.text_field :price, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-3 control-label" >Mô tả</label>
        <div class="col-lg-9">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control editor-inlite" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-3 control-label" >Loại xe<span class='text-danger'>*</span></label>
        <div class="col-lg-9">
            <% ArticleCategory.get_menu_car_hires.each do |item| %>
                <select name="car[article_category_id]" data-placeholder="Chọn chuyên mục xe..." class="select-car-category select-lg">
                    <option></option>
                    <% item.children.each do |child_1| %>
                        <option <%= "selected" if @car.article_category_id == child_1.id %> value="<%= child_1.id %>"><%= child_1.name %></option>
                    <% end %>
                </select>
            <% end %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label "Thương hiệu xe", class: "col-lg-3 control-label" %>
        <div class="col-lg-9">
            <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name, {:prompt=> "Chọn thương hiệu xe....."}, {class: "select-manufacturer"}) %>
        </div>
    </div>
        
    <div class="form-group">
                    <label class="col-lg-2 control-label" >Nội dung <span class='text-danger'>*</span></label>
                </div>
                <div class="form-group">
                    <div class="upload_tools text-right" style="margin-bottom: 5px; margin-top: -30px;">											
                      <span class="uploading" style="display: none;font-size: 17px;">
                        Đang tải hình ảnh/video...<i class="icon-spinner2 spinner" style="font-size: 40px; display: inline-block; margin-right: 10px;"></i>
                      </span>
                      <a id="editor_upload_button" class="btn btn-primary btn-xs upload-image-video">Tải hình ảnh</a>
                      <a data-toggle="modal" data-target="#modal_upload_video" href="#" class="btn btn-primary btn-xs upload-video" >Tải video</a>
                    </div>
                    <%= f.text_area :content, rows: "4", cols: "4", id: "editor-full" %>
                </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_cars_path, class: "btn btn-danger"%>
    </div>
<% end %>

<%= render "/admin/main/editor_upload" %>