<% if @coupon.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @coupon.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @coupon], html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:title) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="control-label col-lg-2"><%= t(:from_date) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="icon-calendar5"></i></span>
                <%= f.text_field :from_date, value: @coupon.from_date.strftime("%d %B, %Y"), class: "form-control pickadate-selectors" %>
            </div>
        </div>     
    </div>
    
    <div class="form-group">
        <label class="control-label col-lg-2"><%= t(:to_date) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="icon-calendar5"></i></span>
                <%= f.text_field :to_date, value: @coupon.to_date.strftime("%d %B, %Y"), class: "form-control pickadate-selectors" %>
            </div>
        </div>     
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:quantity) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :quantity, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:price) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :price, class: "form-control", value: format_number(@coupon.price) %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-lg-2 control-label"><%= t(:description) %></label>
        <div class="col-lg-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
    
    <% if !@coupon.code.nil? %>
        <div class="form-group">
            <label class="col-lg-2 control-label" ><%= t(:listing_codes) %> <span class='text-danger'>*</span></label>
            <div class="col-lg-10">
                <% @coupon.codes.each do |code| %>
                    <span class="label bg-primary font-small"><%= code %></span>
                <% end %>
            </div>
        </div>
    <% end %>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_coupons_path, class: "btn btn-danger"%>
    </div>
    
<% end %>