<% if @category.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @category.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @category], html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" >Name <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label "Description", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label "Related Categories", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <% Category.all.each do |category| %>
                <% if @category.id != category.id %>
                  <% if category.level == 1 %>
                    <p><div class="row-fluid">
                      <div class="checkbox">
                        <%= check_box_tag 'category[parent_ids][]', category.id, @category.parent.include?(category), id: "category_#{category.id}", class: "styled-level-1" %>
                        <%= f.label category.name, :for => "category_#{category.id}" %>
                      </div>
                    </div></p>
                    <% category.children.each do |child_1| %>
                        <% if child_1.level == 2 %>
                            <div class="row-fluid">
                              <div class="checkbox">
                                <%= check_box_tag 'category[parent_ids][]', child_1.id, @category.parent.include?(child_1), :id => "category_#{child_1.id}", class: "styled-level-2" %>
                                <%= f.label child_1.name, :for => "category_#{child_1.id}" %>
                              </div>
                            </div>
                            <% child_1.children.each do |child_2| %>
                                <% if child_2.level == 3 %>
                                    <div class="row-fluid">
                                      <div class="checkbox">
                                        <%= check_box_tag 'category[parent_ids][]', child_2.id, @category.parent.include?(child_2), :id => "category_#{child_2.id}", class: "styled-level-3" %>
                                        <%= f.label child_2.name, :for => "category_#{child_2.id}" %>
                                      </div>
                                    </div>
                                <% end %>
                            <% end %>
                        <% end %>
                    <% end %>
                  <% end %>
                <% end %>
            <% end %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag 'Save <i class="icon-plus22 position-right"></i>'.html_safe, class: "btn btn-primary"%>
        <%= link_to 'Cancel <i class="icon-cross3 position-right"></i>'.html_safe, admin_categories_path, class: "btn btn-danger"%>
    </div>
    
<% end %>