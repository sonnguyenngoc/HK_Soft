<!-- Main navbar -->
<%= render "/admin/main/main_navbar" %>
<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                <%= render "/admin/main/user_menu" %>
                <!-- /user menu -->

                <!-- Main navigation -->
                <%= render "/admin/main/main_menu" %>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->

        <!-- Main content -->
        <div class="content-wrapper">
        
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><span class="text-semibold">Danh sách nhóm tour</span></h4>
                    </div>
                    
                </div>
                
                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to '<i class="icon-home2 position-left"></i>'.html_safe + t(:home), { controller: "main", action: "index" } %></li>
                        <li><a href="<%= admin_tour_events_path %>">Quản lý nhóm tour</a></li>
                        <li class="active">Danh sách nhóm tour</li>
                    </ul>
                    
                </div>
            </div>
            <!-- /page header -->
            
            <!-- Content area -->
            <div class="content">
                <!-- Basic datatable -->
                <div class="panel panel-flat">
                    
                    <div class="panel-heading col-md-12">
                        <h5 class="panel-title col-md-6"><span class="text-semibold">Danh sách nhóm tour</span></h5>
                        <%= link_to "Tạo nhóm tour", new_admin_tour_event_path, class: 'btn btn-primary pull-right' %>
                    </div>
                    
                    <table class="table">
                        <thead>
                            <tr class="bg-teal-800">
                                <th class="text-nowrap"><%= t(:title) %></th>
                                <th><%= t(:description) %></th>
                                <th><%= t(:created_at) %></th>
                                <th class="text-nowrap"><%= t(:actions) %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @tour_events.each do |item| %>
                                <tr>
                                    <td>
                                        <% if can? :update, item %>
                                        <strong><%= link_to item.title, edit_admin_tour_event_path(item), title: item.title %></strong>
                                        <% else %>
                                        <strong><%= item.title %>
                                        <% end %>
                                        <br>
                                        <% if item.active == true %>
                                            <span class="label bg-info">Nhóm tour đang hiển thị</span>
                                        <% else %>
                                            <span class="label bg-orange-600">Nhóm tour đang được ẩn</span>
                                        <% end %>
                                    </td>
                                    <td><%= item.description %></td>
                                    <td>
                                        <%= item.created_at.strftime("%d/%m/%Y") %>
                                    </td>
                                    <td class="text-center">
                                        <% if can?(:update, item) or can?(:delete, item) %>
                                            <ul class="icons-list">
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <i class="icon-menu9"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-right">
                                                        <% if can? :update, item %>
                                                            <% if item.active == false %>
                                                            <li>
                                                                <%= link_to '<i class="glyphicon glyphicon-ok"></i> Duyệt nhóm tour'.html_safe, {controller: "admin/tour_events", action: "approve", id: item.id} %>
                                                            </li>
                                                            <% else %>
                                                            <li>
                                                                <%= link_to '<i class="glyphicon glyphicon-remove"></i> Ẩn nhóm tour'.html_safe, {controller: "admin/tour_events", action: "inactive", id: item.id} %>
                                                            </li>
                                                            <% end %>
                                                            <li>
                                                                <%= link_to '<i class="glyphicon glyphicon-edit"></i> '.html_safe + t(:edit), edit_admin_tour_event_path(item) %>
                                                            </li>
                                                        <% end %>
                                                        <% if can? :delete, item %>
                                                            <li>
                                                                <%= link_to '<i class="icon-cross2"></i>'.html_safe + t(:delete), "#delete_tour_event", url: admin_tour_event_path(item), class: "backend_delete_item" %>
                                                            </li>
                                                        <% end %>
                                                    </ul>
                                                </li>
                                            </ul>
                                        <% end %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <div class="dataTables_wrapper no-footer">
                        <div class="datatable-footer showed">
                            <div class="dataTables_info" ><%= page_entries_info @tour_events %></div>
                            <div class="dataTables_paginate paging_simple_numbers">
                                <%= will_paginate @tour_events, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /basic datatable -->
            
                <!-- Footer -->
                <%= render '/admin/main/footer' %>
                <!-- /footer -->
            
            </div>
            <!-- /content area -->
        
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<%= javascript_include_tag '/backend/assets/javascripts/datatables_products.js' %>
<!-- /theme JS files -->