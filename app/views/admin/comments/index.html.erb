<!-- Main navbar -->
<%= render "/admin/main/main_navbar" %>
<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-main">
            <div class="sidebar-content">

                <!-- User menu -->
                <%= render "/admin/main/user_menu" %>
                <!-- /user menu -->

                <!-- Main navigation -->
                <%= render "/admin/main/main_menu" %>
                <!-- /main navigation -->

            </div>
        </div>
        <!-- /main sidebar -->

        <!-- Main content -->
        <div class="content-wrapper">
        
            <!-- Page header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div class="page-title">
                        <h4><span class="text-semibold"><%= t(:comments) %></span></h4>
                    </div>
                </div>
            
                <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                        <li><%= link_to '<i class="icon-home2 position-left"></i>'.html_safe + t(:home), { controller: "main", action: "index" } %></li>
                        <li><a href="<%= admin_comments_path %>"><%= t(:comment_question) %></a></li>
                        <li class="active"><%= t(:comments) %></li>
                    </ul>
                </div>
            </div>
            <!-- /page header -->
            
            <!-- Content area -->
            <div class="content">
            
                <!-- Basic datatable -->
                <div class="panel panel-flat">
                    
                    <div class="filter-box">
                        <%= form_for("", url: {controller: 'comments', action: 'search'}, method: "get") do |f| %>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:product) %></label>
                                        <div>
                                            <%= select_tag(:product_id, options_from_collection_for_select(Product.all, :id, :name, :selected => params[:product_id]), include_blank: "All", class: "select") %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:sort_by) %></label>
                                        <div>
                                            <%= select_tag(:sort_by, options_for_select(Comment.sort_by, :selected => params[:sort_by]), class: "select") %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="" ><%= t(:sort_order) %></label>
                                        <div>
                                            <%= select_tag(:sort_order, options_for_select(Comment.sort_order, :selected => params[:sort_order]), class: "select") %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 pull-right">
                                    <div class="form-group">
                                        <label class="" ><%= t(:filter) %></label>
                                        <div class="input-group">
                                            <input type="text" name="keyword" class="form-control" placeholder="<%= t(:placeholder_filter) %>" value="<%= params[:keyword] %>">
                                            <a class="input-group-addon keyword_search_button"><i class="icon-search4"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row row-2">
                                
                            </div>
                        <% end %>
                    </div>
                    
                    <table class="table">
                        <thead>
                            <tr class="bg-teal-800">
                                <th><%= t(:customer_name) %></th>
                                <th><%= t(:product_name) %></th>
                                <th><%= t(:content) %></th>
                                <th><%= t(:rating) %></th>
                                <th><%= t(:user) %></th>
                                <th><%= t(:created_at) %></th>
                                <th class="text-center"><%= t(:actions) %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @comments.each do |item| %>
                                <tr>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= link_to item.product.name, { controller: "/product", action: "product", product_id: item.product_id }, target: "_blank" %>
                                    </td>
                                    <td>
                                        <%= item.content %>
                                    </td>
                                    <td>
                                        <%= item.star %> <%= t(:star) %>
                                    </td>
                                    <td>
                                        <% if !item.user.nil? %>
                                            <%= item.user.short_name %>
                                        <% end %>
                                    </td>
                                    <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                                    <td class="text-center">
                                        <ul class="icons-list">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                    <i class="icon-menu9"></i>
                                                </a>
                
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li>
                                                        <%= link_to '<i class="icon-cross2"></i>'.html_safe + t(:delete), [:admin, item], method: :delete, data: {confirm: t(:confirm_delete)} %>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <div class="dataTables_wrapper no-footer">
                        <div class="datatable-footer showed">
                            <div class="dataTables_info" ><%= page_entries_info @comments %></div>
                            <div class="dataTables_paginate paging_simple_numbers">
                                <%= will_paginate @comments, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /basic datatable -->
            
                <!-- Footer -->
                <%= render '/admin/main/footer' %>
                <!-- /footer -->
            
            </div>
            <!-- /content area -->
        
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<%= javascript_include_tag '/backend/assets/javascripts/datatables_manufacturers.js' %>
<!-- /theme JS files -->