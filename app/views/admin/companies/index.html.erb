<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th>Head office address</th>
      <th>Certificate no</th>
      <th>Date of issue</th>
      <th>Sales office address</th>
      <th>Phone</th>
      <th>Hotline</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.image_url %></td>
        <td><%= company.name %></td>
        <td><%= company.head_office_address %></td>
        <td><%= company.certificate_no %></td>
        <td><%= company.date_of_issue %></td>
        <td><%= company.sales_office_address %></td>
        <td><%= company.phone %></td>
        <td><%= company.hotline %></td>
        <td><%= company.email %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

