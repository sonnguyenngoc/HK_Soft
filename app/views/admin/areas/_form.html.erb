<% if @area.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @area.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @area], html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" >Name <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label "Description", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label "Related Areas", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.collection_select(:parent_id, Area.all, :id, :name, {:prompt=> "None....."}, {class: "select"}) %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag 'Save <i class="icon-plus22 position-right"></i>'.html_safe, class: "btn btn-primary"%>
        <%= link_to 'Cancel <i class="icon-cross3 position-right"></i>'.html_safe, admin_areas_path, class: "btn btn-danger"%>
    </div>
    
<% end %>