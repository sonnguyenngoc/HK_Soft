<section class="section_offset">

    <h3>Sản phẩm liên quan</h3>

    <div class="owl_carousel widgets_carousel">

        <ul class="products_list_widget">
            
            <% @blog.products.each_with_index do |item, index| %>

                <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
    
                <li>
                    
					<%= link_to image_tag(item.get_main_image.image_url.small_image), { controller: "product", action: "product", product_id: item.id }, class: "product_thumb", title: item.name %>
    
                    <div class="wrapper">
                        
                        <%= link_to truncate(strip_tags(item.name), length: 30), { controller: "product", action: "product", product_id: item.id }, class: "product_title", title: item.name %>
                        
                        
                        <div class="clearfix product_info">

                            <p class="product_price alignleft"><b><%= format_number(item.price) %> đ</b></p>

						</div>
                        
                    </div>
    
                </li>
    
                <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
    
        <%= "</ul><!--/ .list_of_products--> <ul class='products_list_widget'>".html_safe if index%3 == 2 %>
                 
            <% end %>
            
    </div>

</section>