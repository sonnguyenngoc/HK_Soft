<section class="section_offset categories_module">

    <h3>
        
        <%= link_to '<i class="icon-menu"></i> Tất cả chuyên mục'.html_safe, go_home_path %>
    
    </h3>

    <ul class="theme_menu cats dropdown active visible find main_cat_menu">
        
        <% Category.get_all_categories(params).each do |category| %>
        
            <% if category.children.order(:ordered).count == 0 %>
                
                <li class="top"><%= link_to category.name, { controller: "product", action: "category", category_id: category.id, title: url_friendly(category.name) } %></li>
                
            <% else %>

                <li class="has_megamenu animated_item">
    
                    <%= link_to category.name, { controller: "product", action: "category", category_id: category.id, title: url_friendly(category.name) } %>
    
                    <!-- - - - - - - - - - - - - - Mega menu - - - - - - - - - - - - - - - - -->
    
                    <div class="mega_menu clearfix">
                        
                        <% category.children.order(:ordered).each do |child_1| %>
    
                            <!-- - - - - - - - - - - - - - Mega menu item - - - - - - - - - - - - - - - - -->
        
                            <div class="mega_menu_item">
                            
                                <h6><b><%= link_to child_1.name, { controller: "product", action: "category", category_id: child_1.id, title: url_friendly(child_1.name) } %></b></h6>
                            
                                <ul class="list_of_links">
                                    
                                    <% child_1.children.order(:ordered).each do |child_2| %>
        
                                        <li><%= link_to child_2.name, { controller: "product", action: "category", category_id: child_2.id, title: url_friendly(child_2.name) } %></li>
                                        
                                    <% end %>
        
                                </ul>
        
                            </div><!--/ .mega_menu_item-->
        
                            <!-- - - - - - - - - - - - - - End of mega menu item - - - - - - - - - - - - - - - - -->
                        
                        <% end %>
                    
                        <!-- - - - - - - - - - - - - - Mega menu item - - - - - - - - - - - - - - - - -->
                    
                        <!--<div class="mega_menu_item">
                                                        
                            <a href="#">
                                <img src="/frontend/images/mega_menu_img_1.jpg" alt="">
                            </a>
        
                        </div>-->
                        
                        <!-- - - - - - - - - - - - - - End of mega menu - - - - - - - - - - - - - - - - -->
    
                    </div><!--/ .mega_menu-->
    
                    <!-- - - - - - - - - - - - - - End of mega menu - - - - - - - - - - - - - - - - -->
    
                </li>
            
            <% end %>
            
        <% end %>

    </ul>

</section><!--/ .animated.transparent-->