<section class="section_offset" id="form_comment_box">
                            
    <h3>Bình luận</h3>

    <ol class="comments-list">
        
        <% if @blog.comment_articles.get_comments.count > 0 %>
        
            <% @blog.comment_articles.get_comments.each do |comment| %>
    
                <!-- - - - - - - - - - - - - - Comment (level 1) - - - - - - - - - - - - - - - - -->
        
                <li class="comment">
        
                    <article>
        
                        <!-- - - - - - - - - - - - - - Avatar - - - - - - - - - - - - - - - - -->
                    
                        <div class="avatar">
        
                            <img src="/frontend/images/comment_author_photo.jpg" alt="">
        
                        </div>
        
                        <!-- - - - - - - - - - - - - - End of avatar - - - - - - - - - - - - - - - - -->
        
                        <!-- - - - - - - - - - - - - - Comment body - - - - - - - - - - - - - - - - -->
        
                        <div class="comment-body">
        
                            <header class="comment-meta">
        
                                <h6 class="comment-author"><%= comment.name %></h6>, <%= comment.created_at.strftime("%d-%m-%Y") %>
        
                            </header>
        
                            <p class="text-justifly"><%= comment.content %></p>
        
                        </div>
        
                        <!-- - - - - - - - - - - - - - End of comment body - - - - - - - - - - - - - - - - -->
						
						<% if current_user.present? %>
							
							<% if can? :delete, comment %>
								
								<a href="#comment_reply" value="<%= comment.id %>" class="button_grey icon_btn custom-comment-reply-link"><i class="icon-reply-4"></i></a>
								
								<%= link_to '<i class="icon-cancel"></i>'.html_safe, comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "button_grey icon_btn custom-comment-remove-link" %>
							
							<% else %>
								
								<a href="#comment_reply" value="<%= comment.id %>" class="button_grey icon_btn custom-comment-remove-link"><i class="icon-reply-4"></i></a>
							
							<% end %>
						
						<% end %>
						
                    </article>
                    
                    <% if comment.children.count > 0 %>
                    
                        <ol class="children">
                            
                            <% comment.children.each do |child| %>
    
                                <!-- - - - - - - - - - - - - - Comment (level 2) - - - - - - - - - - - - - - - - -->
        
                                <li class="comment">
        
                                    <article>
        
                                        <!-- - - - - - - - - - - - - - Avatar - - - - - - - - - - - - - - - - -->
                                    
                                        <div class="avatar">
        
                                            <img src="/frontend/images/comment_author_photo.jpg" alt="">
        
                                        </div>
        
                                        <!-- - - - - - - - - - - - - - End of avatar - - - - - - - - - - - - - - - - -->
        
                                        <!-- - - - - - - - - - - - - - Comment body - - - - - - - - - - - - - - - - -->
        
                                        <div class="comment-body">
        
                                            <header class="comment-meta">
        
                                                <h6 class="comment-author"><%= child.name %></h6>, <%= child.created_at.strftime("%d-%m-%Y") %>
        
                                            </header>
        
                                            <p class="text-justifly"><%= child.content %></p>
        
                                        </div>
        
                                        <!-- - - - - - - - - - - - - - End of comment body - - - - - - - - - - - - - - - - -->
										
										<% if current_user.present? %>
										
											<% if can? :delete, child %>
												
												<%= link_to '<i class="icon-cancel"></i>'.html_safe, child, method: :delete, data: { confirm: 'Are you sure?' }, class: "button_grey icon_btn custom-comment-remove-link" %>
			
											<% end %>
										
										<% end %>
									
									</article>
        
                                </li>
        
                                <!-- - - - - - - - - - - - - - End of comment (level 2) - - - - - - - - - - - - - - - - -->
    
                            <% end %>
                            
                        </ol>
                        
                    <% end %>
        
                </li>
        
                <!-- - - - - - - - - - - - - - End of comment (level 1) - - - - - - - - - - - - - - - - -->
                
            <% end %>
            
        <% end %>

    </ol>

</section>