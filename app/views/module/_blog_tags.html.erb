<section class="section_offset">

    <h3>Từ khóa phổ biến</h3>
  
    <div class="tags_container">
  
        <% Product.all.each do |item| %>
            <% if !item.tags.empty? %>       
                <a href="<%= search_path(keyword: item.tags) %>" class=""><strong><%= item.tags %></strong></a>
            <% end %>
        <% end %>
        
        <% if !Article.get_keyword_article.nil? and false %>
           
            <ul class="tags_cloud">
                
                <% Article.get_keyword_article.keywords.each do |item| %>
                    
                    <li><a href="#" class="button_grey"><%= item.html_safe %></a></li>
                
                <% end %>

            </ul><!--/ .tags_cloud-->
       
        <% end %>
        
    </div><!--/ .tags_container-->

</section>