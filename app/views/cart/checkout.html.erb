<%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>
<script>
    $('#different_delivery_checkbox').change(function() {
        var val = $(this).is(":checked");
        if(val) {
            $('.different_delivery_box').hide();
        }
        else {
            $('.different_delivery_box').show();
        }
    });
    $('#different_delivery_checkbox').trigger("change");
        jQuery(document).ready(function($){
        $("#form_validate").validate();
    });
</script>