<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title"><%= @car_category.name %></h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li><%= link_to "Thuê Xe Ô Tô", car_hire_path %></li>
                <li class="active"><%= @car_category.name %></li>
            </ul>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div id="main">
                <div class="row">
                    <div class="col-sm-4 col-md-3">
                        <div class="toggle-container filters-container">
                            <%= render "/home/need_help" %>
                        </div>
                    </div>
                    <div class="col-sm-8 col-md-9">
                        <div class="car-list">
                            <div class="row image-box car listing-style1">
                                <% @cars.each do |item| %>
                                    <div class="col-sms-6 col-sm-6 col-md-4">
                                        <article class="box">
                                            <figure>
                                                <%= link_to image_tag(item.image_url.small_image), car_detail_path(car_id: item, name: item.url_friendly) %>
                                            </figure>
                                            <div class="details">
                                                <h4 class="box-title"><%= item.name %><small>Giá: <% if item.price == 0 %>Liên Hệ<% else %><%= format_number(item.price) %> VNĐ<% end %></small></h4>
                                                <div class="action">
                                                    <%= link_to "Xem Xe", car_detail_path(car_id: item, name: item.url_friendly), class: "button btn-small full-width sky-blue1" %>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        <%= will_paginate @cars, previous_label: 'TRANG TRƯỚC', next_label: 'TRANG SAU', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>

<script type="text/javascript">
    tjq(document).ready(function() {
        tjq("#price-range").slider({
            range: true,
            min: 0,
            max: 1000,
            values: [ 100, 800 ],
            slide: function( event, ui ) {
                tjq(".min-price-label").html( "$" + ui.values[ 0 ]);
                tjq(".max-price-label").html( "$" + ui.values[ 1 ]);
            }
        });
        tjq(".min-price-label").html( "$" + tjq("#price-range").slider( "values", 0 ));
        tjq(".max-price-label").html( "$" + tjq("#price-range").slider( "values", 1 ));
    });
</script>