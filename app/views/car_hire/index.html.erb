<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>

    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title">
                <h2 class="entry-title"><%= @page_name.name %></h2>
            </div>
            <ul class="breadcrumbs">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li><%= link_to @page_name.name, service_path %></li>
                <li class="active">Thuê xe du lịch</li>
            </ul>
        </div>
    </div>
    
    <section id="content" class="gray-area">
        <div class="container">
            <div id="main">
                <div class="row">
                    <div class="col-sm-4 col-md-3">
                        <div class="toggle-container filters-container">
                            <form>
                                <div class="panel style1 arrow-right">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#cartype-filter" class="collapsed">Loại Xe</a>
                                    </h4>
                                    <div id="cartype-filter" class="panel-collapse collapse filters-container">
                                        <div class="panel-content">
                                            <ul class="check-square filters-option">
                                                <% ArticleCategory.get_menu_car_hires.each do |item| %>
                                                    <% item.children.each do |child_1| %>
                                                        <li><a href="#"><%= child_1.name %></a></li>
                                                    <% end %>
                                                <% end %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="panel style1 arrow-right">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#car-rental-agent-filter" class="collapsed">Hãng Xe</a>
                                    </h4>
                                    <div id="car-rental-agent-filter" class="panel-collapse collapse">
                                        <div class="panel-content">
                                            <ul class="check-square filters-option">
                                                <% Manufacturer.all.each do |item| %>
                                                    <li><a href="#"><%= item.name %></a></li>
                                                <% end %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="panel style1 arrow-right">
                                    <button class="button btn-medium full-width uppercase sky-blue1">Tìm Xe Du Lịch</button>
                                </div>
                            <form>
                        </div>
                    </div>
                    <div class="col-sm-8 col-md-9">
                        <div class="car-list row image-box listing-style2">
                            <% @cars.each do |item| %>
                                <div class="col-sms-6 col-sm-6 col-md-4">
                                    <article class="box">
                                        <figure>
                                            <%= link_to image_tag(item.image_url.large_image, height: '160', width: '270'), car_detail_path(car_id: item, name: item.url_friendly), class: "hover-effect" %>
                                        </figure>
                                        <div class="details">
                                            <h4 class="box-title"><%= link_to item.name, car_detail_path(car_id: item, name: item.url_friendly) %></h4>
                                            <label class="price-wrapper">
                                                Giá: <% if item.price == 0 %>Liên Hệ<% else %><%= format_number(item.price) %> VND<% end %>
                                            </label>
                                            <div class="action">
                                                <%= link_to "Xem Xe", car_detail_path(car_id: item, name: item.url_friendly), class: "button btn-small full-width" %>
                                            </div>
                                        </div>
                                    </article>
                                </div>
                            <% end %>
                        </div>
                        <%= will_paginate @cars, previous_label: 'TRANG TRƯỚC', next_label: 'TRANG SAU', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>

<script type="text/javascript">
    tjq(document).ready(function() {
        tjq("#price-range").slider({
            range: true,
            min: 0,
            max: 1000,
            values: [ 100, 800 ],
            slide: function( event, ui ) {
                tjq(".min-price-label").html( "$" + ui.values[ 0 ]);
                tjq(".max-price-label").html( "$" + ui.values[ 1 ]);
            }
        });
        tjq(".min-price-label").html( "$" + tjq("#price-range").slider( "values", 0 ));
        tjq(".max-price-label").html( "$" + tjq("#price-range").slider( "values", 1 ));
    });
</script>