            <span class="pull-right"><% if @car_detail.price == 0 %>Liên Hệ<% else %><%= format_number(@car_detail.price) %> VND<% end %></span>
        </span>
        <%= link_to "Chọn thuê xe", car_booking_path(car_book_id: @car_detail), class: "button yellow full-width uppercase btn-small" %>
    </div>
