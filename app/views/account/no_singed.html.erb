<!--==================================
		Quick view modal window
======================================-->

<div id="login_mw" class="modal_window">

	<button class="close arcticmodal-close"></button>

	<header class="on_the_sides">

		<div class="left_side">

			<h2>Bạn chưa đăng nhập tài khoản!</h2>

		</div>

	</header><!--/ .on_the_sides-->

	<form class="type_2">

		<ul>

			<li>
				
				<hr/>
			
			</li>

			<li class="v_centered">
				
				<%= link_to "Đăng ký", { controller: "account", action: "register" }, class: "button_grey middle_btn" %>
				
				<%= link_to "Đăng nhập", { controller: "account", action: "login" }, class: "button_blue middle_btn" %>
			
			</li>

		</ul>

	</form>

</div>

<!--==================================
		End quick view modal window
====================================== -->