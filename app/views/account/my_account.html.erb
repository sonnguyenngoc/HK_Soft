<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render 'home/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                <ul class="breadcrumbs">

                    <li><a href="<%= root_path %>">Trang chá»§</a></li>
                    <li>Account</li>

                </ul>

                <div class="row">

                    <aside id="column-left" class="col-md-3 col-sm-4 has_mega_menu">
                      
                        <h3>Account</h3>
                        <div class="list-group box">
                            <a href="<%= url_for({controller: 'account', action: 'register'}) %>" class="list-group-item dark_hover">Register</a> 
                            <a href="<%= url_for({controller: 'account', action: 'forgotten'}) %>" class="list-group-item dark_hover">Forgotten Password</a>
                            <a href="<%= url_for({controller: 'account', action: 'my_account'}) %>" class="list-group-item dark_hover">My Account</a>
                            <a href="<%= url_for({controller: 'account', action: 'address'}) %>" class="list-group-item dark_hover">Address Book</a> 
                            <a href="<%= url_for({controller: 'account', action: 'login'}) %>" class="list-group-item dark_hover">Wish List</a> 
                            <a href="<%= url_for({controller: 'account', action: 'wishlist'}) %>" class="list-group-item dark_hover">Order History</a> 
                            <a href="<%= url_for({controller: 'account', action: 'download'}) %>" class="list-group-item dark_hover">Downloads</a>
                            <a href="<%= url_for({controller: 'account', action: 'recurring_payments'}) %>" class="list-group-item dark_hover">Recurring payments</a> 
                            <a href="<%= url_for({controller: 'account', action: 'reward_points'}) %>" class="list-group-item dark_hover">Reward Points</a> 
                            <a href="<%= url_for({controller: 'account', action: 'return_list'}) %>" class="list-group-item dark_hover">Returns</a> 
                            <a href="<%= url_for({controller: 'account', action: 'transaction'}) %>" class="list-group-item dark_hover">Transactions</a> 
                            <a href="<%= url_for({controller: 'account', action: 'newsletter'}) %>" class="list-group-item dark_hover">Newsletter</a>
                            <a href="<%= url_for({controller: 'account', action: 'logout'}) %>" class="list-group-item dark_hover">Logout</a> 
                        </div>

                    </aside>

                    <main class="col-md-9 col-sm-8">
                        
                        <h1>My Account</h1>
                        
                        <div class="bordered_content padded box">
                            <h4>My Account</h4>
                            <ul class="list-unstyled margin-b">
                                <li><a href="<%= url_for({controller: 'account', action: 'edit'}) %>">Edit your account information</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'password'}) %>">Change your password</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'address'}) %>">Modify your address book entries</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'wishlist'}) %>">Modify your wish list</a></li>
                            </ul>
                            <h4>My Orders</h4>
                            <ul class="list-unstyled margin-b">
                                <li><a href="<%= url_for({controller: 'account', action: 'order'}) %>">View your order history</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'download'}) %>">Downloads</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'reward_points'}) %>">Your Reward Points</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'return_list'}) %>">View your return requests</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'transaction'}) %>">Your Transactions</a></li>
                                <li><a href="<%= url_for({controller: 'account', action: 'recurring_payments'}) %>">Recurring payments</a></li>
                            </ul>
                            <h4>Newsletter</h4>
                            <ul class="list-unstyled margin-b">
                                <li><a href="<%= url_for({controller: 'account', action: 'newsletter'}) %>">Subscribe / unsubscribe to newsletter</a></li>
                            </ul>
                        </div>

                    </main>

                </div><!--/ .row -->

            </div><!--/ .container-->

        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <%= render 'home/footer'%>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

    <%= render 'home/social_feeds' %>

    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery-ui.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.plugin.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.min.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= stylesheet_link_tag '/frontend/css/custom.css' %>

    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
    
</body>