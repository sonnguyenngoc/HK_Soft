<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->
  
    <div class="wide_layout">
  
        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->
  
        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->
  
        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->
  
        <div class="secondary_page_wrapper">
  
            <div class="container">
  
                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->
  
                <ul class="breadcrumbs">
  
                    <li><%= link_to "Trang chủ", root_path %></li>
                    <li><%= link_to "Giỏ hàng", { controller: "checkout", action: "shopping_cart" } %></li>
                    <li><%= @title_head %></li>
  
                </ul>
  
                <h1 class="page_title"><%= @title_head %></h1>
                
                <% if !current_user.present? %>
                
                    <p class="page_title"><a href="#login" class="checkout-quick-login" onclick="$('.checkout-quick-login-box').toggle()">Đăng nhập vào tài khoản của bạn.</a></p>
      
                    <!-- - - - - - - - - - - - - - Login - - - - - - - - - - - - - - - - -->
      
                    <section class="section_offset checkout-quick-login-box" style="display: none;">
      
                        <h3>Đăng nhập</h3>
      
                        <div class="theme_box">
      
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "type_2"}) do |f| %>
                                
                                <ul>
                                    
                                    <li class="row">
                                        
                                        <div class="col-sm-6">
                                            
                                            <label for="email" class="required">Tài khoản: </label>
                                            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Nhập địa chỉ email..." %>
      
                                        </div><!--/ [col] -->
      
                                        <div class="col-sm-6">
                                            
                                            <label for="email" class="required">Mật khẩu</label>
                                            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nhập mật khẩu..." %>
      
                                        </div><!--/ [col] -->
      
                                    </li><!--/ .row -->
      
                                </ul>
                                
                                <br/>
                            
                                <footer class="on_the_sides">
                                    
                                    <div class="left_side">
              
                                        <%= link_to "Đăng ký", { controller: "account", action: "register" }, class: "button_grey middle_btn" %>
              
                                    </div>
          
                                    <div class="right_side">
              
                                        <%= button_tag "Đăng nhập", class: "button_blue middle_btn" %>
              
                                    </div>
              
                                </footer>
                                
                            <% end %>
      
                        </div>
      
                    </section><!--/ .section_offset -->
      
                    <!-- - - - - - - - - - - - - - End of login - - - - - - - - - - - - - - - - -->
                    
                <% end %>
                    
                <%= form_for @order, html: {class: "type_2"} do |f| %>
      
                    <% if current_user.present? %>
                        
                        <!-- - - - - - - - - - - - - - Billing information - - - - - - - - - - - - - - - - -->
  
                        <section class="section_offset">
          
                            <h3>Thông tin đặt hàng</h3>
          
                            <div class="theme_box">
                                
                                <ul class="shipping_method">
          
                                <div class="type_2">
                                    
                                    <ul>
                                        
                                        <li class="row">
                                            
                                            <div class="col-sm-6">
                                                
                                                <label for="first_name" class="required">Họ:</label>
                                                
                                                <input readonly type="text" name="customer[first_name]" id="customer_first_name" value="<%= current_user.first_name %>">
          
                                            </div><!--/ [col] -->
          
                                            <div class="col-sm-6">
                                                
                                                <label for="last_name" class="required">Tên:</label>
                                                
                                                <input readonly type="text" name="customer[last_name]" id="customer_last_name" value="<%= current_user.last_name %>">
          
                                            </div><!--/ [col] -->
          
                                        </li><!--/ .row -->
          
                                        <li class="row">	
                                            
                                            <div class="col-xs-6">
          
                                                <label for="email" class="required">Email:</label>
                                                
                                                <input readonly type="text" name="customer[email]" id="customer_email" value="<%= current_user.email %>">
          
                                            </div><!--/ [col] -->
                                            
                                            <div class="col-xs-6">
          
                                                <label for="phone" class="required">Số điện thoại:</label>
                                                
                                                <input readonly type="text" name="customer[phone]" id="customer_phone" value="<%= current_user.phone %>">
          
                                            </div><!--/ [col] -->
          
                                        </li><!-- / .row -->
          
                                        <li class="row">
          
                                            <div class="col-xs-6">
          
                                                <label for="company">Tên công ty:</label>
                                                
                                                <input readonly type="text" name="customer[company]" id="customer_company" value="<%= current_user.company %>">
          
                                            </div><!--/ [col] -->
                                            
