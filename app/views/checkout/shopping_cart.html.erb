<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->
  
    <div class="wide_layout">
  
        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->
  
        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->
  
        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->
  
        <div class="secondary_page_wrapper">
  
            <div class="container">
  
                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->
  
                <ul class="breadcrumbs">
  
                    <li><%= link_to "Trang chủ", root_path %></li>
                    <li><%= @title_head %></li>
  
                </ul>
  
                <section class="section_offset">
  
                    <h1><%= @title_head %></h1>
                    
                    <% if @cart.get_number_items > 0 %>
                        
                        <%= form_for @cart do |f| %>
  
                            <!-- - - - - - - - - - - - - - Shopping cart table - - - - - - - - - - - - - - - - -->
          
                            <div class="table_wrap">
          
                                <table class="table_type_1 shopping_cart_table">
          
                                    <thead>
          
                                        <tr>
                                            <th class="product_image_col">Hình ảnh</th>
                                            <th class="product_title_col">Tên sản phẩm / Thương hiệu sản phẩm</th>
                                            <th>Mã</th>
                                            <th>Giá</th>
                                            <th class="product_qty_col">Số lượng</th>
                                            <th>Tổng tiền</th>
                                            <th class="product_actions_col"></th>
                                        </tr>
          
                                    </thead>
          
                                    <tbody>
                                        
                                        <% @cart.line_items.each do |item| %>
          
                                            <tr>
                                                
                                                <input type="hidden" name="line_items[id]" value="<%= item.id %>">
              
                                                <!-- - - - - - - - - - - - - - Product Image - - - - - - - - - - - - - - - - -->
                                                    
                                                <td class="product_image_col" data-title="Product Image">
                                                    
                                                    <% if item.product.get_main_image.present? %>
                                                
                                                        <%= link_to image_tag(item.product.get_main_image.image_url.small_image), { controller: "product", action: "product", product_id: item.product.id }, title: item.product.name %>
                                                       
                                                    <% else %>
                                                    
                                                        <img src="/frontend/images/small_image.png" alt="">                                                           
                                                    
                                                    <% end %> 
              
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of product Image - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - Product name - - - - - - - - - - - - - - - - -->
              
                                                <td data-title="Product Name">
                                                    
                                                    <%= link_to item.product.name, { controller: "product", action: "product", product_id: item.product.id }, class: "product_title" %><br/>
              
                                                    <%= link_to item.product.manufacturer.name, { controller: "manufacturer", action: "list"} %>
                                                
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of product name - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - SKU - - - - - - - - - - - - - - - - -->
              
                                                <td data-title="SKU">
              
                                                    <%= item.product.code %>
              
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of SKU - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - Price - - - - - - - - - - - - - - - - -->
              
                                                <td class="subtotal" data-title="Price">
                                                    
                                                    <%= format_number(item.product.price) %> đ
              
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of Price - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - Quantity - - - - - - - - - - - - - - - - -->
              
                                                <td data-title="Quantity">
              
                                                    <div class="min clearfix">
              
                                                        <input class="display_inline qty_input" type="text" name="quantities[<%= item.id %>]" value="<%= item.quantity %>">
              
                                                    </div><!--/ .qty.min.clearfix-->
              
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of quantity - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - Total - - - - - - - - - - - - - - - - -->
              
                                                <td class="total" data-title="Total">
              
                                                    <%= format_number(item.total_item) %> đ
              
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of total - - - - - - - - - - - - - - - - -->
              
                                                <!-- - - - - - - - - - - - - - Action - - - - - - - - - - - - - - - - -->
              
                                                <td data-title="Action">
                                                    
                                                    <button type="submit" class="button_dark_grey icon_btn edit_product">
                                                        
                                                        <i class='fa fa-refresh'></i>
                                                    
                                                    </button>
              
                                                    <%= link_to "<i class='icon-cancel-2'></i>".html_safe , {controller: "checkout", action: "shopping_cart", do: 'remove_item', line_item_id: item.id }, {class: "button_dark_grey icon_btn remove_product"} %>
                                                            
                                                </td>
              
                                                <!-- - - - - - - - - - - - - - End of action - - - - - - - - - - - - - - - - -->
              
                                            </tr>
                                            
                                        <% end %>
          
                                    </tbody>
          
                                </table>
          
                            </div><!--/ .table_wrap -->
      
                        <footer class="bottom_box on_the_sides">
      
                            <div class="left_side">
                                
                                <%= link_to "Tiếp tục mua hàng", root_path, class: "button_blue middle_btn" %>
      
                            </div>
                            
                    <% end %>
      
                            <div class="right_side">
                                
                                 <%= button_to "Xóa giỏ hàng", @cart, class: "button_grey middle_btn", method: :delete %>
      
                            </div>
      
                        </footer><!--/ .bottom_box -->
      
                        <!-- - - - - - - - - - - - - - End of shopping cart table - - - - - - - - - - - - - - - - -->
      
                    </section><!--/ .section_offset -->
      
                    <div class="section_offset">
      
                        <div class="row total_price_shopping_cart">
                            
                            <%= render "total_price_carts" %>
      
                        </div><!--/ .row -->
                        
                    </div><!--/ .section_offset -->
                    
                <% else %>
                    
                    <p class="box">Giỏ hàng trống!</p>
                
                <% end %>   
  
            </div><!--/ .container-->
  
        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->
  
        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->
  
        <%= render 'module/footer' %>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->
  
    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->
  
    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->
  
    <%= render 'module/social_feeds' %>
  
    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.plugin.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.min.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
  
    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
    
    <script>
        
        // using voucher code
        $(document).on("click",".voucher_button", function()
        {
            var code = $('input.voucher_code').val();
            
            $('.voucher_loading').show();
            
            if(code.length) {
                var url = "<%= shopping_cart_use_voucher_carts_path %>";
                //window.location = url;
                
                $.ajax({
                    method: "GET",
                    url: url,
                    data: { code: code }
                })
                .done(function( msg ) {
                  $(".total_price_shopping_cart").html(msg);
                  get_cart();
                });
            }
        });
        
    </script>
  
</body>