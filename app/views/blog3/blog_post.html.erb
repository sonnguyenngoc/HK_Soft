<div class="site_wrapper">

    <%= render "/home/top_navigation" %>
    <!-- end top navigation links -->


    <div class="clearfix"></div>


    <%= render "/home/header" %>
    <!-- end header -->


    <div class="clearfix"></div>


    <div class="page_title1 sty13">
        <div class="container">

            <h1><%= @news.title %></h1>
            <div class="pagenation">&nbsp;<%= link_to "Home", root_path %> <i>/</i> <%= link_to "News", blog3_path %> <i>/</i> <%= @news.title %></div>

        </div>
    </div>
    <!-- end page title -->


    <div class="clearfix"></div>


    <div class="content_fullwidth less2">
        <div class="container">

            <div class="content_left">

                <div class="blog_post">
                    <div class="blog_postcontent">
                        <div class="image_frame">
                            <a href="#"><img src="<%= @news.image_url.hksoft_large_image %>" alt="<%= @news.title %>" /></a>
                        </div>
                        <h3><a href="#news"><%= @news.title %></a></h3>
                        <ul class="post_meta_links">
                            <li><a href="#" class="date"><%= @news.created_at.strftime("%d %B %Y") %></a></li>
                            <li class="post_by"><i>by:</i> <a href="#">HK-Soft</a></li>
                            <li class="post_categoty"><i>in:</i><% @news.article_categories.each do |item| %> <a href="#"><%= item.name %></a><% end %></li>
                        </ul>
                        <div class="clearfix"></div>
                        <div class="margin_top1"></div>
                        <div class="text-justify"><%= @news.content.html_safe %></div>
                    </div>
                </div>
                <!-- /# end post -->

                <div class="clearfix divider_line9 lessm"></div>

            </div>
            <!-- end content left side -->


            <!-- right sidebar starts -->
            <div class="right_sidebar">

                <div class="sidebar_widget">

                    <div id="tabs">

                        <ul class="tabs">
                            <li class="active"><a href="#tab1">Lastest News</a></li>
                            <li class="last"><a href="#tab2">Tags</a></li>
                        </ul>
                        <!-- /# end tab links -->

                        <div class="tab_container">
                            <div id="tab1" class="tab_content">

                                <ul class="recent_posts_list">
                                    
                                    <% @lastest_news.limit(8).each do |item| %>
                                    <li>
                                        <span><%= link_to image_tag(item.image_url.hksoft_square_image, alt: item.title), blog_post_path(news_id: item) %></span>
                                        <%= link_to item.title, blog_post_path(news_id: item), class: "text-justify" %>
                                        <i><%= @news.created_at.strftime("%d %B %Y") %></i>
                                    </li>
                                <% end %>
                                
                                </ul>

                            </div>
                            <!-- end popular posts -->

                            <div id="tab2" class="tab_content">
                                <ul class="tags">

                                    <% @program_languages.each do |item| %>
                                    <li><a href="#<%= item.name %>"><%= item.name %></a></li>
                                    <% end %>
                
                                </ul>

                            </div>
                            <!-- end popular articles -->

                        </div>

                    </div>

                </div>
                <!-- end section -->

                <div class="clearfix margin_top4"></div>

                <div class="clientsays_widget">

                    <div class="sidebar_title">
                        <h4 class="caps">Happy Client Say's</h4></div>

                    <img src="/frontend/images/people-sm1.jpg" alt="" />
                    <strong>- Michle Siminson</strong>
                    <p>Lorem Ipsum passage, and going through the cites of the word here classical literature passage discovere there undou btable source looks reasonable the generated charac eristic words.</p>

                </div>
                <!-- end section -->


            </div>
            <!-- end right sidebar -->


        </div>
    </div>


    <div class="clearfix"></div>


    <%= render "/home/footer" %>
    <!-- end footer -->


    <div class="clearfix"></div>


    <a href="#" class="scrollup">Scroll</a>
    <!-- end scroll to top of the page-->

</div>


