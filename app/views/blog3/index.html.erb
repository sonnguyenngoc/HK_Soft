<div class="site_wrapper">

    <%= render "/home/top_navigation" %>
    <!-- end top navigation links -->


    <div class="clearfix"></div>


    <%= render "/home/header" %>
    <!-- end header -->


    <div class="clearfix"></div>


    <div class="page_title1 sty13">
        <div class="container">

            <h1><%= t(:lastest_news) %></h1>

        </div>
    </div>
    <!-- end page title -->


    <div class="clearfix"></div>


    <div class="content_fullwidth less2">
        
        <div class="container">
            
            <div class="content_halfsite">
                
                <% @articles.each_with_index do |item, index| %>
                    
                    <% if index%3 != 0 %><div class="clearfix divider_line9"></div><% end %>
    
                    <div class="blog_post">
                        <div class="blog_postcontent">
                            <div class="image_frame">
                                <%= link_to image_tag(item.image_url.hksoft_large_image), blog_post_path(news_id: item) %>
                            </div>
                            <% if params[:locale] == "en" %>
                                <h3>
                                    <%= link_to item.title, blog_post_path(news_id: item) %>
                                </h3>
                                <ul class="post_meta_links">
                                    <li><a href="#date" class="date"><%= item.created_at.strftime("%d %B %Y") %></a></li>
        
                                    <li class="post_categoty"><i><%= t(:in) %>:</i> <a href="#news"><%= t(:news) %></a></li>
                                    <li class="post_comments"><i><%= t(:by) %>:</i> <a href="#global_naturesoft"><%= t(:global_naturesoft) %></a></li>
                                </ul>
                                <div class="clearfix"></div>
                                <div class="margin_top1"></div>
                                <p class="text-justify"><%= truncate(strip_tags(item.content), length: 380) %><%= link_to t(:read_more), blog_post_path(news_id: item) %></p>
                            <% else %>
                                <h3>
                                    <%= link_to item.title_vi, blog_post_path(news_id: item) %>
                                </h3>
                                <ul class="post_meta_links">
                                    <li><a href="#date" class="date"><%= item.created_at.strftime("%d/%m/%Y") %></a></li>
        
                                    <li class="post_categoty"><i><%= t(:in) %>:</i> <a href="#news"><%= t(:news) %></a></li>
                                    <li class="post_comments"><i><%= t(:by) %>:</i> <a href="#global_naturesoft"><%= t(:global_naturesoft) %></a></li>
                                </ul>
                                <div class="clearfix"></div>
                                <div class="margin_top1"></div>
                                <p class="text-justify"><%= truncate(strip_tags(item.content_vi), length: 380) %><%= link_to t(:read_more), blog_post_path(news_id: item) %></p>
                            <% end %>
                        </div>
                    </div>
                    <!-- /# end post -->
                    
                    <%= '</div><!-- end section --> <div class="content_halfsite last">'.html_safe if index%3 == 2 %>
                
                <% end %>
            
            </div><!-- end section -->


            <div class="clearfix divider_line13 margin_top4 lessm"></div>

            <div>

                <div class="div_pagination center">
                    <%= will_paginate @articles, previous_label: '< ' + t(:previous), next_label: t(:next) + ' >' %>
                </div>
                <!-- /# end pagination -->

            </div>

        </div>
    </div>


    <div class="clearfix"></div>


    <%= render "/home/footer" %>
    <!-- end footer -->


    <div class="clearfix"></div>


    <a href="#" class="scrollup">Scroll</a>
    <!-- end scroll to top of the page-->

</div>


<!-- ######### JS FILES ######### -->
<!-- get jQuery used for the theme -->
<%= render "/home/js_files" %>

<!-- get jQuery used for the theme - only blog version 3 page -->
<script src="/frontend/js/timeline/modernizr.js"></script>
<script>
    (function($) {
        "use strict";

        jQuery(document).ready(function($) {
            var $timeline_block = $('.cd-timeline-block');

            //hide timeline blocks which are outside the viewport
            $timeline_block.each(function() {
                if ($(this).offset().top > $(window).scrollTop() + $(window).height() * 0.75) {
                    $(this).find('.cd-timeline-img, .cd-timeline-content').addClass('is-hidden');
                }
            });

            //on scolling, show/animate timeline blocks when enter the viewport
            $(window).on('scroll', function() {
                $timeline_block.each(function() {
                    if ($(this).offset().top <= $(window).scrollTop() + $(window).height() * 0.75 && $(this).find('.cd-timeline-img').hasClass('is-hidden')) {
                        $(this).find('.cd-timeline-img, .cd-timeline-content').removeClass('is-hidden').addClass('bounce-in');
                    }
                });
            });
        });

    })(jQuery);
</script>