<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>

    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Chính sách thanh toán</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li class="active">Chính sách thanh toán</li>
            </ul>
        </div>
    </div>

    <section id="content">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sm-8 col-md-9">
                    <% if Article.get_info_system_1.present? %>
                    <div class="post">
                        <figure class="image-container">
                            <img src="<%= Article.get_info_system_1.image_url.large_image %>" alt="" />
                        </figure>
                        <div class="details">
                            <h1 class="entry-title">Chính sách thanh toán</h1>
                            <div class="post-content text-justify">
                                <p><%= Article.get_info_system_1.content.html_safe %></p>   
                            </div>
                            <div class="post-meta">
                                <div class="entry-date">
                                    <label class="date"><%= Article.get_info_system_1.created_at.strftime("%d") %></label>
                                    <label class="month"><%= Article.get_info_system_1.created_at.strftime("%m") %></label>
                                </div>
                                <div class="entry-author fn">
                                    <i class="icon soap-icon-user"></i> Đăng bởi: <%= link_to "Du Lịch Khám Phá Mới", about_us_path %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
                <div class="sidebar col-sm-4 col-md-3">
                    <%= render "/about_us/customer_services" %>
                </div>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>

</div>

<!-- Javascript -->
<%= render "/home/js_files" %>