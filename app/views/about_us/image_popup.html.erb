<div class="photo-gallery style1" id="photo-gallery1" data-animation="slide" data-sync="#image-carousel1">
    <ul class="slides">
        <li><img src="<%= @activities_photo.image_url.large_image %>" alt="" /></li>
		<% @activities_photo.gallery_images.each do |item| %>
		<li><img src="<%= item.image_url.large_image %>" alt="" /></li>
		<% end %>
    </ul>
</div>
<div class="image-carousel style1" id="image-carousel1" data-animation="slide" data-item-width="70" data-item-margin="10" data-sync="#photo-gallery1">
    <ul class="slides">
        <li><img src="<%= @activities_photo.image_url.small_image %>" alt="" /></li>
		<% @activities_photo.gallery_images.each do |item| %>
		<li><img src="<%= item.image_url.small_image %>" alt="" /></li>
		<% end %>
    </ul>
</div>