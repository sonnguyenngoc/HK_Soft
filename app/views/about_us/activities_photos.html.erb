<div id="page-wrapper">
    
    <!-- HEADER -->
    <%= render "/home/header" %>

    <div class="page-title-container style4">
        <div class="container">
            <div class="page-title">
                <h2 class="entry-title">Giới thiệu</h2>
            </div>
            <ul class="breadcrumbs">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li class="active">Hình ảnh hoạt động</li>
            </ul>
        </div>
    </div>

    <section id="content" class="gray-area">
        <div class="container text-left">
            <h1>Danh sách hình ảnh hoạt động</h1>
            <div class="row image-box hotel listing-style1">
				<% Gallery.all.each do |item| %>
                <div class="col-sm-6 col-md-3">
                    <article class="box">
                        <figure>
							<%= link_to image_tag(item.image_url.small_image, size: "270x161", alt: ""), image_popup_path(activities_photo_id: item.id), class: "hover-effect popup-gallery" %>
                        </figure>
                        <div class="details">
                            <h4 class="box-title"><%= item.title %></h4>
                            <p class="description text-justify"><%= item.description %></p>
                            <div class="action">
								<%= link_to "Xem thêm", image_popup_path(activities_photo_id: item.id), class: "button btn-small popup-gallery" %>
								<%= link_to "Giới thiệu", about_us_path, class: "button btn-small sky-blue1" %>
                            </div>
                        </div>
                    </article>
                </div>
				<% end %>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>