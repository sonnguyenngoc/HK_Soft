<div class="pageWrapper">
    <!-- Top bar start -->
    <%= render "/home/top_bar" %>
    <!-- Top bar end -->
    
    <!-- Header start -->
    <header class="top-head minimal">
        <div class="container">
            <!-- Logo start -->
            <%= render "/home/logo" %>
            <!-- Logo end -->
            
            <div class="responsive-nav">
                <!-- top navigation menu start -->
                <%= render "/home/top_navigation_menu" %>
                <!-- top navigation menu end -->
                <div class="f-right">
                    <!-- top search start -->
                    <%= render "/home/top_search" %>
                    <!-- top search end -->
                </div>
            </div>
        </div>
    </header>
    <!-- Header start -->
    
    <!-- Content start -->
    <div class="pageContent">
        
        <div class="page-title tbg">
            <div class="container">
                <h1>Contact Us</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <div class="container">
                <%= link_to "Home", root_path %><i class="fa fa-long-arrow-right main-color"></i><span>Contact Us</span>
            </div>
        </div>
        
        <div class="md-padding p-b-0">
            <div class="container">
                <div class="">
                    <div class="heading main centered">
                        <h3 class="uppercase lg-title"><span class="main-color">Contact </span> Form</h3>
                    </div>

                    <%= form_for Contact.new, url: contact_path, html: {class: "form-validate-contact" } do |f| %>

                        <div class="row form-group over-hidden">
                            
                            <div class="col-md-4">
                                <%= f.label "Name *", for: "contact-name" %>
                                <%= f.text_field :name, class: "form-control required", id: "contact-name" %>
                            </div>

                            <div class="col-md-4">
                                <%= f.label "Email *", for: "contact-email" %>
                                <%= f.text_field :email, class: "form-control email required", id: "contact-email" %>
                            </div>

                            <div class="col-md-4">
                                <%= f.label "Phone *", for: "contact-phone" %>
                                <%= f.text_field :phone, class: "form-control required", id: "contact-phone" %>
                            </div>

                        </div>

                        <div class="row form-group over-hidden">

                            <div class="col-md-12">
                                <%= f.label "Subject *", for: "contact-subject" %>
                                <%= f.text_field :subject, class: "form-control required", id: "contact-subject" %>
                            </div>

                        </div>

                        <div class="form-group over-hidden">
                            <%= f.label "Message *", for: "contact-message" %>
                            <%= f.text_area :message, rows: '6', cols: '30', class: "form-control required", id: "contact-message" %>
                        </div>

                        <div class="tbl wid-70">
                            <div class="form-group m-t-2">
                                <%= f.submit 'Send Message', class: 'btn main-bg btn-block btn-lg btn-3d uppercase' %>
                            </div>
                        </div>

                    <% end %>
                </div>
            </div>
        </div>

        <div class="container sm-padding">
            <hr class="dev-style4" />
        </div>

        <div class="p-b-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="white-bg lg-box t-center light-gry-border rect-angles">
                            <i class="fa fa-map-marker main-color lg-icon"></i>
                            <h4>Address</h4>
                            <p>188, Street 1, Ward 16, Go Vap District
                            <br>
                             Ho Chi Minh City, Viet Nam</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="white-bg lg-box t-center light-gry-border rect-angles">
                            <i class="fa fa-phone-square main-color lg-icon"></i>
                            <h4>Phone</h4>
                            <p>
                                Phone: +84 8 3984 7690 - Ext: 204<br>
                                Mobile: +84 97 974 4764<br>
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="white-bg lg-box t-center light-gry-border rect-angles">
                            <i class="fa fa-envelope main-color lg-icon"></i>
                            <h4>Support</h4>
                            <p>
                                soft.support@hoangkhang.com.vn<br>
                                <span><a href="skype:luanpm88?chat">Live support - Chat now</a></span>
                            </p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

        <div class="">
            <div id="ROADMAP" class="gmap full" style="height: 400px">
                <p>This will be replaced with the Google Map.</p>
            </div>
        </div>

    </div>			    
    <!-- Content start -->

    <!-- Footer start -->
    <%= render "/home/footer" %>
    <!-- Footer end -->

</div>

<!-- Back to top Link -->
<a id="to-top" href="#"><span class="fa fa fa-angle-up"></span></a>

<%= render "/home/js_files" %>

<%= javascript_include_tag "/frontend/assets/js/jquery.gmap.js" %>
<%= javascript_include_tag "/frontend/assets/js/jquery.validate.js" %>
<%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
<script type="text/javascript">
    $(".form-validate-contact").validate();
    
    $(function(){
       $('#ROADMAP').gMap({
            latitude: 10.847561,
