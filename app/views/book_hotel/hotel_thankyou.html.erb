<div id="page-wrapper">
    <!-- HEADER -->
    <%= render "/home/header" %>
    
    <div class="page-title-container style2">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Cảm Ơn</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li><%= link_to @page_name.name, hotel_listing_path %></li>
                <li class="active">Cảm Ơn</li>
            </ul>
        </div>
    </div>
    
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sm-8 col-md-9">
                    <div class="booking-information travelo-box">
                        <h2>Booking Confirmation</h2>
                        <hr />
                        <div class="booking-confirmation clearfix">
                            <i class="soap-icon-recommend icon circle"></i>
                            <div class="message">
                                <h4 class="main-message">Thank You. Your Booking Order is Confirmed Now.</h4>
                                <p>A confirmation email has been sent to your provided email address.</p>
                            </div>
                            <%= link_to "Về Trang Chủ", root_path, class: "button btn-small print-button uppercase" %>
                        </div>
                        <hr />
                        <h2>Thông Tin Đặt Phòng</h2>
                        <dl class="term-description">
                            <dt>Tên khách hàng: </dt><dd><%= @booking_hotel.full_name %></dd>
                            <dt>Số điện thoại: </dt><dd><%= @booking_hotel.phone %></dd>
                            <dt>Email: </dt><dd><%= @booking_hotel.email %></dd>
                            <dt>Ngày nhận phòng: </dt><dd><%= @booking_hotel.date_from.strftime("%d/%m/%Y") %></dd>
                            <dt>Ngày giao phòng: </dt><dd><%= @booking_hotel.date_to.strftime("%d/%m/%Y") %></dd>
                            <dt>Số người lớn: </dt><dd><%= @booking_hotel.adult %> người lớn</dd>
                            <dt>Số trẻ em: </dt><dd><%= @booking_hotel.child %> trẻ em</dd>
                            <dt>Số phòng cần đặt: </dt><dd><%= @booking_hotel.room_number %> phòng</dd>
                            <dt>Tên khách sạn: </dt><dd><%= @booking_hotel.hotel.name %></dd>
                            <dt>Địa chỉ: </dt><dd><%= @booking_hotel.hotel.address %></dd>
                            <dt>Loại phòng: </dt><dd><%= @booking_hotel.hotel_room.room_type %></dd>
                        </dl>
                    </div>
                </div>
                <div class="sidebar col-sm-4 col-md-3">
                    <div class="travelo-box contact-box">
                        <h4>Need Travelo Help?</h4>
                        <p>We would be more than happy to help you. Our team advisor are 24/7 at your service to help you.</p>
                        <address class="contact-details">
                            <span class="contact-phone"><i class="soap-icon-phone"></i> 1-800-123-HELLO</span>
                            <br>
                            <a class="contact-email" href="#">help@travelo.com</a>
                        </address>
                    </div>
                    <div class="travelo-box book-with-us-box">
                        <h4>Why Book with us?</h4>
                        <ul>
                            <li>
                                <i class="soap-icon-hotel-1 circle"></i>
                                <h5 class="title"><a href="#">135,00+ Hotels</a></h5>
                                <p>Nunc cursus libero pur congue arut nimspnty.</p>
                            </li>
                            <li>
                                <i class="soap-icon-savings circle"></i>
                                <h5 class="title"><a href="#">Low Rates &amp; Savings</a></h5>
                                <p>Nunc cursus libero pur congue arut nimspnty.</p>
                            </li>
                            <li>
                                <i class="soap-icon-support circle"></i>
                                <h5 class="title"><a href="#">Excellent Support</a></h5>
                                <p>Nunc cursus libero pur congue arut nimspnty.</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- FOOTER -->
    <%= render "/home/footer" %>
    
</div>

<!-- Javascript -->
<%= render "/home/js_files" %>