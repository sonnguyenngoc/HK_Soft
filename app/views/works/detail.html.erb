<div class="site_wrapper">

    <%= render "/home/top_navigation" %>
    <!-- end top navigation links -->


    <div class="clearfix"></div>


    <%= render "/home/header" %>
    <!-- end header -->


    <div class="clearfix"></div>


    <div class="page_title1 sty9">
        <div class="container">
            
            <% if params[:locale] == "en" %>
                <h1><%= @project.name %></h1>
            <% else %>
                <h1><%= @project.name_vi %></h1>
            <% end %>
            
            <div class="pagenation">&nbsp;<%= link_to t(:home_page), root_path %> <i>/</i> <%= link_to t(:works), works_path %> <i>/</i> <% if params[:locale] == "en" %><%= @project.name %><% else %><%= @project.name_vi %><% end %></div>

        </div>
    </div>
    <!-- end page title -->

    <div class="clearfix"></div>


    <div class="content_fullwidth less2">
        <div class="container">

            <div class="portfolio_area">

                <div class="portfolio_area_left">
                    
                    <a href="#" target="_blank"><img src="<%= @project.image_url.large %>" alt="" /></a><br />
                    
                    <% @project.project_images.each do |item| %>
                    
                        <img src="<%= item.image_url.large %>" alt="" /><br />
                        
                    <% end %>
                    
                </div>

                <div class="portfolio_area_right">
                
                    <h3 class="caps"><strong><%= t(:project_description) %></strong></h3>
                    
                    <% if params[:locale] == "en" %>

                        <p class="text-justify"><%= @project.description %></p>
                    
                    <% else %>
                        
                        <p class="text-justify"><%= @project.description_vi %></p>
                        
                    <% end %>

                    <div class="project_details">
                        
                        <h3 class="caps"><%= t(:project_details) %></h3>
                        
                        
                        <span><strong><%= t(:project_name) %></strong>
                            <% if params[:locale] == "en" %>
                                <em><%= @project.name %></em>
                            <% else %>
                                <em><%= @project.name_vi %></em>
                            <% end %>
                        </span>
                        <span><strong><%= t(:start_date) %></strong> <em><% if params[:locale] == "en" %><%= @project.start_date.strftime("%d %B %Y") %><% else %><%= @project.start_date.strftime("%d/%m/%Y") %><% end %></em></span>
                        <span><strong><%= t(:end_date) %></strong> <em><% if params[:locale] == "en" %><%= @project.end_date.strftime("%d %B %Y") %><% else %><%= @project.end_date.strftime("%d/%m/%Y") %><% end %></em></span>
                        <span><strong><%= t(:program_languages) %></strong> <em><% @project.program_languages.each do |item| %><a href="#<%= item.name %>"><%= item.name %></a> <% end %> </em></span>
                        <span><strong><%= t(:investor) %></strong> <em><% if params[:locale] == "en" %><%= @project.author %><% else %><%= @project.author_vi %><% end %></em></span>
                        <% if @project.website != "" %>
                            <div class="clearfix margin_top5"></div>
                            <a href="<%= @project.website %>" class="but_medium1" target="_blank"><i class="fa fa-hand-o-right fa-lg"></i>&nbsp; <%= t(:visit_site) %></a>
                        <% end %>
                    </div>

                </div>

            </div>


        </div>
    </div>



    <div class="clearfix"></div>


    <%= render "/home/footer" %>
    <!-- end footer -->


    <div class="clearfix"></div>


    <a href="#" class="scrollup">Scroll</a>
    <!-- end scroll to top of the page-->

</div>


<!-- ######### JS FILES ######### -->
<!-- get jQuery used for the theme -->
<%= render "/home/js_files" %>

<!-- portfolio -->
<%= javascript_include_tag "/frontend/js/portfolio/pretty/js/jquery.prettyPhoto.js" %>
<%= javascript_include_tag "/frontend/js/portfolio/modernizr.js" %>
