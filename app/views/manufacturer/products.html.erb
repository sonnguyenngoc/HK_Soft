<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout page_with_main_nav">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <div class="row">

                    <aside class="col-md-3 col-sm-4 has_mega_menu">

                        <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                        <%= render 'module/categories' %>

                        <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_10.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                        <%= render 'module/category_bestseller' %>

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_11.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                    </aside>

                    <main class="col-md-9 col-sm-8">
                        
                        <%= render 'module/main_nav_right' %>
                        
                        <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                        <ul class="breadcrumbs">
        
                            <li><%= link_to "Trang chủ", root_path %></li>
                            
                            <% if @current_area.id.present? %><li><%= link_to @current_area.name, change_current_area_path(@current_area.id) %></li><% end %>
                            
                            <li><%= link_to "Thương hiệu sản phẩm", { controller: "manufacturer", action: "list" } %></li>
                            
                            <li><%= @manufacturer.name %></li>
        
                        </ul>
                        
                        <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->
                      
                        <h1><%= @manufacturer.name %></h1>

                            <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->
    
                            <div class="section_offset">
    
                                <header class="top_box on_the_sides">
    
                                    <div class="left_side clearfix v_centered">
                                      
                                        <%= form_tag({controller: "manufacturer", action: "products"}, method: "get") do %>
                                  
                                            <!-- - - - - - - - - - - - - - Sort by - - - - - - - - - - - - - - - - -->
        
                                            <div class="v_centered">
        
                                                <span>Hiển thị:</span>
        
                                                <div class="">
        
                                                    <select name="number">
        
                                                        <option value="15">15</option>
                                                        <option value="12">12</option>
                                                        <option value="9">9</option>
        
                                                    </select>
        
                                                </div>
                                                
                                                <span>Sắp xếp:</span>
        
                                                <div class="sort_select">
                                                    
                                                    <select name="sort_group">
                                                            
                                                        <option value="">Mặc định</option>
                                                        <option <%= "selected" if params[:sort_group] == "name_asc" %> value="name_asc">Tên (A - Z)</option>
                                                        <option <%= "selected" if params[:sort_group] == "name_desc" %> value="name_desc">Tên (Z - A)</option>
                                                        <option <%= "selected" if params[:sort_group] == "price_desc" %> value="price_desc">Giá (Cao - Thấp)</option>
                                                        <option <%= "selected" if params[:sort_group] == "price_asc" %> value="price_asc">Giá (Thấp - Cao)</option>
        
                                                    </select>
        
                                                </div>
                                                
                                                <button type="submit" class="button_blue middle_btn" style="margin-top: 10px;">Sắp xếp</button>
        
                                            </div>
        
                                            <!-- - - - - - - - - - - - - - End of sort by - - - - - - - - - - - - - - - - -->
                                        
                                        <% end %>
    
                                    </div>
    
                                    <div class="right_side">
    
                                        <!-- - - - - - - - - - - - - - Product layout type - - - - - - - - - - - - - - - - -->
    
                                        <div class="layout_type buttons_row" data-table-container="#products_container">
    
                                            <a href="#" data-table-layout="grid_view" class="button_grey middle_btn icon_btn active tooltip_container"><i class="icon-th"></i><span class="tooltip top">Chế độ hiển thị theo dạng lưới</span></a>
    
                                            <a href="#" data-table-layout="list_view list_view_products" class="button_grey middle_btn icon_btn tooltip_container"><i class="icon-th-list"></i><span class="tooltip top">Chế độ hiển thị theo dạng danh sách</span></a>
    
                                        </div>
    
                                        <!-- - - - - - - - - - - - - - End of product layout type - - - - - - - - - - - - - - - - -->
    
                                    </div>
    
                                </header>
    
                                <div class="table_layout" id="products_container">
    
                                    <div class="table_row">
                                        
                                        <% if @current_area.id.present? %>
                                        
                                            <% @products.each_with_index do |product, index| %>
                                            
                                                <% product.areas.each do |area| %>
                                                
                                                    <% if @current_area.id == area.id %>
        
                                                        <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
                    
                                                        <div class="table_cell">
                    
                                                            <div class="product_item">
                    
                                                                <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
                    
                                                                <div class="image_wrap">
                    
                                                                    <img src="<%= product.get_main_image.image_url.medium_image %>" alt="">
                    
                                                                    <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
                    
                                                                    <div class="actions_wrap">
                    
                                                                        <div class="centered_buttons">
                    
                                                                            <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="<%= quick_view_path(product_id: product.id) %>">Xem nhanh</a>
                    
                                                                            <a href="#" class="button_blue middle_btn add_to_cart">Thêm vào giỏ hàng</a>
                    
                                                                        </div><!--/ .centered_buttons -->
                    
                                                                        <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container"><span class="tooltip right">Thêm vào mục yêu thích</span></a>
                    
                                                                        <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container"><span class="tooltip left">Thêm vào danh mục so sánh</span></a>
                    
                                                                    </div><!--/ .actions_wrap-->
                                                                    
                                                                    <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
                    
                                                                </div><!--/. image_wrap-->
                    
                                                                <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
                    
                                                                <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
                    
                                                                <div class="description">
                    
                                                                    <div class="nowrap-ellipsis">
                                                                        
                                                                        <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, title: product.name %>
                                                                    
                                                                    </div>
                    
                                                                    <div class="clearfix product_info">
                    
                                                                        <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
                    
                                                                        <% if product.count_stars.length > 0 %>
            
                                                                            <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                            
                                                                            <ul class="rating alignright">
                                                                                
                                                                                <% (1..product.average_stars).each do |star| %>
                                
                                                                                    <li class="active"></li>
                                                                                
                                                                                <% end %>
                                
                                                                            </ul>
                                                                                
                                                                            <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                            
                                                                        <% end %>
                    
                                                                    </div>
                    
                                                                </div>
                    
                                                                <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
                    
                                                                <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
                    
                                                                <div class="full_description">
                                                                    
                                                                    <div class="nowrap-ellipsis">
                                                                        
                                                                        <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, class: "product_title", title: product.name %>
                                                                    
                                                                    </div>
                    
                                                                    <p class="product_price bold"><%= format_number(product.price) %> đ</p>
                    
                                                                    <div class="v_centered product_reviews">
                    
                                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                    
                                                                        <ul class="rating">
                    
                                                                            <li class="active"></li>
                                                                            <li class="active"></li>
                                                                            <li class="active"></li>
                                                                            <li class="active"></li>
                                                                            <li></li>
                    
                                                                        </ul>
                                                                            
                                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                    
                                                                    </div>
                    
                                                                    <p class="text-justify"><%= product.short_description %></p>
                    
                                                                </div>
                    
                                                                <!-- - - - - - - - - - - - - - End of full description (only for list view) - - - - - - - - - - - - - - - - -->
                    
                                                            </div><!--/ .product_item-->
                    
                                                        </div>
                    
                                                        <%= "</div><!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - --><div class=\"table_row\"><!--/ .table_row -->".html_safe if index%3 == 2 %>
                                                        
                                                    <% end %>
                                                    
                                                <% end %>
                                            
                                            <% end %>
                                        
                                        <% else %>
                                            
                                            <% @products.each_with_index do |product, index| %>
        
                                                <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
            
                                                <div class="table_cell">
            
                                                    <div class="product_item">
            
                                                        <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
            
                                                        <div class="image_wrap">
            
                                                            <img src="<%= product.get_main_image.image_url.medium_image %>" alt="">
            
                                                            <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
            
                                                            <div class="actions_wrap">
            
                                                                <div class="centered_buttons">
            
                                                                    <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="<%= quick_view_path(product_id: product.id) %>">Xem nhanh</a>
            
                                                                    <a href="#" class="button_blue middle_btn add_to_cart">Thêm vào giỏ hàng</a>
            
                                                                </div><!--/ .centered_buttons -->
            
                                                                <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container"><span class="tooltip right">Thêm vào mục yêu thích</span></a>
            
                                                                <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container"><span class="tooltip left">Thêm vào danh mục so sánh</span></a>
            
                                                            </div><!--/ .actions_wrap-->
                                                            
                                                            <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
            
                                                        </div><!--/. image_wrap-->
            
                                                        <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
            
                                                        <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
            
                                                        <div class="description">
            
                                                            <div class="nowrap-ellipsis">
                                                                
                                                                <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, title: product.name %>
                                                            
                                                            </div>
            
                                                            <div class="clearfix product_info">
            
                                                                <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
            
                                                                <% if product.count_stars.length > 0 %>
    
                                                                    <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                    
                                                                    <ul class="rating alignright">
                                                                        
                                                                        <% (1..product.average_stars).each do |star| %>
                        
                                                                            <li class="active"></li>
                                                                        
                                                                        <% end %>
                        
                                                                    </ul>
                                                                        
                                                                    <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                    
                                                                <% end %>
            
                                                            </div>
            
                                                        </div>
            
                                                        <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
            
                                                        <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
            
                                                        <div class="full_description">
                                                            
                                                            <div class="nowrap-ellipsis">
                                                                
                                                                <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, class: "product_title", title: product.name %>
                                                            
                                                            </div>
            
                                                            <p class="product_price bold"><%= format_number(product.price) %> đ</p>
            
                                                            <div class="v_centered product_reviews">
            
                                                                <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                            
                                                                <ul class="rating">
            
                                                                    <li class="active"></li>
                                                                    <li class="active"></li>
                                                                    <li class="active"></li>
                                                                    <li class="active"></li>
                                                                    <li></li>
            
                                                                </ul>
                                                                    
                                                                <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
            
                                                            </div>
            
                                                            <p class="text-justify"><%= product.short_description %></p>
            
                                                        </div>
            
                                                        <!-- - - - - - - - - - - - - - End of full description (only for list view) - - - - - - - - - - - - - - - - -->
            
                                                    </div><!--/ .product_item-->
            
                                                </div>
            
                                                <%= "</div><!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - --><div class=\"table_row\"><!--/ .table_row -->".html_safe if index%3 == 2 %>
                                            
                                            <% end %>
                                            
                                        <% end %>
 
                                </div>

                            </div><!--/ .table_layout -->

                            <footer class="bottom_box on_the_sides">

                                <div class="left_side">

                                    <p><%= page_entries_info @products %> sản phẩm.</p>
    
                                </div>

                                <div class="right_side">
                                
                                    <%= will_paginate @products, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
    
                                </div>

                            </footer>

                        </div>

                        <!-- - - - - - - - - - - - - - End of products - - - - - - - - - - - - - - - - -->

                    </main>

                </div><!--/ .row -->

            </div><!--/ .container-->

        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <%= render 'module/footer'%>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

    <%= render 'module/social_feeds' %>

    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery-ui.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.plugin.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.min.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>

    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
    
</body>