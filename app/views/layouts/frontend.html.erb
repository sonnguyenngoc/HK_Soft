			ga('send', 'pageview');
		  
		</script>
		
		<script src='https://www.google.com/recaptcha/api.js?hl=vi'></script>
		
		<script>
			function runSlideShow() {
				var num = 0;
				$('.rev_slider li').each(function(index) {					
					if($(this).is(":visible")) {
						num = index+1;
					}
					if(!$('.rev_slider li').eq(num).length) {
						num = 0;
					}					
				});
				$('.rev_slider li').hide();
				$('.rev_slider li').eq(num).fadeIn(1000);
			}
			
			$(document).ready(function() {
				$('.actions_wrap').click(function(event) {					
					if(event.target.tagName == 'DIV') {
						var url = $(this).parents(".product_item").find('.description a').eq(0).attr('href');
						window.location = url;
					}
				});
			});
		</script>
