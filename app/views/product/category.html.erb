<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout page_with_main_nav">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render "module/header" %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <div class="row">

                    <aside class="col-md-3 col-sm-4 has_mega_menu">

                        <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                        <%= render "module/categories" %>

                        <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Filter - - - - - - - - - - - - - - - - -->

                        <%= render "module/filter" %>

                        <!-- - - - - - - - - - - - - - End of filter - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_10.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->
                        
                        <!-- - - - - - - - - - - - - - Bestseller products - - - - - - - - - - - - - - - - -->

                            <%= render "module/category_bestseller" %>
                        
                        <!-- - - - - - - - - - - - - - End of bestseller products - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_11.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                    </aside>

                    <main class="col-md-9 col-sm-8">
                        
                        <%= render 'module/main_nav_right' %>
                        
                        <!--render 'todays_deals'-->
                        
                        <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->
                        
                        <ul class="breadcrumbs">

                            <li><a href="<%= root_path %>">Trang chủ</a></li>
                            
                            <% if @current_area.id.present? %><li><%= link_to @current_area.name, change_current_area_path(@current_area.id) %></li><% end %>
                            
                            <% @category.parent.each do |item| %><li><%= link_to item.name, { controller: "product", action: "category", category_id: item.id } %></li><% end %>
                            
                            <li><%= @category.name %></li>
        
                        </ul>

                        <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->

                        <section class="section_offset">

                            <h1><%= @category.name %></h1>

                            <p><%= @category.description %></p>

                        </section>

                        <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <header class="top_box on_the_sides">

                                <div class="left_side clearfix v_centered">
                                    
                                    <%= form_tag({controller: "product", action: "category"}, method: "get") do %>
                                        <%= hidden_field_tag "number", params[:number] %>
                                        
                                        <!-- - - - - - - - - - - - - - Sort by - - - - - - - - - - - - - - - - -->
    
                                        <div class="v_centered">
                                            
                                            <span>Sắp xếp:</span>
    
                                            <div class="sort_select">
                                                
                                                <select name="sort_group">
                                                        
                                                    <option value="">Mặc định</option>
                                                    <option <%= "selected" if params[:sort_group] == "name_asc" %> value="name_asc">Tên (A - Z)</option>
                                                    <option <%= "selected" if params[:sort_group] == "name_desc" %> value="name_desc">Tên (Z - A)</option>
                                                    <option <%= "selected" if params[:sort_group] == "price_desc" %> value="price_desc">Giá (Cao - Thấp)</option>
                                                    <option <%= "selected" if params[:sort_group] == "price_asc" %> value="price_asc">Giá (Thấp - Cao)</option>
    
                                                </select>
    
                                            </div>
    
                                        </div>
    
                                        <!-- - - - - - - - - - - - - - End of sort by - - - - - - - - - - - - - - - - -->
                                    
                                    <% end %>

                                </div>

                                <div class="right_side">
                                    
                                    <%= form_tag({controller: "product", action: "category"}, method: "get") do %>
                                        <%= hidden_field_tag "sort_group", params[:sort_group] %>
                                        
                                        <div class="v_centered mrg-show-category">
                                        
                                            <span>Hiển thị:</span>
            
                                            <div class="show_select">
        
                                                <select name="number">
        
                                                    <option <%= "selected" if params[:number] == "15" %> value="15">15</option>
                                                    <option <%= "selected" if params[:number] == "12" %> value="12">12</option>
                                                    <option <%= "selected" if params[:number] == "9" %> value="9">9</option>
                                                    <option <%= "selected" if params[:number] == "6" %> value="6">6</option>
                                                    <option <%= "selected" if params[:number] == "3" %> value="3">3</option>
        
                                                </select>
        
                                            </div>
                                            
                                        </div>
                                        
                                    <% end %>

                                    <!-- - - - - - - - - - - - - - Product layout type - - - - - - - - - - - - - - - - -->

                                    <div class="layout_type buttons_row" data-table-container="#products_container">

                                        <a href="#" value="grid_view" data-table-layout="grid_view" class="change_view_button button_grey middle_btn icon_btn active tooltip_container"><i class="icon-th"></i><span class="tooltip top">Xem dạng lưới</span></a>

                                        <a href="#" value="list_view" data-table-layout="list_view list_view_products" class="change_view_button button_grey middle_btn icon_btn tooltip_container"><i class="icon-th-list"></i><span class="tooltip top">Xem dạng danh sách</span></a>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of product layout type - - - - - - - - - - - - - - - - -->

                                </div>

                            </header>

                            <div class="table_layout table_layout_fix" id="products_container">

                                <div class="table_row">
                                    
                                    <% if @current_area.id.present? %>
                                    
                                        <% @products.each_with_index do |product, index| %>
                                        
                                            <% product.areas.each do |area| %>
                                                
                                                <% if @current_area.id == area.id %>
                                        
                                                    <a href="#" class="button_dark_grey add_cart_success" data-modal-url="<%= add_cart_success_path %>">Success</a>
                                                        
                                                    <a href="#" class="button_dark_grey add_wishlist_success" data-modal-url="<%= add_wishlist_success_path %>">Success</a>
                                                    
                                                    <a href="#" class="button_dark_grey add_compare_success" data-modal-url="<%= add_compare_success_path %>">Success</a>
                                                    
                                                    <a href="#" class="button_dark_grey no_singed" data-modal-url="<%= no_singed_path %>">No Singed</a>
                                                    
                                                    <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
                
                                                    <div class="table_cell">
                
                                                        <div class="product_item">
                
                                                            <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
                
                                                            <div class="image_wrap">
                                                                
                                                                <% if product.get_main_image.present? %>
                                                                            
                                                                    <img src="<%= product.get_main_image.image_url.medium_image %>" alt="">
                                                                
                                                                <% else %>
                                                                    
                                                                    <img src="/frontend/images/medium_image.png" alt="">
                                                                
                                                                <% end %>
                
                                                                <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
                
                                                                <div class="actions_wrap">
                
                                                                    <div class="centered_buttons centered_buttons_category">
                                                                        
                                                                        <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="<%= quick_view_path(product_id: product.id) %>">Xem nhanh</a>
                                                                        
                                                                        <%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart add_to_cart_category add_to_cart_button" %>
                
                                                                    </div><!--/ .centered_buttons -->
                                                                    
                                                                    <% if current_user.present? %>
                                                        
                                                                        <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, add_item_wish_lists_path(product_id: product, user_id: current_user.id), class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container add_to_wishlist_button" %>
                                                                    
                                                                    <% else %>
                                                                        
                                                                        <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, { controller: "account", action: "login" }, class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container no_singed_button" %>
                                                                    
                                                                    <% end %>
                                                                    
                                                                    <%= link_to '<span class="tooltip left">Thêm vào danh sách so sánh</span>'.html_safe, add_item_line_item_compares_path(product_id: product), class: "color_orange button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container add_to_compare_button" %>
                
                                                                </div><!--/ .actions_wrap-->

                                                                <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
                                                                
                                                                <!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->
											
                                                                <% if product.is_deal? %>
                                                                    
                                                                    <% if !product.discount_percent.nil? or !product.discount_percent == 0 %>
                                                                        
                                                                        <div class="label_offer percentage">
                                                
                                                                            <div><%= product.discount_percent.to_i %>%</div>OFF
                                                
                                                                        </div>
                                                                        
                                                                    <% end %>
                                                                    
                                                                <% elsif product.is_new? %>
                                                                    
                                                                    <div class="label_new">
                                            
                                                                        <div><%= product.display_is_new %></div>
                                            
                                                                    </div>
                                                                    
                                                                <% end %>
                                                                
                                                                <% if product.is_sold_out? %>
                                                                    
                                                                    <div class="lbl_right_soldout">
                                                                        
                                                                        <div><%= product.display_is_sold_out %></div>
                                                                    
                                                                    </div>
                                                                
                                                                <% end %>
                                                
                                                                <!-- - - - - - - - - - - - - - End label - - - - - - - - - - - - - - - - -->
                
                                                            </div><!--/. image_wrap-->
                
                                                            <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
                
                                                            <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
                                                            
                                                            <div class="description">
                                                                
                                                                <div class="nowrap-ellipsis">
                                                                   
                                                                   <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, title: product.name %>
                                                                   
                                                                </div>
                
                                                                <div class="clearfix product_info">
                
                                                                    <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
                
                                                                    <% if product.count_stars.length > 0 %>
            
                                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                        
                                                                        <ul class="rating alignright">
                                                                            
                                                                            <% (1..product.average_stars).each do |star| %>
                            
                                                                                <li class="active"></li>
                                                                            
                                                                            <% end %>
                            
                                                                        </ul>
                                                                            
                                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                        
                                                                    <% end %>
                
                                                                </div>
                
                                                            </div>
                
                                                            <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
                
                                                            <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
                
                                                            <div class="full_description">
                
                                                                <div class="nowrap-ellipsis">
                                                                    
                                                                    <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, class: "product_title", title: product.name %>
                                                                    <% if !product.manufacturer.nil? %>
                                                                        <%= link_to product.manufacturer.name, { controller: "manufacturer", action: "list" }, class: "product_category" %>
                                                                    <% end %>
                                                                
                                                                </div>
                
                                                                <div class="v_centered product_reviews">
                
                                                                    <% if product.count_stars.length > 0 %>
            
                                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                        
                                                                        <ul class="rating">
                                                                            
                                                                            <% (1..product.average_stars).each do |star| %>
                            
                                                                                <li class="active"></li>
                                                                            
                                                                            <% end %>
                            
                                                                        </ul>
                                                                            
                                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                        
                                                                    <% end %>
                
                                                                </div>
                
                                                                <p class="text-justify"><%= product.short_description %></p>
                
                                                            </div>
                
                                                            <!-- - - - - - - - - - - - - - End of full description (only for list view) - - - - - - - - - - - - - - - - -->
                                                            
                                                            <!-- - - - - - - - - - - - - - Product price & actions (only for list view) - - - - - - - - - - - - - - - - -->
    
                                                            <div class="actions">
                
                                                                <% if product.is_deal? %>
                                                                                        
                                                                    <p class="product_price bold"><s><%= format_number(product.old_price) %> đ</s> <%= format_number(product.price) %> đ</p>
                                                                
                                                                <% elsif %>
                                                                    
                                                                <p class="product_price bold"><%= format_number(product.price) %> đ</p>
                                                                
                                                                <% end %>
                
                                                                <ul class="buttons_col">
                                                                    
                                                                    <%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart add_to_cart_category add_to_cart_button" %>
                                                                    
                                                                    <% if current_user.present? %>
                                                                        
                                                                        <li><%= link_to '<i class="icon-heart-5 icon_red"></i>Thêm vào mục yêu thích'.html_safe, add_item_wish_lists_path(product_id: product, user_id: current_user.id), class: "icon_link icon_link_fix add_to_wishlist_button" %></li>
                                                                    
                                                                    <% else %>
                                                                        
                                                                        <li><%= link_to '<i class="icon-heart-5 icon_red"></i>Thêm vào mục yêu thích'.html_safe, { controller: "account", action: "login" }, class: "icon_link icon_link_fix no_singed_button" %></li>
                                                                        
                                                                    <% end %>
                                                                    
                                                                    <li><%= link_to '<i class="icon-resize-small icon_orange"></i>Thêm vào mục so sánh'.html_safe, add_item_line_item_compares_path(product_id: product), class: "icon_link icon_link_fix add_to_compare_button" %></li>
                
                                                                </ul>
                
                                                            </div>
                
                                                            <!-- - - - - - - - - - - - - - End product price & actions (only for list view) - - - - - - - - - - - - - - - - -->
                
                                                        </div><!--/ .product_item-->
                
                                                    </div>
                                                
                                                    <%= "</div><div class=\"table_row\"><!--/ .table_row -->".html_safe if index%3 == 2 %>
                                                
                                                <% end %>
                                            
                                            <% end %>
                                                
                                        <% end %>
                                        
                                        <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
                                    
                                    <% else %>
                                        
                                        <% @products.each_with_index do |product, index| %>
                                    
                                            <a href="#" class="button_dark_grey add_cart_success" data-modal-url="<%= add_cart_success_path %>">Success</a>
                                                
                                            <a href="#" class="button_dark_grey add_wishlist_success" data-modal-url="<%= add_wishlist_success_path %>">Success</a>
                                            
                                            <a href="#" class="button_dark_grey add_compare_success" data-modal-url="<%= add_compare_success_path %>">Success</a>
                                            
                                            <a href="#" class="button_dark_grey no_singed" data-modal-url="<%= no_singed_path %>">No Singed</a>
                                            
                                            <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
        
                                            <div class="table_cell">
        
                                                <div class="product_item">
        
                                                    <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
        
                                                    <div class="image_wrap">
                                                        
                                                        <% if product.get_main_image.present? %>
                                                                    
                                                            <img src="<%= product.get_main_image.image_url.medium_image %>" alt="">
                                                        
                                                        <% else %>
                                                            
                                                            <img src="/frontend/images/medium_image.png" alt="">
                                                        
                                                        <% end %>
        
                                                        <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
        
                                                        <div class="actions_wrap">
        
                                                            <div class="centered_buttons centered_buttons_category">
                                                                
                                                                <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="<%= quick_view_path(product_id: product.id) %>">Xem nhanh</a>
                                                                
                                                                <%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart add_to_cart_category add_to_cart_button" %>
        
                                                            </div><!--/ .centered_buttons -->
                                                            
                                                            <% if current_user.present? %>
                                                
                                                                <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, add_item_wish_lists_path(product_id: product, user_id: current_user.id), class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container add_to_wishlist_button" %>
                                                            
                                                            <% else %>
                                                                
                                                                <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, { controller: "account", action: "login" }, class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container no_singed_button" %>
                                                            
                                                            <% end %>
                                                            
                                                            <%= link_to '<span class="tooltip left">Thêm vào danh sách so sánh</span>'.html_safe, add_item_line_item_compares_path(product_id: product), class: "color_orange button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container add_to_compare_button" %>
        
                                                        </div><!--/ .actions_wrap-->
    
                                                        <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
                                                        
                                                        <!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->
											
                                                        <% if product.is_deal? %>
                                                            
                                                            <% if !product.discount_percent.nil? or !product.discount_percent == 0 %>
                                                                
                                                                <div class="label_offer percentage">
                                        
                                                                    <div><%= product.discount_percent.to_i %>%</div>OFF
                                        
                                                                </div>
                                                                
                                                            <% end %>
                                                            
                                                        <% elsif product.is_new? %>
                                                            
                                                            <div class="label_new">
                                    
                                                                <div><%= product.display_is_new %></div>
                                    
                                                            </div>
                                                            
                                                        <% end %>
                                                        
                                                        <% if product.is_sold_out? %>
                                                                    
                                                            <div class="lbl_right_soldout">
                                                                
                                                                <div><%= product.display_is_sold_out %></div>
                                                            
                                                            </div>
                                                        
                                                        <% end %>
                                        
                                                        <!-- - - - - - - - - - - - - - End label - - - - - - - - - - - - - - - - -->
        
                                                    </div><!--/. image_wrap-->
        
                                                    <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
        
                                                    <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
                                                    
                                                    <div class="description">
                                                        
                                                        <div class="nowrap-ellipsis">
                                                           
                                                           <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, title: product.name %>
                                                            
                                                        </div>
        
                                                        <div class="clearfix product_info">
                                                            
                                                            <% if product.is_deal? %>
                                                                
                                                                <p class="product_price alignleft"><s><%= format_number(product.old_price) %> đ</s> <b><%= format_number(product.price) %> đ</b></p>
                                                                
                                                            <% elsif %>
        
                                                                <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
                                                            
                                                            <% end %>
        
                                                            <% if product.count_stars.length > 0 %>
    
                                                                <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                
                                                                <ul class="rating alignright">
                                                                    
                                                                    <% (1..product.average_stars).each do |star| %>
                    
                                                                        <li class="active"></li>
                                                                    
                                                                    <% end %>
                    
                                                                </ul>
                                                                    
                                                                <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                
                                                            <% end %>
        
                                                        </div>
        
                                                    </div>
        
                                                    <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
        
                                                    <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
        
                                                    <div class="full_description">
        
                                                        <div class="nowrap-ellipsis">
                                                            
                                                            <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, class: "product_title", title: product.name %>
                                                            <% if !product.manufacturer.nil? %>
                                                                <%= link_to product.manufacturer.name, { controller: "manufacturer", action: "list" }, class: "product_category" %>
                                                            <% end %>
                                                        
                                                        </div>
        
                                                        <div class="v_centered product_reviews">
        
                                                            <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                        
                                                            <% if product.count_stars.length > 0 %>
    
                                                                <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                                
                                                                <ul class="rating">
                                                                    
                                                                    <% (1..product.average_stars).each do |star| %>
                    
                                                                        <li class="active"></li>
                                                                    
                                                                    <% end %>
                    
                                                                </ul>
                                                                    
