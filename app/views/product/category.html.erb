<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render "module/header" %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                <ul class="breadcrumbs">

                    <li><a href="<%= root_path %>">Trang chủ</a></li>
                    <li><%= @category.name %></li>

                </ul>

                <div class="row">

                    <aside class="col-md-3 col-sm-4 has_mega_menu">

                        <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                        <%= render "module/categories" %>

                        <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Filter - - - - - - - - - - - - - - - - -->

                        <%= render "module/filter" %>

                        <!-- - - - - - - - - - - - - - End of filter - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_10.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->
                        
                        <!-- - - - - - - - - - - - - - Bestseller products - - - - - - - - - - - - - - - - -->
                        
                            <%= render "module/category_bestseller" %>
                        
                        <!-- - - - - - - - - - - - - - End of bestseller products - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <a href="#" class="banner">
                                
                                <img src="/frontend/images/banner_img_11.png" alt="">

                            </a>

                        </div>

                        <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                    </aside>

                    <main class="col-md-9 col-sm-8">
                        
                        <!--render 'todays_deals'-->

                        <section class="section_offset">

                            <h1><%= @category.name %></h1>

                            <p><%= @category.description %></p>

                        </section>

                        <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <header class="top_box on_the_sides">

                                <div class="left_side clearfix v_centered">
                                  
                                    <!-- - - - - - - - - - - - - - Number of products shown - - - - - - - - - - - - - - - - -->

                                    <div class="v_centered">

                                        <span>Show:</span>

                                        <div class="">

                                            <select name="">

                                                <option value="15">15</option>
                                                <option value="12">12</option>
                                                <option value="9">9</option>

                                            </select>

                                        </div>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of number of products shown - - - - - - - - - - - - - - - - -->

                                    <!-- - - - - - - - - - - - - - Sort by - - - - - - - - - - - - - - - - -->

                                    <div class="v_centered">

                                        <span>Sort by:</span>

                                        <div class="">
                                            
                                            <select name="">
                                                    
                                                <option value="Default">Mặc định</option>
                                                <option value="Price">Tên (A - Z)</option>
                                                <option value="Name">Tên (Z - A)</option>
                                                <option value="Date">Giá (Cao - Thấp)</option>
                                                <option value="Date">Giá (Thấp - Cao)</option>

                                            </select>

                                        </div>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of sort by - - - - - - - - - - - - - - - - -->

                                </div>

                                <div class="right_side">

                                    <!-- - - - - - - - - - - - - - Product layout type - - - - - - - - - - - - - - - - -->

                                    <div class="layout_type buttons_row" data-table-container="#products_container">

                                        <a href="#" data-table-layout="grid_view" class="button_grey middle_btn icon_btn active tooltip_container"><i class="icon-th"></i><span class="tooltip top">Grid View</span></a>

                                        <a href="#" data-table-layout="list_view list_view_products" class="button_grey middle_btn icon_btn tooltip_container"><i class="icon-th-list"></i><span class="tooltip top">List View</span></a>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of product layout type - - - - - - - - - - - - - - - - -->

                                </div>

                            </header>

                            <div class="table_layout" id="products_container">

                                <div class="table_row">
                                    
                                    <% @products.each_with_index do |product, index| %>

                                        <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
    
                                        <div class="table_cell">
    
                                            <div class="product_item">
    
                                                <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
    
                                                <div class="image_wrap">
    
                                                    <img src="/frontend/images/product_img_7.jpg" alt="">
    
                                                    <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
    
                                                    <div class="actions_wrap">
    
                                                        <div class="centered_buttons">
    
                                                            <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="/frontend/modals/quick_view.html">Xem nhanh</a>
    
                                                            <a href="#" class="button_blue middle_btn add_to_cart">Thêm giỏ hàng</a>
    
                                                        </div><!--/ .centered_buttons -->
    
                                                        <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container"><span class="tooltip right">Thêm vào mục yêu thích</span></a>
    
                                                        <a href="#" class="button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container"><span class="tooltip left">Thêm vào danh mục so sánh</span></a>
    
                                                    </div><!--/ .actions_wrap-->
                                                    
                                                    <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
    
                                                </div><!--/. image_wrap-->
    
                                                <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
    
                                                <div class="description">
                                                    
                                                    <div class="nowrap-ellipsis">
                                                        
                                                        <%= link_to product.name, { controller: "product", action: "product" }, title: product.name %>
                                                    
                                                    </div>
    
                                                    <div class="clearfix product_info">
    
                                                        <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
    
                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
    
                                                        <ul class="rating alignright">
    
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li></li>
    
                                                        </ul>
                                                        
                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
    
                                                    </div>
    
                                                </div>
    
                                                <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
    
                                                <div class="full_description">
    
                                                    <div class="nowrap-ellipsis">
                                                        
                                                        <%= link_to product.name, { controller: "product", action: "product" }, class: "product_title", title: product.name %>
                                                    
                                                    </div>
    
                                                    <p class="product_price bold"><%= format_number(product.price) %> đ</p>
    
                                                    <div class="v_centered product_reviews">
    
                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                    
                                                        <ul class="rating">
    
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li></li>
    
                                                        </ul>
                                                            
                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
    
                                                    </div>
    
                                                    <p><%= product.short_description %></p>
    
                                                </div>
    
                                                <!-- - - - - - - - - - - - - - End of full description (only for list view) - - - - - - - - - - - - - - - - -->
    
                                            </div><!--/ .product_item-->
    
                                        </div>
                                    
                                        <%= "</div><div class=\"table_row\"><!--/ .table_row -->".html_safe if index%3 == 2 %>
                                    
                                    <% end %>
                                    
                                    <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
                                    
                                </div>

                            </div><!--/ .table_layout -->

                            <footer class="bottom_box on_the_sides">

                                <div class="left_side">

                                    <p>Showing 1 to 3 of 45 (15 Pages)</p>

                                </div>

                                <div class="right_side">

                                    <ul class="pags">

                                        <li><a href="#"></a></li>
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#"></a></li>

                                    </ul>

                                </div>

                            </footer>

                        </div>

                        <!-- - - - - - - - - - - - - - End of products - - - - - - - - - - - - - - - - -->

                    </main>

                </div><!--/ .row -->

            </div><!--/ .container-->

        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <%= render "module/footer" %>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

    <%= render "module/social_feeds" %>

    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery-ui.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.plugin.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.min.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= stylesheet_link_tag '/frontend/css/custom.css' %>

    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
    
</body>