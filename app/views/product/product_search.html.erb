<div class="pageWrap">
    
    <%= render "/home/tp_bar" %>
    <!-- /tp-bar -->

    <%= render "/home/main_bar" %>
    <!-- /main-bar -->

	<div class="section-banner">
		<div class="container">
			<ul class="breadcrumb">
				<li><%= link_to "Trang Chủ", root_path %></li>
				<li>Tìm kiếm sản phẩm</li>
			</ul>
		</div>
	</div><!-- /section-banner -->

	<section class="section-compact">
		<div class="container">
			<header class="heading-3 page-heading">
				<h4> Kết quả tìm kiếm <small>(Có <%= @products.count %> sản phẩm)</small></h4>
			</header>
			
			<div class="row">
				<div class="col-md-3">
                    
					<% Category.get_by_level(1).each do |category| %>
							<div class="widget widget-prod-categrories">
								<header class="widget-heading-3">
									<h4>
										<span class="caret"></span>
										<%= link_to category.name.html_safe, { controller: "category", action: "category_sub_2", category_id: category.id } %>
									</h4>
								</header>
								<ul class="list-align">
									<% category.children.order(:ordered).each do |child| %>
										<li><%= link_to child.name.html_safe, { controller: "category", action: "category_sub_2", category_id: child.id } %></li>
									<% end %>
								</ul>
							</div><!-- /widget-prod-categrories -->
					<% end %>
                    
				</div>
				<div class="col-md-9">
					
					<div class="filter-head">
						
					</div><!-- /filter-head -->
                    
					<ul class="filter-list">
						<% @products.each do |product| %>
							<li class="mix rating pricefresh">
								<div class="thumbnail thumbnail-product">
                                    <figure class="image-zoom">
                                        <% if product.get_main_image.present? %>
											<%= link_to image_tag(product.get_main_image.image_url.medium_image), product_detail_path(product_id: product.id) %>
										<% else %>
											<a href="<%= product_detail_path(product_id: product.id) %>">
												<img src="frontend/images/resource/no-image.png" alt="image">
											</a>
										<% end %>
                                    </figure>
									<div class="caption">
										<div class="text-wrap">
											<h5><%= link_to product.name, { controller: "product", action: "index", product_id: product.id }, title: product.name %></h5>
											<p class="prod-price text-primary"><%= format_number(product.price) %> VNĐ</p>
											<div class="filter-list-disp">
												<%= link_to "Xem Sản Phẩm", { controller: "product", action: "index", product_id: product.id }, class: "btn btn-default view-detail" %>
											</div>
										</div><!-- /text-wrap -->
									</div>
								</div><!-- /thumbail -->
							</li>
						<% end %>
					</ul><!-- filter-list -->
					
					<div class="pagination-right">
						<%= will_paginate @products.get_active_products, previous_label: '<i class="flaticon-arrowhead7"></i>', next_label: '<i class="flaticon-arrow487"></i>', renderer: BootstrapPagination::Rails %>
					</div><!-- /pagination-right -->

				</div>
			</div>
		</div>
	</section>

	<%= render "/home/footer" %>

</div><!-- /pageWrap -->

<div class="preloader-container">
  <div id="loading-center-absolute">
    <div class="object" id="object_one"></div>
    <div class="object" id="object_two"></div>
    <div class="object" id="object_three"></div>
    <div class="object" id="object_four"></div>
    <div class="object" id="object_five"></div>
    <div class="object" id="object_six"></div>
    <div class="object" id="object_seven"></div>
    <div class="object" id="object_eight"></div>
    <div class="object" id="object_big"></div>
  </div><!-- /loading-center-absolute -->
</div><!-- /preloader-container -->


