<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout page_with_main_nav">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->

                <div class="section_offset">

                    <div class="row">
                        
						<aside class="col-md-3 col-sm-4 has_mega_menu">
                            
                            <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                            <%= render "module/categories" %>
    
                            <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->
                            
                            <!-- - - - - - - - - - - - - - Related Articles - - - - - - - - - - - - - - - - -->

                            <% if @product.articles.count > 0 %>
							
								<% if @product.articles.count < 4 %>
									
									<%= render "module/product_related_blogs_1" %>
									
								<% else %>
									
									<%= render "module/product_related_blogs_2" %>
									
								<% end %>
								
							<% end %>
    
                            <!-- - - - - - - - - - - - - - End of related articles - - - - - - - - - - - - - - - - -->
                            
                            <!-- - - - - - - - - - - - - - Bestseller products - - - - - - - - - - - - - - - - -->
                        
                            <%= render "module/category_bestseller" %>
                            
                            <!-- - - - - - - - - - - - - - End of bestseller products - - - - - - - - - - - - - - - - -->
						
						</aside>

                        <main class="col-md-9 col-sm-8">
							
							<%= render 'module/main_nav_right' %>

                            <!-- - - - - - - - - - - - - - Product images & description - - - - - - - - - - - - - - - - -->
							
							<ul class="breadcrumbs">
                    
								<li><%= link_to "Trang chủ", root_path %></li>
								
								<% if @current_area.id.present? %><li><%= link_to @current_area.name, change_current_area_path(@current_area.id) %></li><% end %>
								
								<li>
									
									<% @product.categories.each do |categories| %>
										
										<%= hidden_field_tag categories.id %>
									   
										<%= link_to categories.name, { controller: "product", action: "category", category_id: categories.id } %> /
									
									<% end %>
									
									<%= @product.name %>
								
								</li>
			
							</ul>
							
							<section class="section_offset">

								<div class="clearfix">

									<!-- - - - - - - - - - - - - - Product image column - - - - - - - - - - - - - - - - -->

									<div class="single_product">

										<!-- - - - - - - - - - - - - - Image preview container - - - - - - - - - - - - - - - - -->

										<div class="image_preview_container">
											<div class="scroll_mobile_fix_image"></div>
											<% if @product.get_main_image.present? %>
																
												<img id="img_zoom" data-zoom-image="<%= @product.get_main_image.image_url.big_image %>" src="<%= @product.get_main_image.image_url.large_image %>" alt="">
											
											<% else %>
												
												<img id="img_zoom" data-zoom-image="/frontend/images/big_image.png" src="/frontend/images/large_image.png" alt="">
											
											<% end %>

											<button class="button_grey_2 icon_btn middle_btn open_qv"><i class="icon-resize-full-6"></i></button>
											
											<!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->
											
											<% if @product.is_deal? %>
												
												<% if !@product.discount_percent.nil? or @product.discount_percent != 0 %>
													
													<div class="label_offer percentage">
							
														<div><%= @product.discount_percent.to_i %>%</div>OFF
							
													</div>
													
												<% end %>
												
											<% end %>
											<% if @product.is_sold_out? %>
							
												<div class="lbl_right_soldout">
													
													<div><%= @product.display_is_sold_out %></div>
													
												</div>
												
											<% end %>
							
											<!-- - - - - - - - - - - - - - End label - - - - - - - - - - - - - - - - -->

										</div><!--/ .image_preview_container-->

										<!-- - - - - - - - - - - - - - End of image preview container - - - - - - - - - - - - - - - - -->

										<!-- - - - - - - - - - - - - - Prodcut thumbs carousel - - - - - - - - - - - - - - - - -->
										
										<div class="product_preview">

											<div class="owl_carousel" id="thumbnails">
                                                
                                                <% @product.product_images.each_with_index do |item,pos| %>
												
                                                    <a class="<%= "main_image" if @product.get_main_image.present? and @product.get_main_image.id == item.id %>" rel="<%= pos %>" href="#" data-image="<%= item.image_url.large_image %>" data-zoom-image="<%= item.image_url.big_image %>">
    
                                                        <img src="<%= item.image_url.small_image %>" data-large-image="<%= item.image_url.large_image %>" alt="">
    
                                                    </a>
                                                
                                                <% end %>

											</div><!--/ .owl-carousel-->

										</div><!--/ .product_preview-->
										
										<!-- - - - - - - - - - - - - - End of prodcut thumbs carousel - - - - - - - - - - - - - - - - -->

									</div>

									<!-- - - - - - - - - - - - - - End of product image column - - - - - - - - - - - - - - - - -->

									<!-- - - - - - - - - - - - - - Product description column - - - - - - - - - - - - - - - - -->

									<div class="single_product_description">

										<h3 class="offset_title"><%= @product.name %></h3>

										<div class="description_section v_centered">
											
											<% if @product.count_stars.length > 0 %>

												<!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
												
												<ul class="rating">
													
													<% (1..@product.average_stars).each do |star| %>
	
														<li class="active"></li>
													
													<% end %>
	
												</ul>
													
												<!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->

											<% end %>
											
											<!-- - - - - - - - - - - - - - Reviews menu - - - - - - - - - - - - - - - - -->

											<ul class="topbar">
												
												<li class="rate">
													<% if @product.comments.count == 0 %>

														<a href="#">Chưa đánh giá sản phẩm.</a>
														
													<% else %>
														
														<a href="#"><%= @product.comments.count %> đánh giá sản phẩm.</a>
														
													<% end %>
												</li>
												
												<li>
													
													<a href="#" class="button_dark_grey add_wishlist_success" data-modal-url="<%= add_wishlist_success_path %>">Success</a>
											
													<a href="#" class="button_dark_grey add_compare_success" data-modal-url="<%= add_compare_success_path %>">Success</a>
																
													<a href="#" class="button_dark_grey no_singed" data-modal-url="<%= no_singed_path %>">No Singed</a>
													
													<% if current_user.present? %>
											
														<%= link_to '<span class="tooltip top">Thêm vào mục yêu thích</span>'.html_safe, add_item_wish_lists_path(product_id: @product, user_id: current_user.id), class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container add_to_wishlist_button" %>
													
													<% else %>
														
														<%= link_to '<span class="tooltip top">Thêm vào mục yêu thích</span>'.html_safe, { controller: "account", action: "login" }, class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container no_singed_button" %>
													
													<% end %>
													
													<%= link_to '<span class="tooltip top">Thêm vào danh sách so sánh</span>'.html_safe, add_item_line_item_compares_path(product_id: @product), class: "color_orange button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container add_to_compare_button" %>
													
													<a href="<%= url_for(status: "tab-questions") %>" data-toggle="tooltip" class="color_facebook button_dark_grey def_icon_btn middle_btn add_to_question tooltip_container"><span class="tooltip top">Câu hỏi về sản phẩm</span></a>
													
												</li>
												
											</ul>

											<!-- - - - - - - - - - - - - - End of reviews menu - - - - - - - - - - - - - - - - -->

										</div>

										<div class="description_section">

											<table class="product_info">

												<tbody>

													<tr>

														<td class="line_product_info"><b>Thương hiệu sản phẩm:</b> </td>
														<td>
															<% if !@product.manufacturer.nil? %>
																<%= link_to @product.manufacturer.name, { controller: "manufacturer", action: "products", manufacturer_id: @product.manufacturer_id } %>
															<% else %>
																Đang cập nhật
															<% end %>
														</td>

													</tr>

													<tr>

														<td class="line_product_info"><b>Mã sản phẩm:</b> </td>
														<td><%= @product.code %></td>

													</tr>

													<tr>

														<td class="line_product_info"><b>Trạng thái:</b> </td>
														<% if @product.is_sold_out? %>
							
															<td class="out_stock"><%= @product.display_is_sold_out %></td>
														<% else %>
															
															<td class="in_stock">Còn hàng</td>
															
														<% end %>

													</tr>
													
													<tr>

														<td class="line_product_info"><b>Đơn vị:</b> </td>
														<td><%= format_number(@product.quantity) + "" + @product.unit %></td>

													</tr>
													
													<tr>

														<td class="line_product_info"><b>Phương thức thanh toán:</b> </td>
														<td>
															<% PaymentMethod.get_all_payment_methods.each do |item| %>
																<%= item.title + ", " %>
															<% end %>
														</td>

													</tr>

												</tbody>

											</table>

										</div>

										<hr>

										<div class="description_section">

											<p class="text-justify"><%= @product.short_description %></p>

										</div>

										<hr>
										
										<% if @product.is_deal? %>
											
											<p class="product_price"><s><%= format_number(@product.old_price) %> đ</s> <b class="theme_color"><%= format_number(@product.price) %> đ</b></p>
											
										<% elsif %>

											<p class="product_price"><b class="theme_color"><%= format_number(@product.price) %> đ</b></p>
										
										<% end %>

										<!-- - - - - - - - - - - - - - Quantity - - - - - - - - - - - - - - - - -->

										<div class="description_section_2 v_centered">
											
											<span class="title"><b>Số lượng:</b> </span>

											<div class="qty min clearfix">

												<button class="theme_button" data-direction="minus">&#45;</button>
												<input type="text" name="" class="quantity" value="1">
												<button class="theme_button" data-direction="plus">&#43;</button>

											</div>

										</div>

										<!-- - - - - - - - - - - - - - End of quantity - - - - - - - - - - - - - - - - -->

										<!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->

										<div class="buttons_row">
											
											<a href="#" class="button_dark_grey add_cart_success" data-modal-url="<%= add_cart_success_path %>">Success</a>
											
											<%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: @product), class: "button_blue middle_btn add_to_cart add_to_cart_button" %>

											<%= link_to 'Mua ngay', add_cart_buy_now_line_items_path(product_id: @product), class: "button_buy_now middle_btn add_to_cart add_cart_by_now" %>
											
										</div>

										<!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
										
										<!-- - - - - - - - - - - - - - Share - - - - - - - - - - - - - - - - -->
										
										<div class="v_centered mrg-top mrg-top-35">
											<strong>Chia sẻ với bạn bè:</strong><br />
											<div class="addthis_widget_container">
												<!-- AddThis Button BEGIN -->
												<div class="addthis_toolbox addthis_default_style addthis_32x32_style">
												<a class="addthis_button_preferred_1"></a>
												<a class="addthis_button_preferred_2"></a>
												<a class="addthis_button_preferred_3"></a>
												<a class="addthis_button_preferred_4"></a>
												<a class="addthis_button_compact"></a>
												<a class="addthis_counter addthis_bubble_style"></a>
												</div>
												<!-- AddThis Button END -->
											</div>
											
										</div>
										
										<!-- - - - - - - - - - - - - - End of share - - - - - - - - - - - - - - - - -->

									</div>

									<!-- - - - - - - - - - - - - - End of product description column - - - - - - - - - - - - - - - - -->

								</div>

							</section><!--/ .section_offset -->
                            
                            <!-- - - - - - - - - - - - - - Tabs - - - - - - - - - - - - - - - - -->

                            <div class="section_offset" style="padding-top: 50px;">
            
                                <div class="tabs type_2">
            
                                    <!-- - - - - - - - - - - - - - Navigation of tabs - - - - - - - - - - - - - - - - -->
            
                                    <ul class="tabs_nav clearfix">
            
                                        <li><a href="#tab-description">Mô tả sản phẩm</a></li>
                                        <li class="<%= "active" if params[:status] == "tab-questions" %>"><a href="#tab-questions" data-toggle="tab">Câu hỏi về sản phẩm (<%= @product.questions.count %>)</a></li>
                                        <li class="<%= "active" if params[:status] == "tab_comment" %>"><a href="#tab-review">Đánh giá sản phẩm (<%= @product.comments.count %>)</a></li>
            
                                    </ul>
                                    
                                    <!-- - - - - - - - - - - - - - End navigation of tabs - - - - - - - - - - - - - - - - -->
            
                                    <!-- - - - - - - - - - - - - - Tabs container - - - - - - - - - - - - - - - - -->
            
                                    <div class="tab_containers_wrap">
            
                                        <!-- - - - - - - - - - - - - - Tab - - - - - - - - - - - - - - - - -->
            
                                        <div id="tab-description" class="tab_container">
            
                                            <p class="text-justify"><%= @product.description.html_safe %></p>
            
                                        </div><!--/ #tab-1-->
            
                                        <!-- - - - - - - - - - - - - - End tab - - - - - - - - - - - - - - - - -->
            
                                        <!-- - - - - - - - - - - - - - Question form - - - - - - - - - - - - - - - - -->
            
                                        <div id="tab-questions" class="tab_container">
                                            
                                            <section class="section_offset">
            
                                                <h3>Câu hỏi từ khách hàng</h3>
            
                                                <ul class="reviews">
            
                                                    <li>
            
                                                        <!-- - - - - - - - - - - - - - Review - - - - - - - - - - - - - - - - -->
                                                        
                                                        <article class="review">
															
															<% if @product.questions.count > 0 %>
															
																<% @product.questions.each do |question| %>
				
																	<!-- - - - - - - - - - - - - - Review body - - - - - - - - - - - - - - - - -->
					
																	<div class="review-body">
					
																		<div class="review-meta">
					
																			<span class="bold alightleft"><%= question.name %></span>, <%= question.created_at.strftime("%d-%m-%Y") %>
					
																		</div>
																		
																		<div class="review-meta">
					
																			<p class="alightleft"><%= question.email %></p>
					
																		</div>
					
																		<p class="justifly"><%= question.content %></p>
					
																	</div>
					
																	<!-- - - - - - - - - - - - - - End of review body - - - - - - - - - - - - - - - - -->
																	
																	<% if current_user.present? %>
										
																		<% if can? :delete, question %>
																			
																			<%= link_to '<i class="icon-cancel"></i>'.html_safe, question, method: :delete, data: { confirm: 'Are you sure?' }, class: "button_grey icon_btn custom-comment-remove-link" %>
										
																		<% end %>
																	
																	<% end %>
				
																<% end %>
															
															<% else %>
																
																<p class="box">Chưa có câu hỏi nào cho sản phẩm.</p>
																
															<% end %>
														
														</article>
            
                                                        <!-- - - - - - - - - - - - - - End of review - - - - - - - - - - - - - - - - -->
            
                                                    </li>
            
                                                </ul>
            
                                            </section><!--/ .section_offset -->
                                            
                                            <section class="section_offset">
            
                                                <% if !current_user.present? %>
											
													<!-- - - - - - - - - - - - - - Login - - - - - - - - - - - - - - - - -->
											
													<section class="section_offset checkout-quick-login-box">
											
														<h3>Bạn cần đăng nhập để bình luận cho bài viết.</h3>
											
														<div class="theme_box">
											
															<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "type_2"}) do |f| %>
																
																<ul>
																	
																	<li class="row">
																		
																		<div class="col-sm-6">
																			
																			<label for="email" class="required">Tài khoản: </label>
																			<%= f.email_field :email, autofocus: true, class: "form-control required", placeholder: "Nhập địa chỉ email..." %>
											
																		</div><!--/ [col] -->
											
																		<div class="col-sm-6">
																			
																			<label for="email" class="required">Mật khẩu</label>
																			<%= f.password_field :password, autocomplete: "off", class: "form-control required", placeholder: "Nhập mật khẩu..." %>
											
																		</div><!--/ [col] -->
											
																	</li><!--/ .row -->
											
																</ul>
																
																<br/>
															
																<footer class="on_the_sides">
																	
																	<div class="left_side">
											  
																		<%= link_to "Đăng ký", { controller: "account", action: "register" }, class: "button_grey middle_btn" %>
											  
																		<%= link_to '<i class="icon-facebook-1"></i><span class="tooltip top"></span>'.html_safe, user_omniauth_authorize_path(:facebook), class: "icon_btn middle_btn social_facebook" %></li>
																		
																		<%= link_to '<i class="icon-gplus-2"></i><span class="tooltip top"></span>'.html_safe, user_omniauth_authorize_path(:google_oauth2), class: "icon_btn middle_btn social_googleplus" %>
																	
																	</div>
											
																	<div class="right_side">
											  
																		<%= button_tag "Đăng nhập", class: "button_blue middle_btn" %>
											  
																	</div>
											  
																</footer>
																
															<% end %>
											
														</div>
											
													</section><!--/ .section_offset -->
											
													<!-- - - - - - - - - - - - - - End of login - - - - - - - - - - - - - - - - -->
													
												<% end %>
												
												<% if current_user.present? %>
            
													<div class="row">
				
														<div class="col-lg-12 col-md-12">
												
															<%= form_for @question, html: {class: "type_2"} do |f| %>
															
																<% if current_user.present? %>
																	
																	<%= f.hidden_field :user_id, value: current_user.id %>
																
																<% end %>
															
																<%= f.hidden_field :product_id, value: @product.id %>
						
																<ul>
																
																	<li class="row">
						
																		<div class="col-sm-12">
																		
																			<label for="cf_name" class="required">Họ & Tên</label>
																			
																			<% if current_user.present? %>
																				
																				<%= f.text_field :name, value: current_user.first_name + ' ' + current_user.last_name, readonly: true, required: true %>
																			
																			<% else %>
																				
																				<%= f.text_field :name, class: "required" %>
																				
																			<% end %>
						
																		</div><!--/ [col]-->
						
																	</li><!--/ .row -->
																	
																	<li class="row">
						
																		<div class="col-sm-12">
						
																			<label for="cf_email" class="required">Địa chỉ email</label>
																			
																			<% if current_user.present? %>
																				
																				<%= f.email_field :email, value: current_user.email, readonly: true, required: true %>
																			
																			<% else %>
																				
																				<%= f.email_field :email, class: "required email" %>
																				
																			<% end %>
						
																		</div><!--/ [col]-->
						
																	</li><!--/ .row -->
						
																	<li class="row">
						
																		<div class="col-xs-12">
						
																			<label for="cf_message" class="required">Nội dung câu hỏi</label>
																			
																			<%= f.text_area :content, rows: "6", class: "required" %>
						
																		</div><!--/ [col]-->
						
																	</li><!--/ .row -->
						
																</ul>
																
																<%= f.submit "Gửi câu hỏi", class: "button_blue middle_btn alignright btn_product_question" %>
						
															<% end %><!--/ .questionform -->
						
															<!-- - - - - - - - - - - - - - End of question form - - - - - - - - - - - - - - - - -->
															
														</div>
														
													</div>
												
												<% end %>
												
											</section>
                                        
                                        </div><!--/ #tab-2-->
            
                                        <!-- - - - - - - - - - - - - - End tab - - - - - - - - - - - - - - - - -->
            
                                        <!-- - - - - - - - - - - - - - Tab - - - - - - - - - - - - - - - - -->
            
                                        <div id="tab-review" class="tab_container">
            
                                            <section class="section_offset">
            
