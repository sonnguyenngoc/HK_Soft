<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->
  
    <div class="wide_layout">
  
        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->
  
        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->
  
        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->
  
        <div class="secondary_page_wrapper">
  
            <div class="container">
  
                <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->
  
                <ul class="breadcrumbs">
  
                      <li><%= link_to "Trang chủ", root_path %></li>
                      
                      <li><%= @title_head %></li>
  
                </ul>
  
                <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->
  
                <h1><%= @title_head %></h1>
                
                <% if @compare.line_item_compares.count > 0 %>
					
					<a href="#" class="button_dark_grey add_cart_success" data-modal-url="<%= add_cart_success_path %>">Success</a>
  
                    <a href="#" class="button_dark_grey add_wishlist_success" data-modal-url="<%= add_wishlist_success_path %>">Success</a>
					
					<a href="#" class="button_dark_grey no_singed" data-modal-url="<%= no_singed_path %>">No Singed</a>
					
					<div class="table_wrap">
                        
                        <table class="table_type_1 compare">
      
                            <tbody>
      
                                <tr>
                                    
                                    <th class="row_title_col">Hình ảnh</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
                                            <% if item.product.get_main_image.present? %>
																			
                                                <%= link_to image_tag(item.product.get_main_image.image_url.small_image), { controller: "product", action: "product", product_id: item.product_id } %>
                                            
                                            <% else %>
                                                
                                                <img src="/frontend/images/small_image.png" alt="">
                                            
                                            <% end %>
                                       
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Tên sản phẩm</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
      
                                            <%= link_to item.product.name, { controller: "product", action: "product", product_id: item.product_id } %>
          
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Đánh giá</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
      
                                            <div class="v_baseline">
          
                                                <ul class="rating">
                                                    <li class="active"></li>
                                                    <li class="active"></li>
                                                    <li class="active"></li>
                                                    <li class="active"></li>
                                                    <li></li>
                                                </ul>
          
                                                <a href="#" class="small_link">3 Đánh giá</a>
          
                                            </div>
          
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Giá</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td class="total"><%= format_number(item.product.price) %> đ</td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Mô tả</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
                                        
                                            <p class="text-justifly"><%= item.product.short_description %></p>
                                            
                                        </td>
                                    
                                    <% end %>
      
                                    
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Nhãn hàng</th>
      
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
                                        
                                           <%= link_to item.product.manufacturer.name, { controller: "manufacturer", action: "list" } %>
                                            
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Tình trạng</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
                                        
                                            <span class="in_stock">Còn trong kho</span> 20 sản phẩm.
          
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Mã sản phẩm</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td><%= item.product.code %></td>
                                    
                                    <% end %>
      
                                </tr>
      
                                <tr>
                                    
                                    <th class="row_title_col">Thao tác</th>
                                    
                                    <% @compare.line_item_compares.get_all_items.each do |item| %>
      
                                        <td>
          
                                            <div class="buttons_row">
                                                
                                                <%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: item.product_id), class: "button_blue middle_btn add_to_cart add_to_cart_button" %>
          
                                                <% if current_user.present? %>
                                                                
													<%= link_to '<span class="tooltip top">Thêm vào sản phẩm yêu thích</span>'.html_safe, add_item_wish_lists_path(product_id: item.product_id, user_id: current_user.id), class: "button_dark_grey middle_btn def_icon_btn add_to_wishlist tooltip_container add_to_wishlist_button" %>
												
												<% else %>
													
													<%= link_to '<span class="tooltip top">Thêm vào sản phẩm yêu thích</span>'.html_safe, { controller: "account", action: "login" }, class: "button_dark_grey middle_btn def_icon_btn add_to_wishlist tooltip_container no_singed_button" %>
													
												<% end %>
                                                
                                                <%= link_to '<span class="tooltip top">Loại khỏi danh sách so sánh</span><i class="icon-cancel-2"></i>'.html_safe , {controller: "product", action: "comparison", do: 'remove_item', line_item_compare_id: item.id }, {class: "button_dark_grey middle_btn icon_btn tooltip_container"} %>
          
                                            </div>
          
                                        </td>
                                    
                                    <% end %>
      
                                </tr>
      
                            </tbody>
      
                        </table>
      
                    </div>
                    
                <% else %>
                    
                    <p class="box">Danh sách so sánh trống!</p>
                    
                <% end %>
  
            </div><!--/ .container-->
  
        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->
  
        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->
  
        <%= render 'module/footer' %>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->
  
    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->
  
    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->
  
    <%= render 'module/social_feeds' %>
  
    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>
  
    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
	
	<script>
		$(document).on("click", ".add_to_cart_button", function(e){
			e.preventDefault();
			
			var url = $(this).attr("href");
			$.ajax({
				method: "GET",
				url: url,
				data: {quantity: $("input.quantity").val()}
			})
			.done(function( msg ) {
				get_cart();
				$(".add_cart_success").trigger("click")
			});
		});
		$(document).on("click", ".add_to_wishlist_button", function(e){
			e.preventDefault();
			
			var url = $(this).attr("href");
			$.ajax({
				method: "GET",
				url: url
			})
			.done(function( msg ) {
				get_cart();
				$(".add_wishlist_success").trigger("click");
			});
		});
		$(document).on("click", ".no_singed_button", function(e){
			e.preventDefault();
			$(".no_singed").trigger("click")
		});
	</script>

</body>