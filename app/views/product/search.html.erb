<body>

    <!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

    <div class="wide_layout page_with_main_nav">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <%= render 'module/header' %>
        
        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

        <div class="secondary_page_wrapper">

            <div class="container">

                

                <div class="row">

                    <aside class="col-md-3 col-sm-4 has_mega_menu">

                        <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                        <%= render 'module/categories' %>

                        <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                    </aside>

                    <main class="col-md-9 col-sm-8">
                        
                        <%= render 'module/main_nav_right' %>
                        
                        <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

                        <ul class="breadcrumbs">
        
                            <li><%= link_to "Trang chủ", root_path %></li>
                            
                            <li><%= @title_head %></li>
        
                        </ul>
                        
                        <h1>Kết quả tìm kiếm - <%= params[:keyword] %></h1>                       

                        <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->

                        <div class="section_offset">

                            <header class="top_box on_the_sides">

                                <div class="left_side clearfix v_centered">
                                  
                                    <!-- - - - - - - - - - - - - - Number of products shown - - - - - - - - - - - - - - - - -->

                                    <div class="v_centered">

                                        <span>Hiển thị:</span>

                                        <div class="">

                                            <select name="">

                                                <option value="15">15</option>
                                                <option value="12">12</option>
                                                <option value="9">9</option>
                                                <option value="6">6</option>
                                                <option value="3">3</option>

                                            </select>

                                        </div>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of number of products shown - - - - - - - - - - - - - - - - -->

                                    <!-- - - - - - - - - - - - - - Sort by - - - - - - - - - - - - - - - - -->

                                    <div class="v_centered">

                                        <span>Sắp xếp:</span>

                                        <div class="sort_select">
                                            
                                            <select name="">
                                                    
                                                <option value="Default">Default</option>
                                                <option value="Price">Price</option>
                                                <option value="Name">Name</option>
                                                <option value="Date">Date</option>

                                            </select>

                                        </div>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of sort by - - - - - - - - - - - - - - - - -->

                                </div>

                                <div class="right_side">

                                    <!-- - - - - - - - - - - - - - Product layout type - - - - - - - - - - - - - - - - -->

                                    <div class="layout_type buttons_row" data-table-container="#products_container">

                                        <a href="#" data-table-layout="grid_view" class="button_grey middle_btn icon_btn active tooltip_container"><i class="icon-th"></i><span class="tooltip top">Grid View</span></a>

                                        <a href="#" data-table-layout="list_view list_view_products" class="button_grey middle_btn icon_btn tooltip_container"><i class="icon-th-list"></i><span class="tooltip top">List View</span></a>

                                    </div>

                                    <!-- - - - - - - - - - - - - - End of product layout type - - - - - - - - - - - - - - - - -->

                                </div>

                            </header>

                            <div class="table_layout" id="products_container">

                                <div class="table_row">
                                    
                                    <% @products.each_with_index do |product, index| %>
                                    
                                        <a href="#" class="button_dark_grey add_cart_success" data-modal-url="<%= add_cart_success_path %>">Success</a>

                                        <a href="#" class="button_dark_grey no_singed" data-modal-url="<%= no_singed_path %>">No Singed</a>
                                        
                                        <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
    
                                        <div class="table_cell">
    
                                            <div class="product_item">
    
                                                <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
    
                                                <div class="image_wrap">
    
                                                    <% if product.get_main_image.present? %>
																
                                                        <img src="<%= product.get_main_image.image_url.medium_image %>" alt="">
                                                    
                                                    <% else %>
                                                        
                                                        <img src="/frontend/images/medium_image.png" alt="">
                                                    
                                                    <% end %>
    
                                                    <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
    
                                                    <div class="actions_wrap">
    
                                                        <div class="centered_buttons">
    
                                                            <a href="#" class="button_dark_grey middle_btn quick_view" data-modal-url="<%= quick_view_path(product_id: product.id) %>">Xem nhanh</a>
                                                            
                                                            <%= link_to 'Thêm vào giỏ hàng', add_to_cart_line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart add_to_cart_category add_to_cart_button" %>
    
                                                        </div><!--/ .centered_buttons -->
    
                                                        <% if current_user.present? %>
											
                                                            <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, add_item_wish_lists_path(product_id: product, user_id: current_user.id), class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container" %>
                                                        
                                                        <% else %>
                                                            
                                                            <%= link_to '<span class="tooltip right">Thêm vào mục yêu thích</span>'.html_safe, { controller: "account", action: "login" }, class: "color_red button_dark_grey def_icon_btn middle_btn add_to_wishlist tooltip_container no_singed_button" %>
                                                        
                                                        <% end %>
                                                        
                                                        <%= link_to '<span class="tooltip left">Thêm vào danh sách so sánh</span>'.html_safe, add_item_line_item_compares_path(product_id: product), class: "color_orange button_dark_grey def_icon_btn middle_btn add_to_compare tooltip_container" %>
    
                                                    </div><!--/ .actions_wrap-->
                                                    
                                                    <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
    
                                                </div><!--/. image_wrap-->
    
                                                <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
    
                                                <div class="description">
    
                                                    <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, title: product.name %>
    
                                                    <div class="clearfix product_info">
    
                                                        <p class="product_price alignleft"><b><%= format_number(product.price) %> đ</b></p>
    
                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
    
                                                        <ul class="rating alignright">
    
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li></li>
    
                                                        </ul>
                                                        
                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
    
                                                    </div>
    
                                                </div>
    
                                                <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Full description (only for list view) - - - - - - - - - - - - - - - - -->
    
                                                <div class="full_description">
    
                                                    <%= link_to product.name, { controller: "product", action: "product", product_id: product.id }, class: "product_title" %>
    
                                                    <%= link_to product.manufacturer.name, { controller: "manufacturer", action: "list" }, class: "product_category" %>
    
                                                    <div class="v_centered product_reviews">
    
                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
                                                    
                                                        <ul class="rating">
    
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li></li>
    
                                                        </ul>
                                                            
                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
    
                                                    </div>
    
                                                    <p class="text-justifly"><%= product.short_description %></p>
    
                                                </div>
    
                                                <!-- - - - - - - - - - - - - - End of full description (only for list view) - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Product price & actions (only for list view) - - - - - - - - - - - - - - - - -->
    
                                                <div class="actions">
    
                                                    <p class="product_price bold"><%= format_number(product.price) %> đ</p>
    
                                                    <ul class="buttons_col">
                                                        
                                                        <li><%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart" %></li>
                                                        
                                                        <% if current_user.present? %>
                                                            
                                                            <li><%= link_to '<i class="icon-heart-5"></i>Thêm vào mục yêu thích'.html_safe, add_item_wish_lists_path(product_id: product, user_id: current_user.id), class: "icon_link" %></li>
                                                        
                                                        <% else %>
                                                            
                                                            <li><%= link_to '<i class="icon-heart-5"></i>Thêm vào mục yêu thích'.html_safe, { controller: "account", action: "login" }, class: "icon_link" %></li>
                                                            
                                                        <% end %>
                                                        
                                                        <li><%= link_to '<i class="icon-resize-small"></i>Thêm vào mục so sánh'.html_safe, add_item_line_item_compares_path(product_id: product), class: "icon_link" %></li>
    
                                                    </ul>
    
                                                </div>
    
                                                <!-- - - - - - - - - - - - - - Product price & actions (only for list view) - - - - - - - - - - - - - - - - -->
    
                                            </div><!--/ .product_item-->
    
                                        </div>
    
                                        <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
                                
                                <%= "</div><!--/ .table_row --><div class=\"table_row\"><!--/ .table_row -->".html_safe if index%3 == 2 %>
                                        
                                    <% end %>

                            </div><!--/ .table_layout -->

                            <footer class="bottom_box on_the_sides">

                                <div class="left_side">

                                    <p><%= page_entries_info @products %> sản phẩm.</p>

                                </div>

                                <div class="right_side">

                                    <%= will_paginate @products, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>

                                </div>

                            </footer>

                        </div>

                        <!-- - - - - - - - - - - - - - End of products - - - - - - - - - - - - - - - - -->

                    </main>

                </div><!--/ .row -->

            </div><!--/ .container-->

        </div><!--/ .page_wrapper-->
        
        <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <%= render 'module/footer'%>
        
        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div><!--/ [layout]-->
    
    <!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

    <%= render 'module/social_feeds' %>

    <!-- - - - - - - - - - - - - - End Social feeds - - - - - - - - - - - - - - - - -->
    
    <!-- Include Libs & Plugins
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/jquery-2.1.1.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery-ui.min.js' %>
    <%= javascript_include_tag '/frontend/js/queryloader2.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.appear.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.plugin.min.js' %>
    <%= javascript_include_tag '/frontend/js/jquery.countdown.min.js' %>
    <%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
    <%= javascript_include_tag '/frontend/twitter/jquery.tweet.min.js' %>
    <%= javascript_include_tag '/frontend/js/arcticmodal/jquery.arcticmodal.js' %>
    <%= javascript_include_tag '/frontend/js/colorpicker/colorpicker.js' %>
    <%= javascript_include_tag '/frontend/js/retina.min.js' %>
    <%= javascript_include_tag 'http://s7.addthis.com/js/300/addthis_widget.js' %>
    <%= javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js' %>

    <!-- Theme files
    ============================================ -->
    <%= javascript_include_tag '/frontend/js/theme.plugins.js' %>
    <%= javascript_include_tag '/frontend/js/theme.core.js' %>
    
    <script>
		$(document).on("click", ".add_to_cart_button", function(e){
			e.preventDefault();
			
			var url = $(this).attr("href");
			$.ajax({
				method: "GET",
				url: url,
				data: {quantity: $("input.quantity").val()}
			})
			.done(function( msg ) {
				get_cart();
				$(".add_success").trigger("click")
			});
		});
        $(document).on("click", ".no_singed_button", function(e){
			e.preventDefault();
			$(".no_singed").trigger("click")
		});
	</script>
    
</body>