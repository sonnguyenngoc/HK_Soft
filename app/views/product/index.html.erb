<div class="pageWrap">

    <%= render "/home/tp_bar" %>
    <!-- /tp-bar -->

    <%= render "/home/main_bar" %>
    <!-- /main-bar -->

    <section class="section-banner">
        <div class="container">
            <ul class="breadcrumb">
                <li><%= link_to "Trang Chủ", root_path %></li>
                <li>Bông mút đa năng Soft Cream Puff</li>
            </ul>
        </div>
    </section>
    <!-- /section-banner -->

    <section class="section-compact">
        <div class="container">

            <div class="single-container">
                <div class="product-single">
                    <div class="featured-box">
                        <div class="row">
                            <div class="col-sm-5">
                                <figure class="image">
                                    <img src="/frontend/images/resource/img-20.jpg" alt="image">
                                </figure>
                            </div>
                            <div class="col-sm-7">
                                <div class="text">
                                    <h4><%= @product.name %></h4><br/>
                                    <div class="collapse in">
                                        <p>Xuất xứ: Hàn Quốc</p>
                                        <p>Thương hiệu:
                                            <% if !@product.manufacturer.nil? %>
                                                <%= @product.manufacturer.name %>
                                            <% else %>
                                                Đang cập nhật
                                            <% end %>
                                        </p>
                                        <p>Giá: <%= @product.price %> VNĐ</p>
                                        <p class="text-justify">Mô tả ngắn: <%= @product.short_description %></p>
                                        <input type="text" class="form-control" placeholder="Nhập số lượng cần mua" value="1"><br/>
                                        <a href="#" class="btn btn-default">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /featured-box -->
                    
                    <div class="other-products">
                        <header class="heading">
                            <span class="caro-prev other-prev"><i class="flaticon-arrowhead7"></i></span>
                            <span class="caro-next other-next"><i class="flaticon-arrow487"></i></span>
                            <h4>Hình Ảnh Liên Quan</h4>
                        </header>
                        <div class="carousel-multiple owl-carousel">
                            <% @product.product_images.each do |item| %>
                                <div class="item">
                                    <div class="thumbnail thumbnail-product">
                                        <figure class="image-zoom">
                                            <img alt="image" src="/frontend/images/resource/img-18.jpg">
                                        </figure>
                                    </div>
                                    <!-- /thumbail -->
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <!-- /other-products -->
                </div>
                <!-- /product-single -->

                <div class="product-description">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="prod-desc-box">
                                <h4>Mô Tả Sản Phẩm</h4>
                                <p class="text-justify">
                                    <% if !@product.description.empty? %>
                                        <%= @product.description %>
                                    <% else %>
                                        Hiện tại chưa có mô tả cho sản phẩm này
                                    <% end %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /product-description -->

                <div class="pic-vid-box">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="video-box">
                                <h4>Video Cho Sản Phẩm</h4>
                                <iframe width="560" height="350" src="https://www.youtube.com/embed/wiKRVP8xGvA" frameborder="0" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /pic-vid-box -->
                
                <div class="other-products">
                    <header class="heading">
                        <span class="caro-prev other-prev"><i class="flaticon-arrowhead7"></i></span>
                        <span class="caro-next other-next"><i class="flaticon-arrow487"></i></span>
                        <h4>Sản Phẩm Liên Quan</h4>
                    </header>
                    <div class="carousel-multiple owl-carousel">
                        <% @product.get_related_products.each do |product| %>
                        <div class="item">
                            <div class="thumbnail thumbnail-product">
                                <figure class="image-zoom">
                                    <img alt="image" src="/frontend/images/resource/img-18.jpg">
                                </figure>
                                <div class="caption text-center">
                                    <h5>
                                        <%= link_to product.name, { controller: "product", action: "index", product_id: product.id }, title: product.name %>
                                    </h5>
                                    <!-- /rating-star -->
                                    <p class="prod-price text-primary">Giá: <%= format_number(product.price) %> VNĐ</p>
                                </div>
                            </div>
                            <!-- /thumbail -->
                        </div>
                        <% end %>
                    </div>
                </div>
                <!-- /other-products -->

            </div>
            <!-- /single-container -->
        </div>
    </section>
    
    <%= render "/home/footer" %>

</div>
<!-- /pageWrap -->


<div class="preloader-container">
    <div id="loading-center-absolute">
        <div class="object" id="object_one"></div>
        <div class="object" id="object_two"></div>
        <div class="object" id="object_three"></div>
        <div class="object" id="object_four"></div>
        <div class="object" id="object_five"></div>
        <div class="object" id="object_six"></div>
        <div class="object" id="object_seven"></div>
        <div class="object" id="object_eight"></div>
        <div class="object" id="object_big"></div>
    </div>
    <!-- /loading-center-absolute -->
</div>
<!-- /preloader-container -->


